/* 发布动画 */

.publishAni {
    position: absolute;
    top: 50%;
    bottom: 0;
    left: 0;
    right: 0;
    margin: -500rpx auto 0;
    background-image: url('https://jinling-xcx-dev.obs.cn-north-1.myhuaweicloud.com/images/fabu.png');
    background-size: cover;
    width: 666rpx;
    height: 950rpx;
    animation: ani 2s steps(23, end);
}