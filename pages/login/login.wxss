/* pages/login/login.wxss */
.container {
  text-align: center; }
  .container .logo {
    width: 74px;
    height: 74px;
    margin-bottom: 30rpx; }
  .container .logo-title {
    display: block;
    font-size: 44rpx;
    color: #3a3a3a;
    letter-spacing: 1rpx; }
  .container .authorize-phone {
    margin: 130rpx 40rpx 0;
    border-radius: 4rpx;
    background: #df2020;
    font-size: 36rpx;
    font-weight: bold;
    color: white;
    padding: 10rpx; }
  .container .remind {
    height: 120rpx;
    line-height: 120rpx;
    color: #6c6c6c;
    border-bottom: 1px solid #f7f7f7;
  }
  .container .checkbox {
    margin-top: 10rpx;
    font-size: 38rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
  }
  .container .agreement {
    color:#e32323 
  }
  .container .mobile {
    display: block;
    margin-top: 30rpx;
    padding: 0 30rpx; }
    .container .mobile .section1, .container .mobile .section2 {
      height: 160rpx;
      border-bottom: 1rpx solid rgba(80, 80, 80, 0.5);
      display: flex;
      justify-content: space-between;
      align-items: center; }
    .container .mobile input {
      flex: 1;
      margin: 0 30rpx;
      text-align: left;
      font-size: 40rpx;
      height: 60rpx;
      line-height: 60rpx; }
    .container .mobile .section2 .code {
      width: 250rpx;
      height: 90rpx;
      background: #df2020;
      border-radius: 4rpx;
      font-size: 40rpx;
      font-family: PingFangSC-Regular;
      font-weight: 400;
      color: white;
      line-height: 90rpx; }
    .container .mobile .submit {
      margin-top: 40rpx;
      height: 110rpx;
      background: #df2020;
      border-radius: 4rpx;
      font-size: 44rpx;
      font-family: PingFangSC-Regular;
      font-weight: 400;
      color: white;
      line-height: 110rpx; }
  .container .buttons {
    width: 100%;
    font-size: 30rpx;
    color: #6c6c6c;
    height: 172rpx;
    border-bottom: 1px solid #f7f7f7;

    }
    .container .buttons text {
      position: relative;
      display: inline-block;
      width: 50%;
      height: 100%;
      text-align: center;
      font-size: 22px;
    }
  .container .buttons .redRow {
    position: absolute;
    display: inline-block;
    bottom: 0;
    width: 90rpx;
    left: 50%;
    margin-left: -45rpx;
    border-bottom: 2px solid #df2020;
  }
