/* pages/giftMessage/giftMessage.wxss */
page {
  background:rgba(248,248,248,1);
  height: 100%
}
.contran {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.contran image {
  width: 100%;
  height:422rpx;
  display: block;
}
.contran .gift-title {
  background:rgba(255,255,255,1);
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.contran .gift-title text:nth-child(1) {
  font-size:44rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(58,58,58,1);
  margin-bottom: 10rpx;
}
.contran .gift-title .gitpoints {
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(254,155,2,1);
}
.contran .gift-title .need_points {
  display: inline;
  margin-right: 10rpx;
  font-size:60rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(254,155,2,1);
}
.contran .content {
  padding: 30rpx 30rpx 40rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.contran .content .content-title {
  font-size:40rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(58,58,58,1);
  margin-bottom: 25rpx;
}
.contran .content .rich-text {
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:60rpx;
}
.contran .btn-box {
  width: 100%;
  padding: 30rpx;
  background: #fff;
}
.contran .btn-box button {
  width:690rpx;
  height:108rpx;
  line-height: 108rpx;
  background:rgba(226,30,30,1);
  border-radius:6rpx;
  font-size:38rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}