page{
  background: #eee;
}
canvas{
  margin: 72rpx auto;
}
.title{
  line-height: 40rpx;
  font-size: 28rpx;
  color: #7E7E7E;
  text-align: center;
  margin-bottom: 10rpx;
}
.course{
  line-height: 56rpx;
  font-size: 40rpx;
  color: #7E7E7E;
  text-align: center;
}
.operate{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 282rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.download,.weixin{
  width: 120rpx;
  height: 120rpx; 
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.download{
  background: #44C4FF;
  box-shadow:0rpx 10rpx 10rpx #D5F9FE;
}
.weixin{
  background: #00BD02;
  box-shadow:0rpx 10rpx 10rpx #D0F3CE;
}
.download .icon{
  width: 74rpx;
  height: 74rpx; 
}
.weixin .icon{
  width: 74rpx;
  height: 74rpx; 
}
.operate text{
  font-size: 32rpx;
  text-align: center;
  margin-top: 40rpx;
  line-height: 1;
}