@charset "UTF-8";
.container {
  position: relative;
}
.tabnav {
  width: 100%;
  position: absolute;
  top: 27px;
  z-index: 200;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;}
  .tabnav .tabnav-item {
    font-size:22px;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(250,250,250,1);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .tabnav .tabnav-item:nth-child(1) {
    margin-right: 20px;
  }
  .tabnav .tabnav-item .bottom {
    width:20px;
    height:3px;
    background:rgba(255,255,255,1);
    border-radius:3px;
    margin-top: 6px;
  }

.myVideo {
  height: calc(100vh - 128rpx);
  width: 100%; }

/* 背景幕 */
.dropback {
  position: fixed;
  height: calc(100vh - 128rpx);
  width: 100%;
  background-color: rgba(0, 0, 0, 0.15);
  visibility: visible; }

.dropback .frontdrop {
  z-index: 10; }

/* 视频播放幕 和 授权幕 */
.tapbg,
.userInfo-mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh; }

.userInfo-mask {
  display: flex;
  align-items: center;
  justify-content: center; }

.userInfo-box {
  width: 500rpx;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx; }

.userInfo-box .text {
  font-family: PingFangSC-Regular;
  font-size: 38rpx;
  color: #3a3a3a;
  text-align: center;
  line-height: 65rpx; }

.userInfo-box button {
  background: #df2020;
  border-radius: 4px;
  width: 100%;
  height: 88rpx;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #fff;
  margin-top: 30rpx; }

.vedioAll {
  width: 100%;
  position: relative;
  top: calc(100% - 510rpx);
}
.vedioAll .vedioAllTop {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
}
/* 底部视频描述 */
.info {
  width: 750rpx;
  box-sizing: border-box;
  height: 313rpx; 
  position: relative;
  top: 30rpx;
  }

.info .icon {
  width: 100%;
  height: 100%;
  z-index: -1; }

.synopsis {
  position: absolute;
  top: 0;
  left: 30rpx;
  height: 140rpx;
  /* width: calc(100% - 60rpx); */
  width: 568rpx;
  bottom: 146rpx;
  font-size: 34rpx;
  color: #ffffff;
  line-height: 48rpx;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  white-space: normal;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; }

/* 加群 */
.cimg {
  left: 26rpx;
  /* bottom: calc(50% - 345rpx); */
  bottom: 328rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.5); }

.join {
  position: absolute;
  left: 650rpx;
  top: calc(50% - 235rpx);
  width: 44rpx;
