  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.vedioTitle  .viewMore {
  width: 164rpx;
  height:50rpx;
  background:rgba(250,249,250,0.8);
  border-radius:25rpx;
