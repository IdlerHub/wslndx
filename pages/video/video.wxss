#myVideo {
    height: 100vh;
    width: 100%;
}


/* 背景幕 */

.dropback {
    position: fixed;
    height: 100vh;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.15);
    visibility: visible;
}

.dropback .frontdrop {
    z-index: 10;
}


/* 视频播放幕 和 授权幕 */

.tapbg,
.userInfo-mask {
    position: absolute;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
}

.userInfo-mask {
    display: flex;
    align-items: center;
    justify-content: center;
}

.userInfo-box {
    width: 500rpx;
    padding: 80rpx 40rpx;
    display: flex;
    flex-direction: column;
    background: #fff;
    justify-content: center;
    align-items: center;
    border-radius: 20rpx;
}

.userInfo-box .text {
    font-family: PingFangSC-Regular;
    font-size: 38rpx;
    color: #3A3A3A;
    text-align: center;
    line-height: 65rpx;
}

.userInfo-box button {
    background: #DF2020;
    border-radius: 4px;
    width: 100%;
    height: 88rpx;
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #fff;
    margin-top: 30rpx;
}


/* 底部视频描述 */

.info {
    position: absolute;
    width: 750rpx;
    padding: 0 30rpx;
    bottom: 0;
    box-sizing: border-box;
    height: 313rpx;
}

.info .icon {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
}

.synopsis {
    height: 130rpx;
    position: absolute;
    width: calc(100% - 60rpx);
    bottom: 70rpx;
    font-size: 36rpx;
    color: #FFFFFF;
    line-height: 42rpx;
    overflow: hidden;
    word-break: break-all;
    text-overflow: ellipsis;
    white-space: normal;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}


/* 加群 */

.cimg {
    position: absolute;
    left: 615rpx;
    top: calc(50% - 320rpx);
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
    border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.join {
    position: absolute;
    left: 650rpx;
    top: calc( 50% - 235rpx);
    width: 44rpx;
    height: 44rpx;
    border-radius: 50%;
    background: #ED3030;
    line-height: 40rpx;
    text-align: center;
    color: #fff;
    font-size: 45rpx;
}


/* 点赞 */

.praise {
    position: absolute;
    width: 120rpx;
    left: 610rpx;
    top: calc(50% - 120rpx);
    text-align: center;
    overflow: visible;
}

.praise .heart {
    margin: 0 auto;
    width: 80rpx;
    height: 80rpx;
}

.praising {
    position: fixed;
    top: 50%;
    z-index: 5;
    margin-top: -170rpx;
    right: -8rpx;
}


/* 点赞动画 */

.ani {
    width: 180rpx;
    height: 180rpx;
    background-size: cover;
    animation: ani steps(20) 0.8s both;
}

.praise .text {
    font-family: '黑体';
    font-size: 36rpx;
    color: #FFFFFF;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.50);
    line-height: 43rpx;
}


/* 分享 */

.share {
    position: fixed;
    left: 610rpx;
    top: 50%;
    width: 120rpx;
    margin-top: 60rpx;
    text-align: center;
    line-height: normal;
    z-index: 5;
}

.share .icon {
    margin: 0 auto;
    width: 72rpx;
    height: 72rpx;
}

.share .text {
    font-family: '黑体';
    font-size: 36rpx;
    color: #FFFFFF;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.50);
    line-height: 43rpx;
}


/* 完整视频 */

.complete {
    position: fixed;
    width: 120rpx;
    left: 610rpx;
    top: 50%;
    z-index: 3;
    margin-top: 220rpx;
    text-align: center;
}

.complete .icon {
    margin: 0 auto;
    width: 79rpx;
    height: 79rpx;
}

.complete .text {
    font-family: '黑体';
    font-size: 30rpx;
    color: #FFFFFF;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.19);
    line-height: 42rpx;
}


/* 视频暂停 */

.pause {
    position: fixed;
    z-index: 3;
    width: 146rpx;
    height: 146rpx;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
}


/* 返回首页 */

.back {
    position: absolute;
    left: 20rpx;
    top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    color: #fff;
    border: 2rpx solid #bbb;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 50rpx;
    width: 170rpx;
    height: 68rpx;
}

.back .icon {
    width: 40rpx;
    height: 40rpx;
}