#myVideo {
    height: 100vh;
    width: 100%;
}

.bg {
    position: fixed;
    z-index: 2;
    height: 100vh;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.15);
}

.tapbg,
.getPhone-mask {
    position: absolute;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
}

.getPhone-mask {
    display: flex;
    align-items: center;
    justify-content: center;
}

.phone-box {
    width: 500rpx;
    padding: 80rpx 40rpx;
    display: flex;
    flex-direction: column;
    background: #fff;
    justify-content: center;
    align-items: center;
    border-radius: 20rpx;
}

.phone-box .text {
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #3A3A3A;
    text-align: center;
    line-height: 81rpx;
}

.phone-box button {
    background: #DF2020;
    border-radius: 4px;
    width: 100%;
    height: 88rpx;
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #fff;
    margin-top: 30rpx;
}

.info {
    position: fixed;
    width: 750rpx;
    z-index: 2;
    padding: 172rpx 30rpx 80rpx;
    bottom: 0;
    box-sizing: border-box;
    height: 313rpx;
    visibility: initial;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 1));
}

.mask {
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    height: 313rpx;
    z-index: 0;
}

.name {
    font-size: 40rpx;
    color: #FFFFFF;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: bold;
}

.synopsis {
    margin-top: 20rpx;
    font-size: 36rpx;
    color: #FFFFFF;
    line-height: 42rpx;
    overflow: hidden;
    word-break: break-all;
    text-overflow: ellipsis;
    white-space: normal;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
}

.cimg {
    position: fixed;
    left: 615rpx;
    top: 50%;
    z-index: 3;
    margin-top: -320rpx;
    width: 110rpx;
    height: 110rpx;
    padding-bottom: 30rpx;
}

.cimg .img {
    border-radius: 50%;
    z-index: -1;
}

.join {
    position: fixed;
    left: 650rpx;
    top: 50%;
    z-index: 4;
    margin-top: -235rpx;
    width: 44rpx;
    height: 44rpx;
    border-radius: 50%;
    background: #ED3030;
    line-height: 40rpx;
    text-align: center;
    color: #fff;
    font-size: 45rpx;
}

.praise {
    position: fixed;
    width: 120rpx;
    left: 610rpx;
    top: 50%;
    z-index: 3;
    margin-top: -120rpx;
    text-align: center;
    overflow: visible;
}

.praise .icon,
.praise .icon image {
    position: relative;
    display: inline-block;
    width: 80rpx;
    height: 80rpx;
    overflow: visible;
}

.praising {
    position: fixed;
    top: 50%;
    z-index: 1;
    margin-top: -170rpx;
    right: -8rpx;
}

.ani {
    width: 180rpx;
    height: 180rpx;
    background-size: cover;
    animation: ani steps(20) 0.8s both;
}

.praise .text {
    font-family: '黑体';
    font-size: 36rpx;
    color: #FFFFFF;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.50);
    line-height: 43rpx;
}

.share {
    position: fixed;
    width: 120rpx;
    left: 610rpx;
    top: 50%;
    z-index: 3;
    margin-top: 60rpx;
    text-align: center;
    line-height: normal;
    overflow: visible;
}

.share .icon {
    display: inline-block;
    width: 72rpx;
    height: 72rpx;
}

.share .text {
    position: relative;
    top: -12rpx;
    font-family: '黑体';
    font-size: 36rpx;
    color: #FFFFFF;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.50);
    line-height: 43rpx;
}

.complete {
    position: fixed;
    width: 120rpx;
    left: 610rpx;
    top: 50%;
    z-index: 3;
    margin-top: 220rpx;
    text-align: center;
}

.complete .icon {
    display: inline-block;
    width: 79rpx;
    height: 79rpx;
}

.complete .text {
    font-family: '黑体';
    font-size: 30rpx;
    color: #FFFFFF;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.19);
    line-height: 42rpx;
}

.pause {
    position: fixed;
    z-index: 3;
    width: 146rpx;
    height: 146rpx;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
}

.back {
    position: fixed;
    z-index: 3;
    left: 20rpx;
    top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    color: #fff;
    border: 2rpx solid #bbb;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 50rpx;
    width: 170rpx;
    height: 68rpx;
}

.back .icon {
    width: 40rpx;
    height: 40rpx;
}