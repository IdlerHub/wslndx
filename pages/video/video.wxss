/* 视频标题 */
.vedioTitle {
  z-index: 5;
  bottom: 330rpx;
  left: 169rpx;
  margin-left: 26rpx;
}
.vedioTitle .vedioTitle-p {
  font-size:40rpx;
  font-weight:500;
  color:#fff;
