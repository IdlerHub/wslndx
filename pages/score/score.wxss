page {
  height: 100%;
}

page .bg {
  position: relative;
  display: block;
  width: 100%;
  height: 350rpx;
}

page .bg .title {
  position: absolute;
  top: 120rpx;
  left: 50rpx;
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #ffffff;
  letter-spacing: 1.67rpx;
}

page .bg .scores {
  position: absolute;
  top: 174rpx;
  left: 50rpx;
  font-family: PingFangSC-Medium;
  font-size: 90rpx;
  color: #ffffff;
  letter-spacing: 3.75rpx;
}

page .tabs {
  position: sticky;
  top: -1rpx;
  z-index: 2;
  display: flex;
  align-items: center;
  padding: 60rpx 0 40rpx;
  background: white;
  border-bottom: 1px solid #e9e9e9;
}

page .tabs .tab {
  position: relative;
  flex: 1;
  text-align: center;
}

page .tabs .tab .icon {
  display: block;
  margin: 0 auto 20rpx;
  width: 56rpx;
  height: 56rpx;
}

page .tabs .tab .dsc {
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #7e7e7e;
  padding-bottom: 30rpx;
}

page .tabs .tab .underline {
  position: absolute;
  left: calc(50% - 40rpx);
  bottom: -40rpx;
  width: 80rpx;
  border-top: 4rpx solid;
  border-color: transparent;
}

page .tabs .tab.active .dsc {
  font-family: PingFangSC-Medium;
  color: #3a3a3a;
}

page .tabs .tab.active .underline {
  border-color: #df2020;
}

page .tabs .divi_line {
  height: 118rpx;
  border-left: 2rpx solid #e9e9e9;
}

page .swiper {
  height: calc(100% - 107px);
}

page .swiper .scroll_container {
  height: 100%;
  background: #f4f4f4;
}

page .swiper .scroll_container .source_content {
  padding: 30rpx 30rpx;
}

page .swiper .scroll_container .source_content .item {
  position: relative;
  background: white;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

page .swiper .scroll_container .source_content .item .title {
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #3a3a3a;
  letter-spacing: 0;
  display: block;
}

page .swiper .scroll_container .source_content .item .score, page .swiper .scroll_container .source_content .item .times {
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #989a9c;
  letter-spacing: 0;
}

page .swiper .scroll_container .source_content .item .score .num, page .swiper .scroll_container .source_content .item .times .num {
  color: #fe9b02;
}

page .swiper .scroll_container .source_content .item .times {
  padding-left: 20rpx;
  margin-left: 20rpx;
  border-left: 2rpx solid #989a9c;
}

page .swiper .scroll_container .source_content .item .status {
  width: 190rpx;
  height: 80rpx;
  background: #df2020;
  font-size: 36rpx;
  line-height: 80rpx;
  color: white;
  border-radius: 4px;
  position: absolute;
  right: 30rpx;
  top: 45rpx;
}

page .swiper .scroll_container .source_content .item .status.finish {
  background: #ccc;
}

page .swiper .scroll_container .pay_content {
  display: flex;
  flex-wrap: wrap;
  padding: 15rpx 15rpx;
}

page .swiper .scroll_container .pay_content .item {
  position: relative;
  background: #ffffff;
  border: 1rpx solid rgba(200, 200, 200, 0.4);
  border-radius: 10rpx;
  margin: 15rpx;
  width: 328rpx;
  height: 410rpx;
}

page .swiper .scroll_container .pay_content .item .bg {
  width: 100%;
  height: 224rpx;
  margin-bottom: 30rpx;
}

page .swiper .scroll_container .pay_content .item .title {
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #3a3a3a;
  letter-spacing: 0;
  margin: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 25rpx;
}

page .swiper .scroll_container .pay_content .item .score, page .swiper .scroll_container .pay_content .source_content .item .times, page .swiper .scroll_container .source_content .pay_content .item .times {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #fe9b02;
  letter-spacing: 0;
  margin-left: 20rpx;
}

page .swiper .scroll_container .pay_content .item .unit {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #7e7e7e;
  letter-spacing: 0;
  padding-left: 6rpx;
}

page .swiper .scroll_container .pay_content .item .bt {
  position: absolute;
  right: 20rpx;
  width: 130rpx;
  height: 55rpx;
  padding: 0;
  background: #df2020;
  border-radius: 27.5rpx;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  line-height: 55rpx;
  color: #ffffff;
  letter-spacing: 0;
}

page .swiper .scroll_container .pay_content .item .bt.out {
  background: gray;
}

page .swiper .scroll_container .details_content {
  padding-top: 30rpx;
}

page .swiper .scroll_container .details_content .scroll_con {
  background: #ffffff;
  border-top: 1px solid #e9e9e9;
  padding: 0 30rpx;
}

page .swiper .scroll_container .details_content .scroll_con .item {
  position: relative;
  height: 110rpx;
  border-bottom: 1px solid #e9e9e9;
  padding: 30rpx 0;
}

page .swiper .scroll_container .details_content .scroll_con .item:nth-last-child(1) {
  border-width: 0;
}

page .swiper .scroll_container .details_content .scroll_con .item .title {
  display: block;
  width: 70%;
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #3a3a3a;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

page .swiper .scroll_container .details_content .scroll_con .item .time {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #7e7e7e;
  letter-spacing: 0;
}

page .swiper .scroll_container .details_content .scroll_con .item .score, page .swiper .scroll_container .details_content .scroll_con .source_content .item .times, page .swiper .scroll_container .source_content .details_content .scroll_con .item .times {
  position: absolute;
  right: 0;
  top: 30rpx;
  font-family: PingFangSC-Medium;
  font-size: 48rpx;
  line-height: 110rpx;
  color: #fe9b02;
  text-align: center;
}

page .swiper .scroll_container .details_content .scroll_con .item .score.negative, page .swiper .scroll_container .details_content .scroll_con .source_content .item .negative.times, page .swiper .scroll_container .source_content .details_content .scroll_con .item .negative.times {
  color: #17a15f;
}
