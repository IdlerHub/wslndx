/* pages/liveList/liveLIst.wxss */
page {
  background-color: #F7F7F7;
}

.pageTop {
  background: #fff;
  display: flex;
}

.pageTop .pageTop-box {
  padding: 24rpx 0;
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  position: relative;
}

.pageTop .active {
  font-size: 40rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(242, 50, 58, 1);
}

.pageTop .pageTop-box text {
  display: block;
  width: 40rpx;
  height: 4rpx;
  background: rgba(242, 50, 58, 1);
  border-radius: 2rpx;
  position: absolute;
  bottom: 0;
  right: 50%;
  margin-right: -20rpx;
}

.liveBox {
  margin: 30rpx;
  width: 690rpx;
  height: 590rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 16rpx;
  position: relative;
}

.liveBox .coverImg {
  width: 100%;
  height: 414rpx;
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
}

.liveBox .title {
  display: block;
  margin: 20rpx 30rpx 10rpx 30rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.liveBox .time {
  font-size: 36rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  margin-left: 30rpx;
}
.liveBox .statusImg {
  width: 176rpx;
  height: 54rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
}

.noMore {
  font-size:30rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  line-height:42rpx;
  text-align: center;
}

.qstBox {
  margin: 0 51rpx;
  margin-top:237rpx;
}
.qstBox image {
  width: 100%;
  height:370rpx;
}