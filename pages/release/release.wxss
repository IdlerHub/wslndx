page {
  background: #f4f4f4;
}

.wrap {
  background: #fff;
  overflow: hidden;
  margin-bottom: 30rpx;
}

textarea {
  height: 30vh;
  width: 100%;
  padding: 20rpx 30rpx 20rpx;
  box-sizing: border-box;
  font-size: 44rpx;
}

.ph-class {
  font-size: 44rpx;
  color: #bdbdbd;
}

.footer {
  position: fixed;
  bottom: 0;
  height: 150rpx;
  width: 100%;
  background: #ededed;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.footer::after {
  content: "";
  width: 2rpx;
  height: 40rpx;
  background: #bdbdbd;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.footer > .item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 40rpx;
  color: #3a3a3a;
  height: 150rpx;
}

.footer > .item:last-of-type {
  color: #df2020;
}

.footer > .item[disabled] {
  background: none;
}

.box {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  padding: 0 50rpx 25rpx;
  box-sizing: border-box;
}

.box .img,
.box .video {
  width: 200rpx;
  height: 200rpx;
  margin-right: 25rpx;
  margin-bottom: 25rpx;
}

.box .img:nth-of-type(3n) {
  margin-right: 0;
}

.image {
  width: 200rpx;
  height: 200rpx;
}

.img,
.video {
  position: relative;
}

.ub {
  width: 200rpx;
  height: 200rpx;
  background: #eaeaea;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
  color: #000000;
  opacity: 0.53;
  margin-bottom: 25rpx;
}

.close {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 0;
  right: 0;
}

.cBox {
  width: 100%;
  background: #fff;
}

.cBox .hd {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 50rpx;
  border-bottom: 2rpx solid #e9e9e9;
}

.cBox .hd text {
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #3a3a3a;
}

.cBox .bd {
  padding: 0 50rpx 180rpx;
  display: flex;
  flex-direction: column;
}

.cBox .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e9e9e9;
  padding: 30rpx 0;
}

.cBox .item:last-child {
  border-bottom: none;
}

.cBox .bd text {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #7e7e7e;
}

.cBox .item {
  border-bottom: 2rpx solid #e9e9e9;
}

.cBox .item image {
  margin-right: 20rpx;
  width: 48rpx;
  height: 48rpx;
}
