.box {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  padding: 0 30rpx 18rpx;
  box-sizing: border-box;
}

.box .img,
.box .video {
  width: 216rpx;
  height: 216rpx;
  margin-right: 21rpx;
  margin-bottom: 36rpx;
  border-radius: 6rpx;
  overflow: hidden;
}

.box .img:nth-of-type(3n) {
  margin-right: 0;
}
.image {
  width: 216rpx;
  height: 216rpx;
}
.image:nth-child(3n) {
  margin: 0;
}
.img,
.video {
  position: relative;
}

.ub {
  width: 216rpx;
  height: 216rpx;
  background:rgba(247,247,247,1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #828282;
  margin-bottom: 25rpx;
  border-radius: 6rpx;
}
.ub image{
  width: 74rpx;
  height: 64rpx;
  margin-bottom: 20rpx;
}

.close {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 0;
  right: 0;
  /* background: #fff; */
  /* border-radius: 90%; */
}

.cBox {
  width: 100%;
  background: #fff;
  margin-bottom: 170rpx;
}

.cBox .hd {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #e9e9e9;
}

.cBox .hd text {
  font-family: PingFangSC-Regular,PingFang SC;
  font-size: 40rpx;
  font-weight: 400;
  color: #3a3a3a;
}

.cBox .bd {
  padding: 30rpx 30rpx 11rpx 30rpx;
  display: flex;
  justify-content: flex-start;
  flex-flow: wrap;
}

.cBox .item {
  width: 216rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 21rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background:rgba(247,247,247,1);
  border-radius:6rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.cBox .item text{
  max-width: 216rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.cBox .item:nth-child(3n){
  margin-right: 0rpx;
}

.cBox .item:last-child {
  border-bottom: none;
}

.cBox .bd text {
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(58,58,58,1);
  white-space: nowrap;
  text-overflow: ellipsis;
}
.cBox .issel{
  background:rgba(223,32,32,0.1);
  /* opacity:0.1; */
}
.cBox .issel text{
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#DF2020;
}

