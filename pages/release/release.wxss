page {
  background: #f4f4f4;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.container .wrap {
  background: #fff;
  overflow: hidden;
  margin-bottom: 30rpx;
}

textarea {
  height: 30vh;
  width: 100%;
  padding: 20rpx 30rpx 20rpx;
  box-sizing: border-box;
  font-size: 44rpx;
}

.ph-class {
  font-size: 44rpx;
  color: #bdbdbd;
}

.footer {
  position: fixed;
  bottom: 0;
  height: 90rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 30rpx;
}

.footer .item {
  width: 330rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 6rpx;
  color: #DF2020;
  font-size: 38rpx;
  font-weight: 500;
  font-family: PingFangSC-Medium, PingFang SC;
  background: white;
}

.footer .item:first-child {
  margin-right: 30rpx;
  border: 1px solid rgba(223, 32, 32, 1);
}

.footer .ensure {
  color: #FFFFFF;
  background: #DF2020;
}

.box {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  padding: 0 30rpx 18rpx;
  box-sizing: border-box;
}

.box .img,
.box .video {
  width: 216rpx;
  height: 216rpx;
  margin-right: 21rpx;
  margin-bottom: 36rpx;
  border-radius: 6rpx;
  overflow: hidden;
}

.box .img:nth-of-type(3n) {
  margin-right: 0;
}

.image {
  width: 216rpx;
  height: 216rpx;
}

.image:nth-child(3n) {
  margin: 0;
}

.img,
.video {
  position: relative;
}

.ub {
  width: 216rpx;
  height: 216rpx;
  background: rgba(247, 247, 247, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #828282;
  margin-bottom: 25rpx;
  border-radius: 6rpx;
}

.ub image {
  width: 74rpx;
  height: 64rpx;
  margin-bottom: 20rpx;
}

.recordSmallbox image {
  width: 50rpx;
  height: 74rpx;
  margin-bottom: 12rpx;
}

.close {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 0;
  right: 0;
}

.cBox {
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
}

.cBox .hd {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #e9e9e9;
}

.cBox .hd text {
  font-family: PingFangSC-Regular, PingFang SC;
  font-size: 40rpx;
  font-weight: 400;
  color: #3a3a3a;
}

.cBox .bd {
  padding: 30rpx 30rpx 11rpx 30rpx;
  display: flex;
  justify-content: flex-start;
  flex-flow: wrap;
}

.cBox .item {
  width: 216rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 21rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(247, 247, 247, 1);
  border-radius: 6rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.cBox .item text {
  max-width: 216rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.cBox .item:nth-child(3n) {
  margin-right: 0rpx;
}

.cBox .item:last-child {
  border-bottom: none;
}

.cBox .bd text {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(58, 58, 58, 1);
  white-space: nowrap;
  text-overflow: ellipsis;
}

.cBox .issel {
  background: rgba(223, 32, 32, 0.1);
}

.cBox .issel text {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #DF2020;
}

/* 录音盒子 */
.container .recordBox {
  flex: 1;
  background: #fff;
  position: relative;
  padding-bottom: 140rpx;
}

.recordBox .iconDel {
  display: block;
  width: 27rpx;
  height: 27rpx;
  position: absolute;
  top:-1rpx;
  right: -1rpx;
  padding: 30rpx;
}

.recordBox .recordStanby {
  margin-top: 164rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.recordBox .recordStanby image {
  width: 152rpx;
  height: 152rpx;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
}

.recordBox .recordStanby text:nth-child(2) {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
}

.recordBox .recordStanby text:nth-child(3) {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.recordBox .recordIng {
  position: relative;
}

.recordBox .recordIng text:nth-child(3) {
  font-size: 34rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  position: absolute;
  top: -60rpx;
}

.recordBox .recordIng text:nth-last-child(1) {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}


.recordIng .voice-water1 {
  width: 152rpx;
  height: 152rpx;
  position: absolute;
  top: -2rpx;
  border: 1px solid pink;
  box-shadow: 0 0 120px 30px pink inset;
  border-radius: 100%;
  z-index: 0;
  opacity: 0;
}

.recordIng .voice-water1 {
  animation: wateranimate 2s 1s ease-out infinite;
}

.recordIng .voice-water2 {
  animation: wateranimate 2s 0s ease-out infinite;
}

@keyframes wateranimate {
  0% {
    transform: scale(0.9);
    opacity: 0.8;
  }

  100% {
    transform: scale(2);
    opacity: 0;
  }
}

.recordover {
  margin-top: 95rpx;
  display: flex;
  justify-content: center;
}

.recordover .recordoverBox {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.recordover .recordoverBox:nth-of-type(odd) {
  margin-top: 88rpx;
}

.recordover .recordoverBox:nth-child(2) {
  margin: 0 80rpx;
}

.recordover .recordoverBox:nth-of-type(odd) image {
  width: 104rpx;
  height: 104rpx;
  margin-bottom: 53rpx;
}

.recordover .recordoverBox:nth-child(2) image {
  width: 152rpx;
  height: 152rpx;
  margin-bottom: 29rpx;
}

.recordover .recordoverBox text:nth-child(1) {
  font-size: 34rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 21rpx;
}

.recordover .recordoverBox text:nth-child(3) {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.voiceBox {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin: 0 0 20rpx 30rpx;
  position: relative;
  top: -20rpx;
}

.voiceBox .voiceBoxRight {
  width: 420rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(90deg, rgba(255, 126, 49, 1) 0%, rgba(255, 53, 53, 1) 100%);
  border-radius: 44rpx;
  padding: 0 35rpx 0 46rpx; 
  box-sizing: border-box;
}

.voiceBox .voiceBoxRight image:nth-child(1) {
  width: 27rpx;
  height: 35rpx;
}

.voiceBox .voiceBoxRight .centerImg {
  width: 192rpx;
  height: 28rpx;
  background: url('https://hwcdn.jinlingkeji.cn/images/dev/postVoiceImg.png') center;
  background-size: 563rpx 28rpx;
}

.voiceBox .voiceBoxRight .centerActive {
  animation: centerActive 60s infinite;
}

@keyframes centerActive {
  0% {
    background-position-x: 0;
  }
  100% {
    background-position-x: -600rpx;
  }
}

.voiceBox .voiceBoxRight .timer {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.voiceBox .delBtn {
  width: 178rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(237, 237, 237, 1);
  border-radius: 44rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(130, 130, 130, 1);
}

.voiceBox .delBtn image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}