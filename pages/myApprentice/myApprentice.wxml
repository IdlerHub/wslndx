<!--pages/myApprentice/myApprentice.wxml-->
<view class="container" wx:if="{{list.length > 0}}">
  <view class="item" wx:for="{{list}}" wx:key="index">
    <image src="{{item.avatar || '/images/apprenticeAva.png'}}"></image>
    <view class="itemMsg">
      <view class="msgTop">
        <text>{{item.nickname || '****'}}</text>
        <text>+{{item.number ||  item.total_points}}</text>
      </view>
      <view class="msgTop">
        <view class="createtimes">{{item.createtime || '暂无'}}</view>
        <view class="txt">总进贡(学分)</view>
      </view>
    </view>
  </view>
</view>
<view class="qst" wx:if="{{list.length == 0}}">
  <image src="{{$state.imgHost}}/myApprenticeqst.png"></image>
  <text>暂无记录，去邀请好友</text>
</view>
<recruitShare />