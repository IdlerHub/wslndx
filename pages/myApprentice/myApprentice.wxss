/* pages/myApprentice/myApprentice.wxss */
.container {
  width: 100%;
  padding-bottom: 168rpx;
}
.container .item {
  padding:40rpx 0 0 0;
  display: flex;
}
.container .item image{
  width: 100rpx;
  height: 100rpx;
  background:rgba(216,216,216,1);
  border-radius:4rpx;
  margin: 0 30rpx;
}
.container .item .itemMsg {
  flex: 1;
  border-bottom: 1px solid rgba(237,237,237,1);
  padding:0 30rpx 40rpx 0;
}
.container .item .itemMsg .msgTop {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.container .item .itemMsg .msgTop:nth-child(2) {
  margin-top: 10rpx;
}
.container .item .itemMsg .msgTop text:nth-child(1) {
  width:280rpx;
  font-size:40rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(58,58,58,1);
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.container .item .itemMsg .msgTop text:nth-child(2) {
  font-size:40rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(254,155,2,1);
}
.container .item .itemMsg .msgTop .createtimes {
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(126,126,126,1);
}
.container .item .itemMsg .msgTop .txt {
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(126,126,126,1);
}
.qst {
  height: 100vh;
  display: flex;
  align-items: center;
  flex-direction: column;
  overflow: hidden;
}
.qst image {
  width: 200rpx;
  height: 282rpx;
  margin-top: 180rpx;
  margin-bottom: 50rpx;
}
.qst text {
  font-size:34rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(126,126,126,1);
}
.shareBox {
  width: 100%;
  height:168rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  border-top:1px solid rgba(216,216,216,1);
  position: fixed;
  bottom: 0;
  display: flex;
}
.shareBox  .shareBtn {
  width:330rpx;
  height:108rpx;
  background:rgba(0,189,2,1);
  border-radius:6rpx;
  margin-right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
} 
.shareBox  .shareBtn:nth-child(2) {
  margin: 0;
  border:1px solid rgba(0,189,2,1);
  background: #fff;
}
.shareBox  .shareBtn image{
  width: 70rpx;
  height: 56rpx;
  margin-right: 30rpx;
} 
.shareBox  .shareBtn text{
  font-size:38rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
} 
.shareBox  .shareBtn:nth-child(2) image{
  width: 56rpx;
  height: 56rpx;
  margin-right: 30rpx;
} 
.shareBox  .shareBtn:nth-child(2) text{
  font-size:38rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(0,189,2,1);
}