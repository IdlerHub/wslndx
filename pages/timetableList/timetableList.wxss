/* pages/timetableList/timetableList.wxss */
page,
.timetableList,
.contariner {
  padding-top: 112rpx;
  margin-bottom: 150rpx;
  box-sizing: border-box;
}

.top {
  height: 224rpx;
  background: #FFFFFF;
  padding: 20rpx;
  padding-top: 22rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  z-index: 99;
  width: 100%;
  border-bottom: 1px solid #EDEDED;
}

.top .topOne {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.top .topOne .month {
  font-size: 40rpx;
  font-weight: 500;
  color: #333333;
}

.top .topOne .topRight {
  display: flex;
  align-items: center;
}

.top .topOne .topRight text {
  font-size: 36rpx;
  color: #666666;
}

.top .topOne .topRight image {
  width: 28rpx;
  height: 28rpx;
  margin-left: 12rpx;
}

.top .dateBox {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.top .dateBox .dateItem {
  width: 88rpx;
  height: 106rpx;
  background: #F7F7F7;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.top .dateBox .dateItem .now {
  width: 0;
  height: 0;
  border-top: 25rpx solid #FF3E46;
  border-right: 25rpx solid transparent;
  position: absolute;
  top: 0;
  left: 0;
}

.top .dateBox .dateItem text:nth-child(1) {
  font-size: 28rpx;
  color: #999999;
}

.top .dateBox .dateItem text:nth-child(2) {
  font-size: 38rpx;
  font-weight: 500;
  color: #333333;
}

.top .dateBox .active {
  background-color: #FF3E46;
}

.top .dateBox .active text:nth-child(1) {
  color: #fff;
}

.top .dateBox .active text:nth-child(2) {
  color: #fff;
}

.contariner {
  padding: 0 20rpx;
  background-color: #fff;
}

.contariner .item {
  padding-top: 31rpx;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #E9E9E9;
  display: flex;
  align-items: center;
}

.contariner .itemDay {
  display: inline-block;
  font-size: 36rpx;
  margin-top: 20rpx;
}

.contariner .item:nth-last-child(1) {
  border: none;
}

.contariner .item .imgBox {
  position: relative;
  width: 260rpx;
  height: 160rpx;
}

.contariner .item .img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.contariner .item .icon {
  width: 50rpx;
  height: 50rpx;
  opacity: 0.9;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

.contariner .item .txtBox {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
  width: 0;
}

.contariner .item .txtBox .title {
  width: 100%;
  font-size: 40rpx;
  font-weight: 400;
  color: rgba(58, 58, 58, 1);
  line-height: 56rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.contariner .item .txtBox .time {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(126, 126, 126, 1);
  line-height: 40rpx;
  margin-top: 4rpx;
  margin-bottom: 15rpx;
}

.contariner .item .txtBox .textBottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contariner .item .txtBox .textBottom .teacher {
  display: flex;
  align-items: center;
  flex: 1;
  width: 0;
}

.contariner .item .txtBox .textBottom .teacher image {
  width: 24rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.contariner .item .txtBox .textBottom .teacher view {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(126, 126, 126, 1);
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  flex: 1;
}

.contariner .item .txtBox .textBottom .btn {
  width: 148rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(90deg, #43DE80 0%, #1CCA61 100%);
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  margin-left: 15rpx;
}

.contariner .item .txtBox .textBottom .living {
  background: linear-gradient(90deg, #FF572F 0%, #F2323A 100%);
  align-items: flex-end;
  padding: 13rpx 0;
  box-sizing: border-box;
}

.contariner .item .txtBox .textBottom .living .statusWite {
  display: block;
  width: 5rpx;
  height: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  margin-right: 5rpx;
}

.contariner .item .txtBox .textBottom .living .statusWite:nth-child(1) {
  animation: liveStatus 0.4s 0s ease-out infinite;
}

.contariner .item .txtBox .textBottom .living .statusWite:nth-child(2) {
  animation: liveStatus 0.6s 0s ease-out infinite;
}

.contariner .item .txtBox .textBottom .living .statusWite:nth-child(3) {
  animation: liveStatus 0.8s 0s ease-out infinite;
}

.contariner .item .txtBox .textBottom .living text {
  line-height: 24rpx;
  margin-left: 7rpx;
}


.contariner .item .txtBox .textBottom .btn image {
  width: 40rpx;
  height: 33rpx;
  margin-right: 8rpx;
}

.contariner .item .txtBox .textBottom .end {
  background: linear-gradient(90deg, #FFAB00 0%, #FF9200 100%);
}


.contariner .item .txtBox .textBottom .end image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}


.qstBox {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180rpx;
  box-sizing: border-box;
}

.qstBox image {
  width: 452rpx;
  height: 288rpx;
  margin-left: -13rpx;
}

.qstBox text {
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
  color: #999999;
  margin-top: -62rpx;
}

.qstBox .choose {
  margin-top: 40rpx;
  width: 200rpx;
  height: 80rpx;
  background: linear-gradient(90deg, #FF572F 1%, #F2323A 100%);
  border-radius: 40rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}

@keyframes liveStatus {
  0% {
    height: 100%;
  }

  50% {
    height: 20%;
  }

  100% {
    height: 100%;
  }
}