page {
  padding:30rpx 30rpx 80rpx 30rpx;
}

.control-panel {
  border-top: 1rpx solid #ebedf0;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 111;
  background: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
}
.control-panel.isX {
  padding-bottom: 80rpx;
}

.panel-item {
  display: flex;
  align-items: center;
}
.panel-item__bd {
  flex: 1;
}

.circle-wrap {
  display: inline-block;
  text-align: center;
  padding: 20rpx 8rpx;
}
.circle-wrap .circle {
  width: 50rpx;
  height: 50rpx;
  border: 2rpx solid #ebedf0;
  border-radius: 50%;
}
.circle-wrap .cur {
  color: #fff;
  line-height: 50rpx;
  background: #3F82FD;
  border: 2rpx solid #3F82FD;
}

.plus {
  width: 100%;
  height: 100%;
  background: #efefef;
}
.plus:before {
  position: absolute;
  content: "";
  width: 50%;
  height: 2px;
  top: 50%;
  left: 50%;
  margin-top: -1px;
  margin-left: -25%;
  background: #cbcbcb;
}
.plus:after {
  position: absolute;
  content: "";
  width: 2px;
  height: 50%;
  top: 50%;
  left: 50%;
  margin-top: -25%;
  margin-left: -1px;
  background: #cbcbcb;
}
