page {
  background: #f4f4f4;
  padding: 40rpx 60rpx 0; }
  page canvas {
    width: 592rpx;
    height: 837rpx;
    position: absolute;
    top: -2000rpx; }
  page .scroll {
    padding-bottom: 300rpx; }
    page .scroll .theme {
      position: relative;
      height: 797rpx; }
      page .scroll .theme .bg {
        height: 797rpx;
        width: 100%; }
      page .scroll .theme .user {
        position: absolute;
        top: 385rpx;
        left: 50rpx;
        display: flex;
        align-items: center; }
        page .scroll .theme .user .portrait {
          width: 70rpx;
          height: 70rpx;
          border-radius: 50%; }
        page .scroll .theme .user .name {
          font-family: PingFangSC-Regular;
          font-size: 36rpx;
          color: #ffffff;
          margin-left: 20rpx; }
      page .scroll .theme .phrase {
        position: absolute;
        top: 455rpx;
        left: 137rpx;
        width: 65%;
        text-align: center;
        font-family: PingFangSC-Medium;
        font-size: 40rpx;
        line-height: 56rpx;
        color: #ffffff; }
      page .scroll .theme .dsc {
        position: absolute;
        height: 170rpx;
        width: calc(100% - 80rpx);
        bottom: 0;
        padding: 5rpx 40rpx;
        background: white;
        display: flex;
        align-items: center; }
        page .scroll .theme .dsc .qrcode {
          width: 160rpx;
          height: 160rpx; }
        page .scroll .theme .dsc text {
          margin-left: 30rpx;
          display: block;
          font-family: PingFangSC-Regular;
          font-size: 32rpx;
          color: #3a3a3a;
          letter-spacing: 0;
          line-height: 48rpx; }
    page .scroll .broadcast {
      font-family: PingFangSC-Regular;
      font-size: 32rpx;
      color: #7e7e7e;
      letter-spacing: 0;
      /* height: 158rpx; */
      word-wrap: break-word;
      text-justify: newspaper;
      word-break: break-all;  
      padding: 30rpx 8rpx 0 8rpx;
      line-height: 48rpx;
      text-align: center;
      text-align-last: justify;
     }
      page .scroll .broadcast text {
        color: #ffb211; }
  page .buttons {
    position: fixed;
    left: 0;
    bottom: 0;
    background: white;
    width: calc(100% - 280rpx);
    height: 200rpx;
    padding: 40rpx 140rpx;
    display: flex;
    justify-content: space-between;
    align-items: center; }
    page .buttons .save, page .buttons .share {
      display: flex;
      flex-direction: column;
      align-items: center; }
      page .buttons .save .icon, page .buttons .share .icon {
        padding: 23rpx;
        width: 74rpx;
        height: 74rpx;
        background: #44c4ff;
        border-radius: 50%; }
      page .buttons .save text, page .buttons .share text {
        font-family: PingFangSC-Regular;
        font-size: 36rpx;
        color: #3a3a3a; }
    page .buttons .share .icon {
      background: #00bd02; }
page .bottomBtn {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 168rpx;
  background:rgba(255,255,255,1);
  border-bottom:1px solid rgba(216,216,216,1);
  padding: 30rpx;
  box-sizing: border-box;
}
page .bottomBtn .save {
  width: 100%;
  height: 100%;
  background:rgba(254,155,2,1);
  border-radius:6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
page .bottomBtn .save image {
  width: 54rpx;
  height: 50rpx;
  margin-right: 30rpx;
}
page .bottomBtn .save text {
  font-size:38rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}

