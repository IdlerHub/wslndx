/* pages/myProduction/myProduction.wxss */
.state{
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 0 30rpx;
    border-bottom: 1px solid #EDEDED;
}
.state view{
    flex: 1;
    height: 110rpx;
    line-height: 110rpx;
    text-align: center;
    font-size:36rpx;
    color:rgba(153,153,153,1);
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:400;
}
.state .active{
    font-weight:500;
    color:#1975FF;
    position: relative;
}
.state .active::after{
    content: '';
    width: 64rpx;
    height: 3rpx;
    position: absolute;
    bottom: 0;
    right: 50%;
    left: 50%;
    margin-left: -34rpx;
    background: #1975FF;
    border-radius:4rpx;
}
.production-list{
    margin: 0 30rpx;
}
.production-list .production-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1px solid #EDEDED;
}


.production-list .production-item .item-left{
    width: 330rpx;
    height: 220rpx;
    border-radius:10rpx;
    overflow: hidden;
    position: relative;
    background: #CCCCCC;
}
.item-classify{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
}
.item-left .item-img,
.item-left .item-img image{
    width: 100%;
    height: 100%;
}
.serial{
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    background:rgba(0,0,0,0.6);
    padding: 2rpx 15rpx;
    border-radius:24rpx;
    font-size:28rpx;
    font-family:PingFang-SC-Medium,PingFang-SC;
    font-weight:400;
    color:rgba(255,255,255,1);
}
.production-list .production-item  .item-right{
    width: 330rpx;
    height: 220rpx;
    display: flex;
    justify-content: space-between;
    flex-flow: column;
}
.item-title{
    max-width:330rpx;
    height:56rpx;
    font-size:40rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height:56rpx;
    margin-bottom: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.item-time{
    height:40rpx;
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:40rpx;
    margin-bottom: 47rpx;
}
.perfect{
    height:50rpx;
    font-size:36rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
    line-height:50rpx;
}
.none-production{
    display: flex;
    justify-content: space-around;
    flex-flow: column;
    align-items: center;
    margin-top: 50rpx;
}
.none-production .none-img{
    width: 316rpx;
    height: 196rpx;
    margin-top: 200rpx;
    margin-bottom: 54rpx;
}
image{
    width: 100%;
    height: 100%;
}
.none-content{
    margin-bottom: 22rpx;
}
.none-content text{
    height:50rpx;
    font-size:36rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height:50rpx;
}
.none-production .none-btn{
    width:300rpx;
    height:88rpx;
    background:#1975FF;
    border-radius:6rpx;
    text-align: center;
    line-height: 88rpx;

    font-size:40rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
}
.fail-content{
    display: flex;
    justify-content: space-around;
    flex-flow: column;
    align-items: center;
}
.fail-content text{
    height:56rpx;
    font-size:40rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height:56rpx;
    margin-bottom: 11rpx;
}
.fail-content view{
    width: 607rpx;
    height:100rpx;
    font-size:36rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
    line-height:50rpx;
    text-align: center;
    margin-bottom: 22rpx;
}
.fail-btn{
    width:420rpx;
    height:88rpx;
    background:rgba(0,85,255,1);
    border-radius:6rpx;
    text-align: center;
    line-height: 88rpx;

    font-size:40rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
}