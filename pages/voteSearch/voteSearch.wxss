/* pages/voteSearch/voteSearch.wxss */
.search{
    margin: 30rpx 34rpx 0 30rpx;
    height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.search-left{
    width: 530rpx;
    height: 100%;
    background: #F7F7F7;
    display: flex;
    align-items: center;
    padding-left: 23rpx;
    padding-right: 30rpx;
}
.search-right{
    flex: 1;
    margin-left: 30rpx;
    height: 100%;
    line-height: 88rpx;
    text-align: center;
    font-size:36rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.search-left input{
    width: 430rpx;
    margin-left: 11rpx;
}

.production-list{
    margin: 0 30rpx;
}
.production-list .production-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1px solid #EDEDED;
}
.production-list .production-item:last-child{
    border: none;
}
.production-list .production-item .item-left{
    width: 330rpx;
    height: 220rpx;
    background: #0D00C6;
    border-radius:10rpx;
    position: relative;
}
.item-classify{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
}
.item-left .item-img,
.item-left .item-img image{
    width: 100%;
    height: 100%;
}
.production-list .production-item  .item-right{
    width: 330rpx;
    height: 220rpx;
    display: flex;
    justify-content: space-between;
    flex-flow: column;
}
.item-author{
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
}
.item-title{
    max-width:330rpx;
    height:56rpx;
    font-size:40rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height:56rpx;
    margin-bottom: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
