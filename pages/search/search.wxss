/* pages/search/search.wxss */
page {
  height: 100%;
  overflow-y:hidden; 
}
.container {
  height: 100%;
}

.container .search-top {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container .search-top .search-box {
  width: 584rpx;
  height: 88rpx;
  background: rgba(247, 247, 247, 1);
  border-radius: 8rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.container .search-top image {
  width: 56rpx;
  height: 56rpx;
  margin: 0 23rpx;
}

.container .search-top image {
  width: 44rpx;
  height: 44rpx;
  margin: 0 23rpx 0 30rpx;
}

.container .search-top .search-txt {
  flex: 1;
  font-size: 36rpx;
  color: rgba(46, 46, 46, 1);
}

.container .search-top .cancle {
  font-size: 38rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.container .voice-box {
  position: absolute;
  bottom: -500rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .voice-box .voice-image {
  width: 152rpx;
  height: 152rpx;
}

.container .voice-box .voice-txt {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 24rpx;
}

.container .voice-box .voice-water1{
  width: 152rpx;
  height: 152rpx;
  position: absolute;
  top: -2rpx;
  border: 1px solid pink;
  box-shadow: 0 0 120px 30px pink inset;
  border-radius: 100%;
  z-index: -4;
  opacity: 0;
}
.container .voice-box .voice-water1 {
  animation: wateranimate 2s 1s ease-out infinite;
}
.container .voice-box .voice-water2 {
  animation: wateranimate 2s 0s ease-out infinite;
}
/* .container .voice-box .voice-water3 {
  animation: wateranimate 3s 0s ease-out infinite;
} */
@keyframes wateranimate {
  0% {
    transform: scale(0.9);
    opacity: 0.8;
  }

  100% {
    transform: scale(2);
    opacity: 0;
  }
}
