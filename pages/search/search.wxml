<!--pages/search/search.wxml-->
<view class="container">
  <view class="search-top">
    <view class="search-box">
      <image src="{{$state.imgHost}}/searchp.png"></image>
      <form wx:if="{{focus}}">
        <input placeholder="搜索课程名称" placeholder-style="color:#999;" confirm-type="search" type="text" class="search-txt" focus="focus"  value="{{text}}" bindinput="txtchange" bindconfirm="earchlesss"></input>
        <button wx:if="{{text != ''}}" form-type="reset" catchtap="cleartxt"></button> 
      </form>
      <form wx:else>
        <input  placeholder-style="color:#999;" confirm-type="search" type="text" class="search-txt"  value="{{text}}" bindinput="txtchange" bindconfirm="earchlesss"></input>
        <button wx:if="{{text != ''}}" form-type="reset" catchtap="cleartxt"></button> 
      </form>
    </view>
    <view class="cancle" bindtap="backhome">取消</view>
  </view>
  <view class="wrap">
    <view catchtap="detailTap" wx:for="{{ lessList }}" wx:key="index" class="item" data-item="{{ item }}">
      <view class="left">
        <image class="poster" mode="aspectFill" src="{{ item.image }}"></image>
        <image class="icon" mode="aspectFill" src="{{ $state.imgHost }}/play.png"></image>
      </view>
      <view class="right">
        <rich-text class="line name" nodes="{{ item.title }}"></rich-text>
        <rich-text class="line actor" nodes="{{ item.subtitle }}"></rich-text>
        <!-- <text class="line actor" wx:else>{{ item.name }}-{{ item.honor }}</text> -->
        <text class="line info">
          <text class="dramaNum"><text class="key">剧集</text>{{ item.lesson_count }}集</text>
        <text class="playNum"><text class="key">播放</text>{{ item.bw || item.browse }}</text>
        </text>
      </view>
    </view>
    <view class="qst" wx:if="{{showqst}}">
      <image class="ast-img" src="/images/no-com.png"></image>
    </view>
  </view>
  <view class="voice-box" style="bottom:{{voiceheight}}px" wx:if="{{$state.authRecord && showvioce && !lessList[0].image}}">
    <view style="background:url({{voiceImg}});background-size:100% 100%;" class="voice-image" catchtouchstart="touchstart" catchtouchend="touchend"></view>
    <div class="voice-water1" wx:if="{{voiceActon}}"></div>
    <div class="voice-water1 voice-water2" wx:if="{{voiceActon}}"></div>
    <view class="voice-txt" style="height:12rpx;"> {{voiceActon? '' : '按住说话'}}</view>
  </view>
  <view class="voice-box" style="bottom:{{voiceheight}}px" wx:if="{{!$state.authRecord && showvioce && !lessList[0].image}}">
    <view style="background:url({{voiceImg}});background-size:100% 100%;" class="voice-image" bindtap="authrecord" catchtouchstart="authrecord"></view>
    <view class="voice-txt" style="height:12rpx;"> {{voiceActon? '' : '按住说话'}}</view>
  </view>
</view>