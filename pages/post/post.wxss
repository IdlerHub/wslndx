@charset "UTF-8";
@import "../../template/template.wxss";

/* 环境变量 */
page {
  background: #eee;
}

.tabnav {
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 1000;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: rgba(238, 238, 238, 1);
  padding-bottom: 20rpx;
}

.tabnav .search {
  position: absolute;
  left: 34rpx;
}

.tabnav image {
  width: 40rpx;
  height: 40rpx;
}

.tabnav .tabnav-item {
  font-size: 22px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 60rpx;
}

.tabnav-item .heng {
  width: 40rpx;
  height: 6rpx;
  background: rgba(223, 32, 32, 1);
  border-radius: 4rpx;
  position: absolute;
  left: 50%;
  margin-left: -20rpx;
  bottom: -22rpx;
}

.tabnav .tabnav-item .smallred {
  width: 16rpx;
  height: 16rpx;
  background: rgba(223, 32, 32, 1);
  border-radius: 50%;
  position: absolute;
  top: 0;
  right: -20rpx;
}

.tabnav .lose {
  font-size: 18px;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.swiper {
  height: calc(100vh - 65px);
  box-sizing: border-box;
}

.containerWrap {
  height: 100%;
}

.message {
  background: white;
  height: 120rpx;
  overflow: hidden;
}

.message .msg-btn {
  width: 306rpx;
  height: 80rpx;
  background: #333333;
  box-shadow: 0px 2px 15px 0px rgba(48, 19, 19, 0.08);
  border-radius: 40rpx;
  margin: 30rpx auto 0;
  padding: 0 10px 0 3px;
  display: flex;
  align-items: center;
  color: white;
}

.message .msg-btn .img {
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.message .msg-btn .news {
  flex: 1;
  font-size: 30rpx;
  padding-right: 10px;
  text-align: right;
}

.message .msg-btn .iconfont {
  font-size: 12px;
  line-height: 36px;
  color: #808080;
}

.circle {
  background: #fff;
  padding: 30rpx 0 24rpx 0;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.circle-scroll {
  height: 200rpx;
}

.circle-scroll .scroll-view {
  margin-left: 24rpx;
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.circle-scroll .scroll-view:nth-child(1) {
  margin-left: 30rpx;
}

.circle-scroll .scroll-view:last-child {
  margin-right: 30rpx;
}

.circle-scroll .scroll-view image {
  width: 152rpx;
  height: 152rpx;
  margin-bottom: 5rpx;
  border-radius: 6rpx;
}

.circle-scroll .scroll-view .label {
  width: 72rpx;
  height: 36rpx;
  background: rgba(223, 32, 32, 1);
  border-radius: 0rpx 0 8rpx 0;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 36rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
}

.circle-scroll .scroll-view text {
  display: block;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  max-width: 160rpx;
}

.stick {
  width: 100%;
  height: 128rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  margin-bottom: 20rpx;
}

.stick image:nth-child(1) {
  width: 64rpx;
  height: 64rpx;
  margin-right: 24rpx;
}

.stick .stickText {
  flex: 1;
  width: 0;
  /* display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden; */
  font-size: 40rpx;
  /* height: 54rpx; */
  font-weight: 400;
  color: #3a3a3a;
}

.stick image:nth-child(3) {
  width: 18rpx;
  height: 31rpx;
  margin-left: 25rpx;
}

.wrap {
  box-sizing: border-box;
}

.footer {
  position: fixed;
  right: 30rpx;
  bottom: 260rpx;
  height: 140rpx;
  width: 140rpx;
  background: rgba(223, 32, 32, 1);
  border-radius: 50%;
  box-shadow: 0px 4px 4px 0px rgba(166, 19, 19, 0.3);
}

.write,
.to {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 140rpx;
}

.write .icon {
  margin-top: 5rpx;
  width: 34rpx;
  height: 34rpx;
}

.to .icon {
  font-size: 60rpx;
  color: #df2020;
  text-align: center;
  margin-top: -8rpx;
}

.write .text,
.to .text {
  font-size: 36rpx;
  color: #fff;
  padding: 0 15rpx;
  line-height: 56rpx;
}

