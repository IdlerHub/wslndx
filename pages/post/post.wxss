@charset "UTF-8";
/* 环境变量 */
page {
  background: #eee; }

.message {
  background: white;
  height: 120rpx;
  overflow: hidden; }
  .message .msg-btn {
    width: 306rpx;
    height: 80rpx;
    background: #333333;
    box-shadow: 0px 2px 15px 0px rgba(48, 19, 19, 0.08);
    border-radius: 40rpx;
    margin: 40rpx auto 0;
    padding: 0 10px 0 3px;
    display: flex;
    align-items: center;
    color: white; }
    .message .msg-btn .img {
      width: 60rpx;
      height: 60rpx;
      margin: 10rpx;
      border-radius: 50%; }
    .message .msg-btn .news {
      flex: 1;
      font-size: 30rpx;
      padding-right: 10px;
      text-align: right; }
    .message .msg-btn .iconfont {
      font-size: 12px;
      line-height: 36px;
      color: #808080; }

.wrap {
  box-sizing: border-box;
  padding-bottom: 120rpx; }
  .wrap > .item {
    background: #fff;
    padding: 0 30rpx;
    margin-bottom: 20rpx; }
    .wrap > .item:last-of-type {
      border-bottom: none; }
    .wrap > .item .top {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 30rpx 0 20rpx; }
      .wrap > .item .top .date {
        font-size: 28rpx;
        color: #bdbdbd; }
      .wrap > .item .top .left {
        display: flex;
        align-items: center; }
      .wrap > .item .top .avatarUrl {
        width: 90rpx;
        height: 90rpx;
        border-radius: 50%;
        border: 1rpx solid #d8d8d8; }
      .wrap > .item .top .text {
        margin-left: 20rpx;
        width: 400rpx;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap; }
      .wrap > .item .top .nickName {
        font-size: 40rpx;
        color: #343434; }
      .wrap > .item .top .school {
        margin-top: 5rpx;
        font-size: 28rpx;
        color: #bdbdbd; }
    .wrap > .item .name {
      text-align: justify;
      line-height: 60rpx;
      font-size: 40rpx;
      color: #3a3a3a;
      word-wrap: break-word;
      white-space: pre-line; }
    .wrap > .item .content .img {
      display: flex;
      flex-wrap: wrap;
      align-content: flex-start; }
      .wrap > .item .content .img image {
        margin-top: 20rpx; }
      .wrap > .item .content .img.one {
        max-height: 100vh;
        overflow: hidden; }
        .wrap > .item .content .img.one image {
          width: 400rpx; }
      .wrap > .item .content .img.three image {
        width: 216rpx;
        height: 216rpx;
        margin-right: 20rpx; }
        .wrap > .item .content .img.three image:nth-of-type(3n) {
          margin-right: 0; }
    .wrap > .item .content video {
      margin-top: 20rpx;
      width: 100%;
      height: 350rpx; }
    .wrap > .item .content .poster {
      position: absolute;
      width: 100%;
      height: 100%;
      filter: brightness(0.8); }
    .wrap > .item .content .bg {
      position: relative;
      margin-top: 20rpx;
      width: 100%;
      height: 350rpx; }
    .wrap > .item .content .play {
      position: absolute;
      z-index: 2;
      width: 74rpx;
      height: 74rpx;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      margin: auto; }
    .wrap > .item .label {
      background: #52d9c3;
      margin: 20rpx 0;
      display: block;
      width: 230rpx;
      line-height: 44rpx;
      border-radius: 6rpx;
      color: #fff;
      font-size: 28rpx;
      text-align: center; }
  .wrap .btn {
    height: 125rpx;
    margin-top: 30rpx;
    position: relative;
    border-top: 2rpx solid #e8e8e8;
    display: flex;
    align-items: center;
    justify-content: stretch; }
    .wrap .btn .division {
      width: 2rpx;
      height: 40rpx;
      background: #dbdbdb; }

.btn > .item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center; }
  .btn > .item .iconfont {
    font-size: 58rpx;
    color: #bdbdbd;
    text-align: center; }
  .btn > .item .container-sub {
    display: flex;
    align-items: center; }
  .btn > .item .praise {
    width: 125rpx;
    height: 125rpx;
    background-size: cover;
    background-image: url("https://jinling-xcx-dev.obs.cn-north-1.myhuaweicloud.com/images/dev/heart-ani.png");
    animation-fill-mode: forwards; }
    .btn > .item .praise.end {
      background-position: 100% 0; }
    .btn > .item .praise.ani {
      animation: ani steps(20) 1s both; }
    .btn > .item .praise + .text {
      margin-left: -20rpx; }
  .btn > .item .text {
    margin-left: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #3a3a3a;
    letter-spacing: 0;
    line-height: 40rpx; }

.footer {
  position: fixed;
  bottom: 0;
  height: 120rpx;
  width: 100%;
  background: #f8f8f8;
  display: flex; }
  .footer::after {
    content: "";
    width: 2rpx;
    height: 40rpx;
    background: #dbdbdb;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto; }

.write,
.to {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 120rpx; }

.write .icon {
  margin-top: 5rpx;
  width: 34rpx;
  height: 34rpx; }

.to .icon {
  font-size: 60rpx;
  color: #df2020;
  text-align: center;
  margin-top: -8rpx; }

.write .text,
.to .text {
  font-size: 40rpx;
  color: #343434;
  padding: 0 15rpx;
  line-height: 56rpx; }
