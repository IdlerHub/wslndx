page {
    background: #eee;
}

.wrap {
    box-sizing: border-box;
    padding-bottom: 120rpx;
}

.wrap>.item {
    background: #fff;
    padding: 0 30rpx;
    margin-bottom: 20rpx;
}

.wrap>.item:last-of-type {
    border-bottom: none;
}

.item .top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 0 20rpx;
}

.item .top .date {
    font-size: 28rpx;
    color: #BDBDBD;
}

.item .name {
    text-align: justify;
    line-height: 60rpx;
    font-size: 40rpx;
    color: #3A3A3A;
}

.item .img {
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
}

.item .img image {
    margin-top: 20rpx;
}

.item .img.one image {
    width: 400rpx;
}

.item .img.two image {
    width: 335rpx;
    height: 335rpx;
    margin-right: 20rpx;
}

.item .img.two image:nth-of-type(2n) {
    margin-right: 0;
}

.item .img.three image {
    width: 216rpx;
    height: 216rpx;
    margin-right: 20rpx;
}

.item .img.three image:nth-of-type(3n) {
    margin-right: 0;
}

.item .content video {
    margin-top: 20rpx;
    width: 100%;
    height: 350rpx;
}

.item .content .poster {
    position: absolute;
    width: 100%;
    height: 100%;
    filter: brightness(0.8);
}

.item .content .bg {
    position: relative;
    margin-top: 20rpx;
    width: 100%;
    height: 350rpx;
}

.item .content .play {
    position: absolute;
    z-index: 2;
    width: 74rpx;
    height: 74rpx;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
}

.item .label {
    background: #52D9C3;
    margin: 20rpx 0;
    display: block;
    width: 230rpx;
    line-height: 44rpx;
    border-radius: 6rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}

.item .top .left {
    display: flex;
    align-items: center;
}

.item .top .avatarUrl {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    border: 1rpx solid #D8D8D8;
}

.item .top .text {
    margin-left: 20rpx;
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.item .top .nickName {
    font-size: 40rpx;
    color: #343434;
}

.item .top .school {
    margin-top: 5rpx;
    font-size: 28rpx;
    color: #BDBDBD;
}

.wrap .btn {
    margin-top: 30rpx;
    position: relative;
    border-top: 2rpx solid #E8E8E8;
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 30rpx 0;
}

.wrap .btn::after {
    content: '';
    width: 2rpx;
    height: 40rpx;
    background: #DBDBDB;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
}

.btn>.item {
    display: flex;
    align-items: center;
    background: #fff;
}

.btn>.item .icon,
.btn>.item .icon image {
    position: relative;
    width: 66rpx;
    height: 66rpx;
}

.ani {
    position: absolute;
    top: -40rpx;
    left: -40rpx;
    width: 150rpx;
    height: 150rpx;
    background-size: cover;
    animation: ani steps(20) 1s both;
}

.btn>.item .text {
    font-size: 28rpx;
    color: #434343;
    padding: 0 15rpx;
    line-height: 40rpx;
}

.footer {
    position: fixed;
    bottom: 0;
    height: 120rpx;
    width: 100%;
    background: #F8F8F8;
    display: flex;
}

.footer::after {
    content: '';
    width: 2rpx;
    height: 40rpx;
    background: #DBDBDB;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
}

.write,
.to {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
    height: 120rpx;
}

.write .icon {
    margin-top: 5rpx;
    width: 34rpx;
    height: 34rpx;
}

.to .icon {
    font-size: 60rpx;
    color: #DF2020;
    text-align: center;
    margin-top: -8rpx;
}

.write .text,
.to .text {
    font-size: 40rpx;
    color: #343434;
    padding: 0 15rpx;
    line-height: 56rpx;
}