<view class="tabnav" style="padding-top:{{ top }}px">
  <view class="{{ currentTab == 1 ? 'lose' : ''}} tabnav-item" bindtap="switchNav" data-current="0">
    <text>推荐</text>
  </view>
  <view class="{{ currentTab == 0 ? 'lose' : ''}} tabnav-item" bindtap="switchNav" data-current="1">
    <text>关注</text>
  </view>
</view>
