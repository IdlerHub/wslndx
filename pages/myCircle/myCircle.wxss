.circle {
  box-sizing: border-box;
  background: #fff;
  padding: 30rpx; }
  .circle .item {
    border-bottom: 2rpx solid #e9e9e9;
    padding-bottom: 30rpx; }
    .circle .item:last-of-type {
      border-bottom: none; }
  .circle .top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 30rpx 0 20rpx; }
    .circle .top .date {
      font-size: 32rpx;
      color: #9e9e9e; }
    .circle .top .delete {
      display: flex;
      align-items: center;
      font-size: 32rpx;
      color: #9e9e9e; }
      .circle .top .delete image {
        width: 30rpx;
        height: 30rpx;
        margin-right: 5rpx; }
  .circle .label {
    background: #52d9c3;
    margin-top: 30rpx;
    display: block;
    width: 230rpx;
    line-height: 44rpx;
    border-radius: 6rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center; }
  .circle .name {
    text-align: justify;
    line-height: 56rpx;
    font-size: 40rpx;
    color: #343434;
    word-wrap: break-word;
    white-space: pre-line; }
  .circle .content {
    overflow: hidden; }
    .circle .content video {
      margin-top: 20rpx;
      width: 100%;
      height: 350rpx; }
    .circle .content .poster {
      position: absolute;
      width: 100%;
      height: 100%;
      filter: brightness(0.8); }
    .circle .content .bg {
      position: relative;
      margin-top: 20rpx;
      width: 100%;
      height: 350rpx; }
    .circle .content .play {
      position: absolute;
      z-index: 2;
      width: 74rpx;
      height: 74rpx;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      margin: auto; }
  .circle .img {
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start; }
    .circle .img image {
      margin-top: 20rpx; }
    .circle .img.one image {
      width: 400rpx; }
    .circle .img.three image {
      width: 216rpx;
      height: 216rpx;
      margin-right: 20rpx; }
      .circle .img.three image:nth-of-type(3n) {
        margin-right: 0; }

.navigator {
  display: inline-block; }

.ncir {
  margin-top: 200rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; }
  .ncir text {
    margin-top: -100rpx;
    font-size: 32rpx;
    color: #949494;
    width: 100%;
    text-align: center; }
  .ncir navigator {
    width: 250rpx;
    line-height: 80rpx;
    text-align: center;
    background: #df2020;
    color: #fff;
    font-size: 36rpx;
    border-radius: 4rpx;
    margin: 40rpx auto 0; }
