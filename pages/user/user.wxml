<view class="container">
  <!-- 下拉刷新 -->
  <view wx:if="{{ isRefreshing }}" class="weui-loadmore indexdrop">
    <view class="weui-loading"></view>
  </view>
  <navigator hover-class="none" class="top" url="/page/user/pages/info/info" open-type="navigate"
    style="padding-top:{{statusBarHeight}}px">
    <image class="bg" mode="widthFix" src="{{ $state.userInfo.avatar }}"></image>
    <view class="box">
      <view class="left">
        <image class="img" mode="widthFix" src="{{ $state.userInfo.avatar }}"></image>
        <view class="info">
          <text class="line name">{{ $state.userInfo.nickname }}</text>
          <view class="line">
            <text class="school">{{ $state.userInfo.school || $state.userInfo.university || "网上老年大学" }}</text>
          </view>
        </view>
      </view>
      <icon class="iconfont icon-arrow-right"></icon>
    </view>
  </navigator>
  <view class="navgationto">
    <view class="navgationBox" bindtap="toScore">
      <text class="navTitle">我的学分</text>
      <text class="num">{{ my_score }}可用学分</text>
      <image src="/images/userIcon/integralbg.png"></image>
    </view>
    <view class="navgationBox" bindtap="toInvite">
      <text class="navTitle">邀请好友</text>
      <text class="num">已邀请{{$state.userIndex.prentice_count}}个好友</text>
      <image src="/images/userIcon/invitebg.png"></image>
    </view>
  </view>
  <view class="myslef">
    <view class="title">
      我的服务
    </view>
    <view class="iconBox">
      <navigator class="iconItem" wx:for="{{myList}}" wx:key="index" hover-class="none" url="{{item.page}}"
        target="{{ item.isMini ? 'miniProgram': 'self' }}" app-id="{{item.appId}}" path="">
        <image src="{{item.icon}}"></image>
        <text wx:if="{{!item.isNews}}">{{item.name}}</text>
        <view class="news" wx:else>我的消息
          <view class="smallred" wx:if="{{showMes > 0}}"></view>
        </view>
      </navigator>
    </view>
  </view>
  <view class="myslef">
    <view class="title">
      更多服务
    </view>
    <view class="iconBox moreList">
      <navigator class="iconItem" wx:for="{{moreList}}" wx:key="index" hover-class="none" url="{{item.page}}" wx:if="{{!item.isContact}}"
        >
        <image src="{{item.icon}}"></image>
        <text>{{item.name}}</text>
      </navigator>
      <button wx:for="{{moreList}}" wx:key="index" class="iconItem" open-type="contact" bindcontact="handleContact" data-index='{{index}}'
      session-from='{"name": "{{$state.userInfo.nickname}}","avatarUrl":"{{$state.userInfo.avatar}}","nickName":"{{$state.userInfo.nickname}}"}' wx:if="{{item.isContact}}">
      <image src="{{item.icon}}" class="iconfont"></image>
      <text>{{item.name}}</text>
    </button> 
    </view>
  </view>
  <navBar path="user" />
