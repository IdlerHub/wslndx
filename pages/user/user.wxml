<view class="container">
  <!-- 下拉刷新 -->
  <view wx:if="{{ isRefreshing }}" class="weui-loadmore indexdrop">
    <view class="weui-loading"></view>
  </view>
  <navigator hover-class="none" class="top" wx:if="{{ userInfo.nickname }}" url="../info/info" open-type="navigate">
    <image class="bg" mode="widthFix" src="{{ userInfo.avatar }}"></image>
    <view class="box">
      <view class="left">
        <image class="img" mode="widthFix" src="{{ userInfo.avatar }}"></image>
        <view class="info">
          <text class="line name">{{ userInfo.nickname }}</text>
          <view class="line">
            <text class="city">{{ userInfo.address ? userInfo.address : "暂无" }}</text>
            <text class="school" wx:if="{{ !userInfo.university }}">+添加学校标签</text>
            <text class="school" wx:if="{{ userInfo.university }}">{{ userInfo.university }}</text>
          </view>
        </view>
      </view>
      <icon class="iconfont icon-arrow-right"></icon>
    </view>
  </navigator>
  <button class="top" wx:if="{{ !userInfo.nickname }}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">
    <image class="bg" mode="widthFix" src="/images/5.png"></image>
    <view class="box">
      <view class="left">
        <image class="img" mode="aspectFill" src="/images/portrait.jpg"></image>
        <view class="info">
          <text class="line name">{{ userInfo.mobile }}</text>
          <view class="line">
            <text class="city">{{ userInfo.address ? userInfo.address : "暂无" }}</text>
            <text class="school" wx:if="{{ !userInfo.university }}">+添加学校标签</text>
            <text class="school" wx:if="{{ userInfo.university }}">{{ userInfo.university }}</text>
          </view>
        </view>
      </view>
      <icon class="iconfont icon-arrow-right"></icon>
    </view>
  </button>
  <view class="list">
    <navigator hover-class="none" class="nav" url="/pages/collection/collection" open-type="navigate">
      <icon class="iconfont icon-shoucang"></icon>
      <text>收藏课程</text>
      <icon class="iconfont icon-arrow-right"></icon>
    </navigator>
    <navigator hover-class="none" class="nav" url="/pages/history/history" open-type="navigate">
      <icon class="iconfont icon-lishi"></icon>
      <text>学习历史</text>
      <icon class="iconfont icon-arrow-right "></icon>
    </navigator>
    <navigator hover-class="none" class="nav" url="/pages/myCircle/myCircle" open-type="navigate">
      <icon class="iconfont icon-quanzi"></icon>
      <text>我的圈子</text>
      <icon class="iconfont icon-arrow-right "></icon>
    </navigator>
    <navigator hover-class="none" class="nav" url="/pages/score/score" open-type="navigate">
      <icon class="iconfont icon-jifen"></icon>
      <text>我的积分</text>
      <icon class="iconfont icon-arrow-right "></icon>
    </navigator>
    <navigator hover-class="none" class="nav" url="/pages/invitation/invitation" open-type="navigate">
      <icon class="iconfont icon-yaoqing"></icon>
      <text>邀请好友</text>
      <icon class="iconfont icon-arrow-right "></icon>
    </navigator>
    <button class="nav" open-type="contact" bindcontact="handleContact">
      <icon class="iconfont icon-kefu"></icon>
      <text>联系客服</text>
      <icon class="iconfont icon-arrow-right "></icon>
    </button>
  </view>
</view>
