      <cover-image src="{{$state.imgHost}}/know.png" class="nextGude"></cover-image>
    </cover-view>
    <cover-image class="userGuide-img" src="{{$state.imgHost}}/experienceApply.png"></cover-image>
  </cover-view> -->
</view>