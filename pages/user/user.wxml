<view class="container">
  <!-- 下拉刷新 -->
  <view wx:if="{{ isRefreshing }}" class="weui-loadmore indexdrop">
    <view class="weui-loading"></view>
  </view>
  <navigator hover-class="none" class="top" url="../info/info" open-type="navigate">
    <image class="bg" mode="widthFix" src="{{ $state.userInfo.avatar }}"></image>
    <view class="box">
      <view class="left">
        <image class="img" mode="widthFix" src="{{ $state.userInfo.avatar }}"></image>
        <view class="info">
          <text class="line name">{{ $state.userInfo.nickname }}</text>
          <view class="line">
            <text class="city">{{ $state.userInfo.addressCity || "暂无" }}</text>
            <text class="school">{{ $state.userInfo.school || $state.userInfo.university || "+添加学校标签" }}</text>
          </view>
        </view>
      </view>
      <icon class="iconfont icon-arrow-right"></icon>
    </view>
  </navigator>
  <!-- <view class="score">
    <image src="{{ $state.imgHost }}/userbg.png" class="scoreBg"></image>
    <view class="contain">
      <text class="num">{{ my_score }}</text>
      <text class="dsc">可用积分</text>
    </view>
    <text class="score-btn" bindtap="toScore">兑换礼品</text>
  </view> -->
  <view class="navgationto">
    <view class="navgationBox" bindtap="toScore">
      <image src="/images/integralbg.png"></image>
      <text class="navTitle">积分兑换</text>
      <text class="num">{{ my_score }}可用积分</text>
      <view class="toScore">
        <image src="{{ $state.imgHost }}/Return.png"></image>
      </view>
    </view>
    <view class="navgationBox" bindtap="toInvite">
      <image src="/images/invitebg.png"></image>
      <text class="navTitle">邀请好友</text>
      <text class="num">邀请好友领福利</text>
       <view class="toInvite">
        <image src="{{ $state.imgHost }}/Return.png"></image>
      </view>
    </view>
  </view>
  <view class="list">
    <navigator hover-class="none" class="nav" url="/pages/collection/collection" open-type="navigate">
      <image src="/images/usershoucang.png" class="iconfont"></image>
      <text>我的收藏</text>
    </navigator>
    <navigator hover-class="none" class="nav" url="/pages/history/history" open-type="navigate">
      <image src="/images/userhistory.png" class="iconfont"></image>
      <text>学习历史</text>
    </navigator>
    <navigator hover-class="none" class="nav" url="/pages/myCircle/myCircle" open-type="navigate">
      <image src="/images/userfengcai.png" class="iconfont"></image>
      <text>风采展示</text>
    </navigator>
    <navigator class="nav" url="/pages/experience/experience" open-type="navigate">
      <image src="/images/experience.png"  class="iconfont"></image>
      <text>体验官申请</text>
    </navigator>
    <navigator hover-class="none" class="nav" url="../circle/circle?type=1" open-type="navigate">
      <image src="/images/useraddquan.png" class="iconfont"></image>
      <text>加入圈子</text>
    </navigator>
    <button class="nav" open-type="contact" bindcontact="handleContact">
      <image src="/images/userkefu.png" class="iconfont"></image>
      <text>联系客服</text>
    </button>
  </view>
  <navBar path="user" />
  <cover-view class="userGuide"  wx:if="{{$state.newGuide.user == 0}}" bindtap="closeGuide">
    <cover-image class="userGuide-msg" src="/images/userMsg.png"></cover-image>
    <cover-image class="userGuide-img" src="{{$state.imgHost}}/experienceApply.png"></cover-image>
    <cover-view class="userGuide-btn" bindtap="closeGuide">我知道了</cover-view>
  </cover-view>
</view>
