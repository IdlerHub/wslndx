 .voiceBox {
    width:100%;
    height:100%;
    position: fixed;
    top: 0;
    z-index: 5;
  }
  .voiceBox .voiceBoxmask {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    z-index: -1;
  }
  .voiceBox .voiceContent {
    width: 100%;
    min-height: 610rpx;
    padding: 42rpx 30rpx 0 30rpx;
    box-sizing: border-box;
    background: #fff;
    position: absolute;
    bottom: 0;
    box-shadow:0px 2px 10px 0px rgba(185,184,184,0.5);    
  }
  .voiceBox .voiceContent .replyplaceholder {
    display: block;
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
    position: relative;
    top: -15rpx;
  }
  .voiceBox .voiceContent .placeholder {
    font-size:36rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:50rpx;
    width: 100%;
    display: block;
  }
  .voiceBox .voiceContent .voiceaction {
    width: 100%;
    height: 476rpx;
    border-top: 1px solid rgba(237,237,237,1);
    margin-top: 42rpx;
    position: relative;
  }
  .voiceBox .voiceContent .voiceaction .voice-box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.voiceBox .voiceContent .voiceaction .voice-box text {
  width: 100%;
  text-align: center;
  position: absolute;
  box-sizing: border-box;
  padding-left: 16rpx;
  top:74rpx;
}
.voiceBox .voiceContent .voiceaction .voice-box .voice-image {
  width: 152rpx;
  height: 152rpx;
  position: relative;
  z-index: 5;
}

.voiceBox .voiceContent .voiceaction .voice-box .voice-txt {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 24rpx;
}

.voiceBox .voiceContent .voiceaction .voice-box .voice-water1{
  width: 152rpx;
  height: 152rpx;
  position: absolute;
  border: 1px solid pink;
  box-shadow: 0 0 120px 30px pink inset;
  border-radius: 100%;
  margin-top: -17rpx;
  opacity: 0;
}
.voiceBox .voiceContent .voiceaction .voice-box .voice-water1 {
  animation: wateranimate 2s 1s ease-out infinite;
}
.voiceBox .voiceContent .voiceaction .voice-box .voice-water2 {
  animation: wateranimate 2s 0s ease-out infinite;
}
.voiceBox .voiceContent .voiceaction .voiceauto-box {
  width: 100%;
  position: absolute;
  bottom: 255rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.voiceBox .voiceContent .voiceaction .voiceauto {
  width:440rpx;
  height:72rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  background:linear-gradient(90deg,rgba(255,164,95,1) 0%,rgba(255,76,76,1) 100%);
  border-radius:36px;
  display: flex;
  align-items: center;
}
.voiceBox .voiceContent .voiceaction .voiceauto image:nth-child(1){
  width:19rpx;
  height:24rpx;
  margin-right: 25rpx;
}
.voiceBox .voiceContent .voiceaction .voiceauto image:nth-child(2){
  flex: 1;
  height:24rpx;
}
.voiceBox .voiceContent .voiceaction .voiceauto text{
  font-size:34rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 22rpx;
  display: inline;
}
.voiceBox .voiceContent .voiceaction .voiceanew {
  width:160rpx;
  height:68rpx;
  background:rgba(242,242,242,1);
  border-radius:34rpx;
  position: absolute;
  left: 100rpx;
  bottom: 100rpx;
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  text-align: center;
  line-height: 68rpx;
}
.voiceBox .voiceContent .voiceaction .voicerelease {
  width:160rpx;
  height:68rpx;
  background:rgba(223,32,32,1);
  border-radius:34rpx;
  position: absolute;
  right: 100rpx;
  bottom: 100rpx;
  font-size:36rpx;
  font-weight:400;
  color:#fff;
  text-align: center;
  line-height: 68rpx;
}
.voiceBox .voiceContent .voiceaction .voicetextstatus {
  margin-top: 12rpx;
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
@keyframes wateranimate {
  0% {
    transform: scale(0.9);
    opacity: 0.8;
  }

  100% {
    transform: scale(2);
    opacity: 0;
  }
}
