page {
  padding: 0 30rpx;
}

.content {
  padding: 30rpx 0;
  display: flex;
}

.content .left .img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.content .right {
  flex: 1;
  padding-left: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.content .right .top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.content .right .name {
  font-size: 36rpx;
  color: #808080;
  line-height: 50rpx;
}

.content .right rich-text {
  margin-top: 10rpx;
  display: block;
  font-size: 36rpx;
  color: #2e2e2e;
  line-height: 50rpx;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.children {
  margin-left: 100rpx;
  padding: 30rpx 0;
  border-top: 1rpx solid #e9e9e9;
}

.children .from_user {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 72rpx;
}

.children .from_user .user_info {
  display: flex;
  align-items: center;
}

.children .from_user .user_info .img {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}

.children .from_user .user_info .name {
  font-size: 36rpx;
  color: #808080;
  line-height: 50rpx;
}

.children rich-text {
  margin-top: 10rpx;
  display: block;
  font-size: 36rpx;
  color: #2e2e2e;
  line-height: 50rpx;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.time-del {
  display: flex;
}

.time-del .time {
  font-size: 28rpx;
  color: #7e7e7e;
  line-height: 40rpx;
}

.time-del .del {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
  font-size: 28rpx;
  color: #7e7e7e;
  line-height: 40rpx;
}

.time-del .del image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}

.reply-btn {
  margin-top: 16rpx;
  display: inline-block;
  width: 124rpx;
  height: 60rpx;
  background: #ededed;
  border-radius: 16px;
  font-size: 16px;
  font-weight: 400;
  color: #666666;
  line-height: 60rpx;
}

.respond {
  color: #df2020;
}

.write .bg {
  width: 100%;
  height: 100%;
}

.write .ph-class {
  font-size: 44rpx;
  color: #bdbdbd;
}

.write .box {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 30rpx 0 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background: #f4f4f4;
}

.write .box textarea {
  width: 597rpx;
  height: 190rpx;
  background: #ffffff;
  border: 1rpx solid #bdbdbd;
  border-radius: 10rpx;
  font-size: 44rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.write .box .right {
  position: relative;
  height: 190rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.write .box .right .icon {
  width: 44rpx;
  height: 44rpx;
  z-index: 999;
}

.write .box .right .to {
  flex: 1;
  text-align: center;
}

.write .box .right .release {
  flex: 1;
  text-align: center;
  bottom: 0;
  background: none;
  font-size: 40rpx;
  color: #3a3a3a;
  line-height: 90rpx;
  z-index: 999;
  display: block;
  cursor: pointer;
}
