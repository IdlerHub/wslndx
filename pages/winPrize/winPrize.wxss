/* pages/winPrize/winPrize.wxss */
.giftBox {
  width: 100%;
  padding: 0 0  0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.giftBox .giftImg {
  width:100rpx;
  height:100rpx;
}
.giftBox .giftBox-right {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  margin-left: 30rpx;
  border-bottom: 1px solid rgba(237,237,237,1);
  padding: 40rpx 30rpx 40rpx 0;
  box-sizing: border-box;
}
.giftBox-txt {
  height: 100%;
  box-sizing: border-box;
}
.giftBox-txt .giftBox-title {
  font-size:40rpx;
  font-weight:400;
  color:rgba(58,58,58,1);
  margin-bottom: 20rpx;
  width: 330rpx;
}
.giftBox-txt  .giftBox-data {
  font-size:32rpx;
  font-weight:400;
  color:rgba(126,126,126,1);
}
.giftBox-right .giftBox-button {
  width:190rpx;
  height:80rpx;
  background:rgba(223,32,32,1);
  border-radius:4rpx;
  font-size:36rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 80rpx;
}
.qstBox {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 182rpx; 
}
.qstBox img {
  width: 510rpx;
  height: 334rpx;
}
.qstBox .qst-txt {
  font-size:34rpx;
  font-weight:400;
  color:rgba(126,126,126,1);
}
