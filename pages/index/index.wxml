      </view>
      <icon type="cancel" size="37" color="white" data-id="0" catchtap="closeSignIn"></icon>
    </view>
  </view>
  <signinBox wx:if="{{ !$state.signStatus.count && !dialog[0].image && showSignbox && times}}" state="{{$state}}"
