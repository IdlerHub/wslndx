.top {
    position: relative;
    height: 328rpx;
    overflow: hidden;
}

.top .authorize {
    overflow: initial;
}

.top .bg {
    position: absolute;
    left: -25rpx;
    bottom: 0;
    top: 0;
    margin: auto;
    width: 800rpx;
    height: 328rpx;
    filter: blur(20rpx) brightness(0.65);
    transform: scale(1.2);
}

.top .box {
    position: relative;
    z-index: 1;
}

.top .box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 130rpx 30rpx 0;
    box-sizing: border-box;
}

.box .left {
    display: flex;
    align-items: center;
}

.box .left .img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    border: 2rpx solid #B1ADAC;
}

.box .right {
    width: 19rpx;
    height: 34rpx;
}

.left .info {
    margin: 0 20rpx;
}

.info .line {
    text-align: left;
    line-height: 62rpx;
}

.info .name {
    /* width: 440rpx; */
    font-family: PingFangSC-Medium;
    font-size: 44rpx;
    line-height: 62rpx;
    color: #FFFFFF;
}

.info .city {
    display: inline-block;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #FFFFFF;
    line-height: 40rpx;
    border-radius: 4rpx;
    background: #B1ADAC;
    padding: 0 15rpx;
}

.info .school {
    margin-left: 15rpx;
    display: inline-block;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #FFFFFF;
    line-height: 40rpx;
    border-radius: 4rpx;
    background: #B1ADAC;
    padding: 0 15rpx;
}

.nav {
    line-height: 98rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
    border-bottom: 2rpx solid #E9E9E9;
    background: #fff;
}

.nav .item {
    display: inline-block;
    width: 140rpx;
    text-align: center;
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #7E7E7E;
    letter-spacing: 0;
}

.nav .item.active {
    position: relative;
    color: #DF2020;
    font-size: 44rpx;
}

.nav .item.active::after {
    content: '';
    position: absolute;
    bottom: -4rpx;
    left: 25%;
    width: 50%;
    height: 4rpx;
    background: #DF2020;
}

.wrap {
    padding-bottom: 180rpx;
    box-sizing: border-box;
}

.recommend .item {
    padding: 0 30rpx;
    box-sizing: border-box;
    background: #fff;
}

.recommend .item .content {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    box-sizing: border-box;
    border-bottom: 1rpx solid #E9E9E9;
}

.recommend .item:last-of-type .content {
    border-bottom: none;
}

.recommend .item .left {
    position: relative;
    width: 260rpx;
    height: 160rpx;
}

.recommend .left .poster {
    width: 260rpx;
    height: 160rpx;
    border-radius: 8rpx;
}

.recommend .left .icon {
    position: absolute;
    width: 52rpx;
    height: 52rpx;
    margin: auto;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.recommend .right {
    flex: 1;
    width: 410rpx;
    margin-left: 20rpx;
}

.recommend .right .name {
    line-height: 56rpx;
    font-size: 40rpx;
    color: #3A3A3A;
    letter-spacing: 0;
}

.recommend .right .actor {
    line-height: 40rpx;
    font-size: 28rpx;
    color: #8A8A8A;
    letter-spacing: 0;
    margin: 10rpx 0;
}

.recommend .right .info {
    line-height: 40rpx;
    font-size: 28rpx;
    color: #BFBFBF;
    letter-spacing: 0;
}

.recommend .right .info .key {
    color: #8A8A8A;
    margin-right: 12rpx;
}

.playNum {
    margin-left: 40rpx;
}

.category {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-content: flex-start;
    padding: 30rpx 30rpx 180rpx;
}

.category .item {
    width: 220rpx;
    height: 220rpx;
    background: #F5F5F5;
    margin-right: 15rpx;
    margin-bottom: 15rpx;
    text-align: center;
}

.category .item:nth-of-type(3n) {
    margin-right: 0;
}

.category .item .img {
    width: 75rpx;
    height: 66rpx;
    margin: 60rpx 0 10rpx;
}

.category .item .name {
    font-size: 30rpx;
    color: #3A3A3A;
    letter-spacing: 0;
    text-align: center;
}

.tabbar {
    position: fixed;
    height: 160rpx;
    width: 100%;
    bottom: 0;
    background: rgba(248, 248, 248, 0.99);
    display: flex;
    align-items: center;
    justify-content: space-around;
    z-index: 1;
    border-top: 2rpx solid #e9e9e9;
}

.tabbar .item {
    text-align: center;
    line-height: 24rpx;
}

.tabbar .icon {
    width: 80rpx;
    height: 80rpx;
}

.tabbar .name {
    display: block;
    font-size: 36rpx;
    color: #979797;
    line-height: 45rpx;
}

.fixed {
    position: fixed;
    z-index: 999;
}

.now {
    position: relative;
    margin: 20rpx auto 0;
    width: 690rpx;
    line-height: 95rpx;
    font-size: 36rpx;
    color: #ED5708;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.now .line {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
}

.now .icon {
    position: absolute;
    left: 0;
    top: -10rpx;
    width: 690rpx;
    height: 95rpx;
}


/*授权弹框*/

#getinfo-box {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
}

#getinfo-box .mask {
    position: absolute;
    z-index: 1;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.3)
}

#getinfo-box .content-box {
    position: absolute;
    z-index: 3;
    width: 604rpx;
    background: #fff;
    border-radius: 20rpx;
}

#getinfo-box .head,
#getinfo-box .footer {
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

#getinfo-box .head text {
    font-size: 40rpx;
    color: #3a3a3a;
}

#getinfo-box .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-top: 1rpx solid #E9E9E9;
    border-bottom: 1rpx solid #E9E9E9;
    padding: 40rpx;
}

#getinfo-box .content image {
    width: 74rpx;
    height: 74rpx;
    border-radius: 50%;
}

#getinfo-box .content .lg-tit {
    display: inline-block;
    margin: 30rpx 0;
    font-size: 32rpx;
    border-bottom: 1rpx solid #E9E9E9;
    padding-bottom: 24rpx;
}

#getinfo-box .content .sm-tit {
    font-size: 28rpx;
    color: #7e7e7e;
}

#getinfo-box .footer {
    position: relative;
}

#getinfo-box button {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    color: #3a3a3a;
    height: 100rpx;
}

.btn-comfirm::before {
    content: " ";
    position: absolute;
    height: 100rpx;
    width: 1rpx;
    left: 0;
    bottom: 0;
    background-color: #E9E9E9;
}

#getinfo-box .btn-comfirm {
    color: #df2020;
}