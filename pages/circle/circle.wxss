.wrap {
    padding: 30rpx 30rpx 80rpx;
    box-sizing: border-box;
}

.item {
    position: relative;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
}

.item:last-of-type {
    margin-bottom: 0;
}

.joined {
    margin-bottom: 44rpx;
}

.item .img {
    display: block;
    width: 100%;
    height: auto;
}

.item .btn-operate {
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
    right: 30rpx;
    width:172rpx;
    height:72rpx;
    background: #fff;
    border-radius: 35rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.item .btn-operate .icon {
    width:26rpx;
    height:26rpx;
    margin-right: 10rpx;
}

.item .btn-operate text {
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(223,32,32,1);
}

.title {
    display: flex;
    justify-content: space-between;
    text-align: justify;
    padding: 6rpx 0 30rpx 10rpx;
    align-items: center;
    font-size:40rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.title .title-txt .title-tl {
    display: inline-block;
    font-size:40rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.title .title-txt .titlemessge{
    display: inline-block;
    font-size:32rpx;
    font-weight:500;
    color:rgba(153,153,153,1);
    margin-left: 22rpx;
}
.title .join-btn{
    width:140rpx;
    height:64rpx;
    text-align: center;
    line-height: 64rpx;
    font-size:32rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    background:rgba(223,32,32,1);
    border-radius:32rpx;
}
