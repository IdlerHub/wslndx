.top .img{
  display: block;
  margin: 30rpx auto 0;
  width: 690rpx;
  height: 150rpx;
}
.wrap{
  padding: 0 30rpx;
  box-sizing: border-box;
}
.wrap .item{
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #E9E9E9;
}
.wrap .item:last-of-type{
  border-bottom: none;
}
.wrap .item .left{
  position: relative;
  width: 260rpx;
  height: 160rpx;
}
.wrap .left .poster{
  width: 260rpx;
  height: 160rpx;
  border-radius: 8rpx;
}
.wrap .left .icon{
  position: absolute;
  width: 52rpx;
  height: 52rpx;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.wrap .right{
  flex: 1;
  width: 410rpx;
  margin-left: 20rpx;
}
.wrap .right .name{
  line-height: 56rpx;
  font-size: 40rpx;
  color: #3A3A3A;
  letter-spacing: 0;
}
.wrap .right .actor{
  line-height: 40rpx;
  font-size: 28rpx;
  color: #8A8A8A;
  letter-spacing: 0;
  margin: 10rpx 0;
}
.wrap .right .info{
  line-height: 40rpx;
  font-size: 28rpx;
  color: #BFBFBF;
  letter-spacing: 0;
}
.wrap .right .info .key{
  color: #8A8A8A;
  margin-right: 12rpx;
}
.playNum{
  margin-left: 40rpx;
}