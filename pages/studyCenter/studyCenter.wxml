<!--pages/studyCenter/studyCenter.wxml-->
<template name="contentBox">
  <view class="contentBox">
    <view class="contentTop">
      <view class="contentTopleft">
        <text>{{title}} 3</text>
      </view>
      <view class="contentTopright" wx:if="{{isLive}}">
        <text>全部</text>
        <image src="/images/vedioRight.png"></image>
      </view>
    </view>
    <liveItem liveList="{{liveList}}" />
  </view>
</template>
<view class="pageTop">
  <view class="timeBox">
    <view class="timeItem">
      <image src="/images/studyIcon/studyDaysIcon.png" class="studyDaysIcon"></image>
      <view>
        <view><text>365</text> 天</view>
        <view>学习天数</view>
      </view>
    </view>
    <view class="timeItem">
      <image src="/images/studyIcon/studyHoursIcon.png" class="studyHoursIcon"></image>
      <view>
        <view><text>200</text> 小时</view>
        <view>本周学习</view>
      </view>
    </view>
  </view>
  <view class="iconBox">
    <view wx:for="{{iconList}}" wx:key="index" class="iconItem">
      <image src="{{item.image}}" style="width: {{item.width}}rpx;height:{{item.height}}rpx;"></image>
      <text>{{item.name}}</text>
    </view>
  </view>
</view>
<view wx:if="{{liveList[0] || lessonList[0]}}">
  <template is="contentBox" data="{{ title:'直播课程', isLive: 1, liveList }}"></template>
</view>
<view class="qst" wx:else>
  <image src="/images/liveqs.png"></image>
  <text>您还未开始学习</text>
  <navigator class="navigator" url="/pages/timetableList/timetableList">去选课</navigator>
</view>
<navBar path="video" />