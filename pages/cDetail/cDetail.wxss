@charset "UTF-8";
/* 环境变量 */
page {
  background: #eee; }

.wrap {
  box-sizing: border-box;
  padding-bottom: 120rpx; }
  .wrap > .item {
    background: #fff;
    padding: 0 30rpx;
    margin-bottom: 20rpx; }
    .wrap > .item:last-of-type {
      border-bottom: none; }
  .wrap .top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 0 20rpx; }
    .wrap .top .date {
      font-size: 28rpx;
      color: #bdbdbd; }
  .wrap .name {
    text-align: justify;
    line-height: 60rpx;
    font-size: 40rpx;
    color: #3a3a3a; }
  .wrap .img {
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start; }
    .wrap .img image {
      margin-top: 20rpx; }
  .wrap .btn {
    height: 125rpx;
    margin-top: 30rpx;
    position: relative;
    border-top: 2rpx solid #e8e8e8;
    display: flex;
    align-items: center;
    justify-content: stretch; }
    .wrap .btn .division {
      width: 2rpx;
      height: 40rpx;
      background: #dbdbdb; }

.btn > .item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center; }
  .btn > .item .iconfont {
    font-size: 58rpx;
    color: #bdbdbd;
    text-align: center; }
  .btn > .item .praise {
    width: 125rpx;
    height: 125rpx;
    background-size: cover;
    background-image: url("https://jinling-xcx-dev.obs.cn-north-1.myhuaweicloud.com/images/dev/heart-ani.png");
    animation-fill-mode: forwards; }
    .btn > .item .praise.end {
      background-position: 100% 0; }
    .btn > .item .praise.ani {
      animation: ani steps(20) 1s both; }
    .btn > .item .praise + .text {
      margin-left: -20rpx; }
  .btn > .item .text {
    margin-left: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #3a3a3a;
    letter-spacing: 0;
    line-height: 40rpx; }

.img.one {
  max-height: 100vh;
  overflow: hidden; }
  .img.one image {
    width: 400rpx; }

.img.two image {
  width: 335rpx;
  height: 335rpx;
  margin-right: 20rpx; }
  .img.two image:nth-of-type(2n) {
    margin-right: 0; }

.img.three image {
  width: 216rpx;
  height: 216rpx;
  margin-right: 20rpx; }
  .img.three image:nth-of-type(3n) {
    margin-right: 0; }

.content video {
  margin-top: 20rpx;
  width: 100%;
  height: 350rpx; }

.content .poster {
  position: absolute;
  width: 100%;
  height: 100%;
  filter: brightness(0.8); }

.content .bg {
  position: relative;
  margin-top: 20rpx;
  width: 100%;
  height: 350rpx; }

.content .play {
  position: absolute;
  z-index: 2;
  width: 74rpx;
  height: 74rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto; }

.top .left {
  display: flex;
  align-items: center; }

.top .avatarUrl {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 1rpx solid #d8d8d8; }

.top .text {
  margin-left: 20rpx;
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; }

.top .nickName {
  font-size: 40rpx;
  color: #343434; }

.top .school {
  margin-top: 5rpx;
  font-size: 28rpx;
  color: #bdbdbd; }

.footer {
  position: fixed;
  bottom: 0;
  height: 120rpx;
  width: 100%;
  background: #f8f8f8;
  display: flex; }

.write,
.to {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 120rpx; }

.write .icon {
  margin-top: 5rpx;
  width: 34rpx;
  height: 34rpx; }

.to .icon {
  font-size: 60rpx;
  color: #df2020;
  text-align: center;
  margin-top: -8rpx; }

.write .text,
.to .text {
  font-size: 40rpx;
  color: #343434;
  padding: 0 15rpx;
  line-height: 56rpx; }

.header {
  background-image: linear-gradient(-90deg, #22c3ff 0%, #56e7df 100%);
  height: 240rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx; }
  .header .left {
    display: flex;
    align-items: center; }
  .header .img {
    width: 140rpx;
    height: 140rpx;
    border-radius: 10rpx; }
  .header .text {
    margin-left: 20rpx;
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap; }
  .header .name {
    font-size: 50rpx;
    line-height: 50rpx;
    color: #fff; }
  .header .member {
    margin-top: 15rpx;
    font-size: 28rpx;
    line-height: 38rpx;
    color: #fff; }
    .header .member .icon {
      margin-top: 5rpx;
      margin-left: 10rpx;
      width: 21rpx;
      height: 21rpx; }
  .header .join {
    width: 135rpx;
    line-height: 53rpx;
    background: #ffffff;
    border-radius: 50rpx;
    font-size: 28rpx;
    color: #3a3a3a;
    text-align: center; }
  .header .joined {
    color: #bdbdbd; }
