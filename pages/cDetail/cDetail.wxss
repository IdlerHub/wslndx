@charset "UTF-8";
@import "../../template/template.wxss";
/* 环境变量 */
page {
  background: #eee; }

.wrap {
  box-sizing: border-box;
  padding-bottom: 120rpx; }


.content .play {
  position: absolute;
  z-index: 2;
  width: 74rpx;
  height: 74rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto; }

.top .left {
  display: flex;
  align-items: center; }
 .top .avatarUrl {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    border: 1rpx solid #d8d8d8;
    background:#e9e9e9;
    position: relative;
  }
  .top .avatarUrl image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
  }
  .top .avatarUrl .fs {
    width:22rpx;
    height:24rpx;
    position: absolute;
    bottom: 0rpx;
    right: -6rpx;
  }
.top .text {
  margin-left: 20rpx;
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; }

.top .nickName {
  font-size: 40rpx;
  color: #343434;
  display: flex;
  align-items: center; }
.top .school {
  margin-top: 5rpx;
  font-size: 28rpx;
  margin-left: 21rpx;
  color: #bdbdbd; }
 .top .right {
    display: flex;
    align-items: center;
  }
.top .right .attension {
    width:100rpx;
    height:48rpx;
    border-radius:28rpx;
    border:1px solid rgba(223,32,32,1);
    font-size:28rpx;
    font-weight:400;
    color:rgba(223,32,32,1);
    text-align: center;
    line-height: 48rpx;
    margin-right: 25rpx;
  }
.top .right .collect {
    padding-bottom: 39rpx;
    color: #B3B3B3;
    font-size: 54rpx;
  }
.footer {
  position: fixed;
  bottom: 0;
  height: 120rpx;
  width: 100%;
  background: #f8f8f8;
  display: flex; }

.write,
.to {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 120rpx; }

.write .icon {
  margin-top: 5rpx;
  width: 34rpx;
  height: 34rpx; }

.to .icon {
  font-size: 60rpx;
  color: #df2020;
  text-align: center;
  margin-top: -8rpx; }

.write .text,
.to .text {
  font-size:44rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(223,32,32,1);
  letter-spacing: 12rpx; }

.header {
  background-image: linear-gradient(-90deg, #22c3ff 0%, #56e7df 100%);
  height: 240rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx; }
  .header .left {
    display: flex;
    align-items: center; }
  .header .img {
    width: 140rpx;
    height: 140rpx;
    border-radius: 10rpx; }
  .header .text {
    margin-left: 20rpx;
    width: 400rpx;
    margin-right: 15rpx;
   }
    .header .text .textBox {
      display: flex;
      align-items: center;
    }
    .header .text image {
      width: 44rpx;
      height: 44rpx;
      margin:0 0 0 20rpx; }
  .header .name {
    font-size: 50rpx;
    line-height: 50rpx;
    color: #fff;
    max-width: 390rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap; }
  .header .member {
    margin-top: 15rpx;
    font-size: 28rpx;
    line-height: 38rpx;
    color: #fff; }
    .header .member .icon {
      margin-top: 5rpx;
      margin-left: 10rpx;
      width: 21rpx;
      height: 21rpx; }
  .header .join {
    width:148rpx;
    height:68rpx;
    background:rgba(255,255,255,1);
    border-radius:6rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: rgba(223,32,32,1);
    text-align: center;
    line-height: 68rpx; }
  .header .joined {
    color: rgba(204,204,204,1); }
.ewm {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.65);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.ewm .ewmBox {
  width:485rpx;
  height:580rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  position: absolute;
  top: 400rpx;
  left: 50%;
  margin-left: -230rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.ewm .ewmBox .ewmImg {
  width:358rpx;
  height:348rpx;
}
.ewm .ewmBox .ewmTxt {
  font-size:36rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-top: 5rpx;
  text-align: center;
}
.ewm .shett {
  width:750rpx;
  height:267rpx;
  background:rgba(252,252,252,1);
  border-radius:40rpx 40rpx 0 0;
  position: absolute;
  bottom: 0;
  animation: show 1s;
}
.ewm .shett .shet-item {
  width: 100%;
  height: 118rpx;
  text-align: center;
  line-height: 118rpx;
  font-size:38rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  border-bottom:1px solid rgba(237,237,237,1) ;
}
.ewm .shett .shet-item:nth-child(2) {
  border: 0;
}
@keyframes show {
  from{
    bottom: -267rpx;
  }
  to {
    bottom: 0;
  }
}

.upbottom {
  width: 100%;
  padding: 20rpx 0 30rpx 0;
  text-align: center;
  font-size: 28rpx;
}


