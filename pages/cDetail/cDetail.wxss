@charset "UTF-8";
/* 环境变量 */
page {
  background: #eee; }

.wrap {
  box-sizing: border-box;
  padding-bottom: 120rpx; }
  .wrap > .item {
    background: #fff;
    padding: 0 30rpx;
    margin-bottom: 20rpx; }
    .wrap > .item:last-of-type {
      border-bottom: none; }
  .wrap .top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 0 20rpx; }
    .wrap .top .date {
      font-size: 28rpx;
      color: #bdbdbd; }
  .wrap .name {
    text-justify: newspaper;
    word-break: break-all;
    width: 100%;
    line-height: 60rpx;
    font-size: 40rpx;
    color: #3a3a3a;
    word-wrap: break-word;
    white-space: pre-line;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 5;
    overflow: hidden; 
    /* text-align: justify; */ }
  .wrap .img {
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start; }
    .wrap .img image {
      margin-top: 20rpx; }
  .wrap .btn {
    height: 125rpx;
    margin-top: 30rpx;
    position: relative;
    border-top: 2rpx solid #e8e8e8;
    display: flex;
    align-items: center;
    justify-content: stretch; }
    .wrap .btn .division {
      width: 2rpx;
      height: 40rpx;
      background: #dbdbdb; }

.btn > .item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center; }
  .btn > .item .iconfont {
    font-size: 58rpx;
    color: #bdbdbd;
    text-align: center; }
  .btn > .item .praise {
    width: 125rpx;
    height: 125rpx;
    background-size: cover;
    background-image: url("https://jinling-xcx-dev.obs.cn-north-1.myhuaweicloud.com/images/pro/heart-ani.png");
    animation-fill-mode: forwards; }
    .btn > .item .praise.end {
      background-position: 100% 0; }
    .btn > .item .praise.ani {
      animation: ani steps(20) 1s both; }
    .btn > .item .praise + .text {
      margin-left: -20rpx; }
  .btn > .item .text {
    margin-left: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #3a3a3a;
    letter-spacing: 0;
    line-height: 40rpx; }
    
.img.one {
  max-height: 100vh;
  overflow: hidden; }
  .img.one image {
    width: 400rpx; }

.img.two image {
  width: 335rpx;
  height: 335rpx;
  margin-right: 20rpx; }
  .img.two image:nth-of-type(2n) {
    margin-right: 0; }

.img.three image {
  width: 216rpx;
  height: 216rpx;
  margin-right: 20rpx; }
  .img.three image:nth-of-type(3n) {
    margin-right: 0; }

.content video {
  margin-top: 20rpx;
  width: 100%;
  height: 350rpx; }

.content .poster {
  position: absolute;
  width: 100%;
  height: 100%;
  filter: brightness(0.8); }

.content .bg {
  position: relative;
  margin-top: 20rpx;
  width: 100%;
  height: 350rpx; }

.content .play {
  position: absolute;
  z-index: 2;
  width: 74rpx;
  height: 74rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto; }

.top .left {
  display: flex;
  align-items: center; }

.top .avatarUrl {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 1rpx solid #d8d8d8; }

.top .text {
  margin-left: 20rpx;
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; }

.top .nickName {
  font-size: 40rpx;
  color: #343434; }

.top .school {
  margin-top: 5rpx;
  font-size: 28rpx;
  color: #bdbdbd; }

.footer {
  position: fixed;
  bottom: 0;
  height: 120rpx;
  width: 100%;
  background: #f8f8f8;
  display: flex; }

.write,
.to {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 120rpx; }

.write .icon {
  margin-top: 5rpx;
  width: 34rpx;
  height: 34rpx; }

.to .icon {
  font-size: 60rpx;
  color: #df2020;
  text-align: center;
  margin-top: -8rpx; }

.write .text,
.to .text {
  font-size:44rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(223,32,32,1);
  letter-spacing: 12rpx; }

.header {
  background-image: linear-gradient(-90deg, #22c3ff 0%, #56e7df 100%);
  height: 240rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx; }
  .header .left {
    display: flex;
    align-items: center; }
  .header .img {
    width: 140rpx;
    height: 140rpx;
    border-radius: 10rpx; }
  .header .text {
    margin-left: 20rpx;
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap; }
    .header .text .textBox {
      display: flex;
      align-items: center;
    }
    .header .text image {
      width: 44rpx;
      height: 44rpx;
      margin:0 0 0 20rpx; }
  .header .name {
    font-size: 50rpx;
    line-height: 50rpx;
    color: #fff; }
  .header .member {
    margin-top: 15rpx;
    font-size: 28rpx;
    line-height: 38rpx;
    color: #fff; }
    .header .member .icon {
      margin-top: 5rpx;
      margin-left: 10rpx;
      width: 21rpx;
      height: 21rpx; }
  .header .join {
    width:148rpx;
    height:68rpx;
    background:rgba(255,255,255,1);
    border-radius:6rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: rgba(223,32,32,1);
    text-align: center;
    line-height: 68rpx; }
  .header .joined {
    color: rgba(204,204,204,1); }
.ewm {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.65);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.ewm .ewmBox {
  width:460rpx;
  height:504rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -252rpx;
  margin-left: -230rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.ewm .ewmBox .ewmImg {
  width:348rpx;
  height:348rpx;
}
.ewm .ewmBox .ewmTxt {
  font-size:36rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-top: 10rpx;
}
.ewm .shett {
  width:750rpx;
  height:267rpx;
  background:rgba(252,252,252,1);
  border-radius:40rpx 40rpx 0 0;
  position: absolute;
  bottom: 0;
  animation: show 1s;
}
.ewm .shett .shet-item {
  width: 100%;
  height: 118rpx;
  text-align: center;
  line-height: 118rpx;
  font-size:38rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  border-bottom:1px solid rgba(237,237,237,1) ;
}
.ewm .shett .shet-item:nth-child(2) {
  border: 0;
}
@keyframes show {
  from{
    bottom: -267rpx;
  }
  to {
    bottom: 0;
  }
}
