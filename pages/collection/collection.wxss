page .item {
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
}

page .item:last-of-type .content {
  border-bottom: none;
}

page .item .left {
  position: relative;
  width: 260rpx;
  height: 160rpx;
}

page .content {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e9e9e9;
}

page .left .poster {
  width: 260rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

page .left .icon {
  position: absolute;
  width: 52rpx;
  height: 52rpx;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

page .right {
  flex: 1;
  width: 410rpx;
  margin-left: 20rpx;
}

page .right .name {
  line-height: 56rpx;
  font-size: 40rpx;
  color: #3a3a3a;
  letter-spacing: 0;
}

page .right .actor {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #8a8a8a;
  letter-spacing: 0;
  margin: 10rpx 0;
}

page .right .info {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #bfbfbf;
  letter-spacing: 0;
}

page .right .info .key {
  color: #8a8a8a;
  margin-right: 12rpx;
}

page .right .info .playNum {
  margin-left: 40rpx;
}

page .ncol {
  margin-top: 200rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

page .ncol text {
  margin-top: -100rpx;
  font-size: 32rpx;
  color: #949494;
  width: 100%;
  text-align: center;
}
