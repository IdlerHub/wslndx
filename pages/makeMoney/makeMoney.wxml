<!--pages/makeMoney/makeMoney.wxml-->
<view class="container">
  <view class="top">
    <view class="topBox">
      <view class="title">我的收益</view>
      <navigator class="moneyBox" hover-class="none" url="/pages/myEarnings/myEarnings" open-type="navigate">
        <image src="{{$state.imgHost}}/makeMoneyImg.png"></image>
        <text>累计 ¥890.9</text>
        <image src="{{$state.imgHost}}/makeMoneyRbtn.png"></image>
      </navigator>
    </view>
    <view class="bottomBox">
      <navigator class="bottomBox_person" hover-class="none" url="/pages/myApprentice/myApprentice"
        open-type="navigate">
        <view class="dayadd">今日+0</view>
        <view class="bottomBox_center">
          <text>0</text>
          <image src="{{$state.imgHost}}/makeMoneyRbtn.png"></image>
        </view>
        <view class="bottomBox-txt">已收徒(人)</view>
        <view class="border"></view>
      </navigator>
      <view class="bottomBox_person bottomBox_money">
        <view class="dayadd">今日+0.0</view>
        <view class="bottomBox_center">
          <text>¥0.0</text>
        </view>
        <view class="bottomBox-txt">收徒收益(元)</view>
        <view class="border"></view>
      </view>
      <view class="bottomBox_person bottomBox_tribute">
        <view class="dayadd">今日+0.0</view>
        <view class="bottomBox_center">
          <text>0</text>
          <image src="{{$state.imgHost}}/makeMoneyRbtn.png"></image>
        </view>
        <view class="bottomBox-txt">徒弟进贡(积分)</view>
      </view>
    </view>
  </view>
  <view class="rankin_list">
    <view class="rankin_listTop">
      <view class="title">收徒排行版</view>
      <navigator class="strategy" hover-class="none" url="/pages/strategy/strategy">收徒攻略></navigator>
    </view>
    <view class="rankin_listTitle">
      <text>排名</text>
      <text>师傅昵称</text>
      <text>收徒人数</text>
      <text>收益(元)</text>
    </view>
    <view class="list" wx:if="{{list.length > 0}}">
      <view class="item" wx:for="{{list}}" wx:key="index">
        <image src="/images/apprentice{{index < 3 ? index : ''}}.png" class="ranking" wx:if="{{index < 3}}"></image>
        <view class="ranking" wx:else>{{index+1}}</view>
        <view class="itemMsg">
          <image src="{{item.avatar || '/images/apprenticeAva.png'}}"></image>
          <text>{{item.name}}</text>
          <text>{{item.number2 || item.number}}</text>
          <text>+{{item.money}}</text>
        </view>
      </view>
    </view>
    <view class="qst" wx:else>
      <image src="{{$state.imgHost}}/makeMoneyqst.png" class="qstImg"></image>
      <text>暂无排名，去邀请好友</text>
    </view>
  </view>
  <view class="kong" wx:if="{{list.length > 0}}">
    454
  </view>
</view>
<recruitShare type="{{false}}"></recruitShare>