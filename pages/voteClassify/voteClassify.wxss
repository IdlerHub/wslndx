/* pages/voteClassify/voteClassify.wxss */
page {
  background: #f7f7f7;
}
.classify-body {
  margin: 38rpx 0 0 30rpx;
}
.classify-title {
  margin-bottom: 21rpx;

  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}
.classify-list {
  /* width: calc(100%-30rpx); */
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  overflow: hidden;
}
.classify-item {
  min-width: 150rpx;
  padding: 0 30rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;

  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.vote-footer {
  position: fixed;
  bottom: 40rpx;
  right: 30rpx;
  left: 30rpx;
  display: flex;
  justify-content: center;
}
.vote-footer > image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
}
.footer-left,
.footer-right {
  display: flex;
  justify-content: center;
  align-items: center;

  height: 98rpx;
  line-height: 98rpx;
  border-radius: 52rpx;

  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}
.footer-left {
  width: 400rpx;
  box-shadow: 3rpx 3rpx 12rpx 0rpx rgba(255, 30, 0, 0.7);
  border-radius: 49rpx 0rpx 0rpx 49rpx;
}
.footer-right {
  width: 340rpx;
  border-radius: 0rpx 49rpx 49rpx 0rpx;
  box-shadow: 3rpx 3rpx 12rpx 0rpx rgba(255, 30, 0, 0.7);
}
.footer-left image {
  width: 44rpx;
  height: 55rpx;
  margin-right: 16rpx;
}
.footer-right image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 16rpx;
}
