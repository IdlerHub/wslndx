page{
  background: #F4F4F4;
}
textarea{
  height: 100vh;
  width: 100%;
  padding: 20rpx 30rpx 100rpx;
  box-sizing: border-box;
  font-size: 44rpx;
}
.ph-class{
  font-size: 44rpx;
  color: #BDBDBD;
}
.footer{
  position: fixed;
  bottom: 0;
  height: 150rpx;
  width: 100%;
  background: #EDEDED;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.footer::after{
  content: '';
  width: 2rpx;
  height: 40rpx;
  background: #BDBDBD;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.footer>.item{
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 40rpx;
  color: #3A3A3A;
}
.footer>.item[disabled]{
  background: none;
}