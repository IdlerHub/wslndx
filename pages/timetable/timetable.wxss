/* pages/timetable/timetable.wxss */
.search-box {
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: cneter;
}
.search-box .search-left {
  width:548rpx;
  height:84rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background:rgba(243,243,243,1);
  border-radius:10rpx;
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}
.search-box .search-left image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}
.search-box .search-left text{
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.search-box .search-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.search-box .search-right .iconfont{
  width: 46rpx;
  height: 46rpx;
  margin-bottom: 8rpx;
}
.search-box .search-right text {
  font-size:28rpx;
  font-weight:500;
  color:rgba(126,126,126,1);
}
.nav {
  box-sizing: border-box;
  border-bottom: 2rpx solid #e9e9e9;
  background: #fff;
  height: 100rpx;
}

.nav .item {
  line-height: 100rpx;
  display: inline-block;
  width: 118rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #7e7e7e;
  letter-spacing: 0;
}
.nav .itemone {
  padding-left: 14rpx;
}

.nav .item.active {
  position: relative;
  color: #df2020;
  font-size: 44rpx;
  font-weight: 800;
}

.nav .item.active::after {
  content: "";
  position: absolute;
  bottom: 2rpx;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background: #df2020;
}
.nav .tabclassify {
  height: 100%;
  width: 74rpx;
  float: right;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background:linear-gradient(270deg,rgba(255,255,255,1) 0%,rgba(255,255,255,0.9) 100%);
  margin-top: -100rpx;
  position: relative;
}
.nav .tabclassify image {
  width: 46rpx;
  height: 46rpx;

}
.nav .integral {
  height: 100%;
  float: right;
  padding: 10rpx 0 0 30rpx;
  box-sizing: border-box;
}
.contariner {
  padding: 0 30rpx;
}
.contariner .item {
  padding-top: 31rpx;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #E9E9E9;
  display: flex;
  align-items: center;
}
.contariner .item .imgBox {
  position: relative;
  width: 260rpx;
  height: 160rpx;
}
.contariner .item .img {
  width: 100%;
  height: 100%;
  border-radius:10rpx;
}

.contariner .item .icon {
  width: 52rpx;
  height: 52rpx;
  opacity: 0.7;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -26rpx;
  margin-left: -26rpx;
} 

.contariner .item .txtBox {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
  width: 0;
}
.contariner .item .txtBox .title {
  width: 100%;
  font-size:40rpx;
  font-weight:400;
  color:rgba(58,58,58,1);
  line-height:56rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.contariner .item .txtBox .time {
  font-size:28rpx;
  font-weight:400;
  color:rgba(126,126,126,1);
  line-height:40rpx;
  margin-top: 12rpx;
  margin-bottom: 10rpx;
}
.contariner .item .txtBox .textBottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contariner .item .txtBox .textBottom .teacher {
  display: flex;
  align-items: center;
}
.contariner .item .txtBox .textBottom  .teacher image {
  width: 24rpx;
  height: 26rpx;
  margin-right: 10rpx;
}
.contariner .item .txtBox .textBottom  .teacher text {
  font-size:28rpx;
  font-weight:400;
  color:rgba(126,126,126,1);
} 
.contariner .item .txtBox .textBottom .btn {
  padding: 4rpx 16rpx;
  background:rgba(223,32,32,1);
  border-radius:25rpx;
  font-size:30rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}