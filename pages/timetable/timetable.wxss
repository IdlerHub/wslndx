/* pages/timetable/timetable.wxss */
/* @import '/pages/timetable/timetable.skeleton.wxss'; */
page {
  background-color: #EDEDED;
  position: relative;
}
.pageTop {
  position: sticky;
  top: 0;
  z-index: 999;
}
.search-box {
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: cneter;
}
.search-box .search-left {
  width:548rpx;
  height:84rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background:rgba(243,243,243,1);
  border-radius:10rpx;
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}
.search-box .search-left image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}
.search-box .search-left text{
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.search-box .search-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.search-box .search-right .iconfont{
  width: 46rpx;
  height: 46rpx;
  margin-bottom: 8rpx;
}
.search-box .search-right text {
  font-size:28rpx;
  font-weight:500;
  color:rgba(126,126,126,1);
}
.nav {
  box-sizing: border-box;
  border-bottom: 2rpx solid #e9e9e9;
  background: #F5F6FA;
  height: 100rpx;
  justify-content: space-between;
}

.nav .weekItem {
  line-height: 100rpx;
  display: inline-block;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #7e7e7e;
  letter-spacing: 0;
}

.nav .weekItem.active {
  position: relative;
  color: #df2020;
  font-size: 36rpx;
  font-weight: 800;
}

.nav .weekItem.active::after {
  content: "";
  position: absolute;
  bottom: 5rpx;
  left: 50%;
  width: 36rpx;
  height: 4rpx;
  margin-left: -18rpx;
  background: #df2020;
  border-radius: 3rpx;
}

.scrollView{
  height: calc(100vh - 126px);
}
.itemBox {
  margin-bottom: 20rpx;
}

.itemBox:last-child {
  margin-bottom: 200rpx;
}

.itemBox .week-title{
  width: 100%;
  height: 108rpx;
  line-height: 108rpx;
  background: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.itemBox .week-title::after{
  position: absolute;
  content: "";
  height: 1px;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  background: #EDEDED;
}
.itemBox .week-title .title-left{
  height:59rpx;
  font-size: 36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:59rpx;
}
.itemBox .week-title .title-sum{
  height:53rpx;
  font-size: 36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#7e7e7e;
  line-height:53rpx;
}
.contariner {
  width: 100%;
}
.contariner .week-none{
  width: 100%;
  height: 220rpx;
  text-align: center;
  line-height: 220rpx;
  font-size:42rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  /* font-weight:400; */
  color:#999999;
  background: #fff;
}

.contariner .itemDay {
  display: inline-block;
  font-size: 36rpx;
  margin-top: 20rpx;
}

/* 缺省 */
.none-lesson{
  width: 100%;
  height: calc(100vh - 249rpx);
  font-size:  34rpx;
  color: #7E7E7E;
  line-height: 48rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  background-color: #fff;
  text-align:center;
}
.none-lesson image{
  width: 490rpx;
  height: 314rpx;
  margin-top: 88rpx;
  margin-bottom: 20rpx;
}