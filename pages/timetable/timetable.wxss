/* pages/timetable/timetable.wxss */
.search-box {
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: cneter;
}
.search-box .search-left {
  width:548rpx;
  height:84rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background:rgba(243,243,243,1);
  border-radius:10rpx;
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}
.search-box .search-left image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}
.search-box .search-left text{
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.search-box .search-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.search-box .search-right .iconfont{
  width: 46rpx;
  height: 46rpx;
  margin-bottom: 8rpx;
}
.search-box .search-right text {
  font-size:28rpx;
  font-weight:500;
  color:rgba(126,126,126,1);
}
.nav {
  box-sizing: border-box;
  border-bottom: 2rpx solid #e9e9e9;
  background: #fff;
  height: 100rpx;
}

.nav .item {
  line-height: 100rpx;
  display: inline-block;
  width: 118rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #7e7e7e;
  letter-spacing: 0;
}
.nav .itemone {
  padding-left: 14rpx;
}

.nav .item.active {
  position: relative;
  color: #df2020;
  font-size: 44rpx;
  font-weight: 800;
}

.nav .item.active::after {
  content: "";
  position: absolute;
  bottom: 2rpx;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background: #df2020;
}
.nav .tabclassify {
  height: 100%;
  width: 74rpx;
  float: right;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background:linear-gradient(270deg,rgba(255,255,255,1) 0%,rgba(255,255,255,0.9) 100%);
  margin-top: -100rpx;
  position: relative;
}
.nav .tabclassify image {
  width: 46rpx;
  height: 46rpx;

}
.nav .integral {
  height: 100%;
  float: right;
  padding: 10rpx 0 0 30rpx;
  box-sizing: border-box;
}