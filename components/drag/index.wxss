.item-wrap {
  position: relative;
}
.item-wrap .item {
  position: absolute;
  width: 100%;
  z-index: 1;
}
.item-wrap .item.itemTransition {
  transition: transform 0.3s;
}
.item-wrap .item.zIndex {
  z-index: 2;
}
.item-wrap .item.cur {
  transition: initial;
}
.item-wrap .item.fixed {
  z-index: 0 !important;
}
.join-top {
 width: 100%; 
 display: flex;
 align-items: center;
 justify-content: space-between;
 margin: 20rpx 0 0 0;
}
.join-top .join-title {
  font-size:40rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  display: flex;
