<!--components/talkCommon/talkCommon.wxml-->
<scroll-view scroll-y scroll-top="{{scrollTop}}" class="scrollView" enable-flex>
  <view class="talkItem" wx:for="{{talkList}}" wx:key="index" style="padding: {{item.share || item.fromApp ? '11rpx' : '20rpx'}} 20rpx;">
    <view class="contentBox">
      <rich-text nodes="{{ '<span style=color:#E6E6E6;>' + item.name + '<span>' + item.content}}"
      wx:if="{{!item.share}}"></rich-text>
      <text class="shareTxt" wx:else>{{item.name}} 分享了课程</text>
      <button class="specalBox shareBox" hover-class="none" open-type="share" wx:if="{{item.share}}">
        <view class="specalBox shareBox" >
        <image src="../../images/weixin.png" class="weixin"></image>
        <text>去分享</text>
      </view>
      </button>
      <view class="specalBox appBox" wx:if="{{item.fromApp}}">
        <image src="../../images/toAppIcon.png" class="weixin"></image>
        <text>去APP</text>
      </view>
    </view>
    </view>
</scroll-view>
