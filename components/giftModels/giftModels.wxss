/* components/giftModels/giftModels.wxss */
.c-gift-models{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}
.mask-bg{
  width: 100%;
  height: 100vh;
  background:rgba(0,0,0,0.5);
}
.gift-box{
  width: 100%;
  max-height: 911rpx;
  border-radius: 30rpx 30rpx 0 0;
  background: #fff;
  position: absolute;
  bottom: 0;
  /* padding-bottom: 30rpx; */
}
.gift-models-close{
  width: 48rpx !important;
  height: 48rpx !important;
  border-radius: 100% !important;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.box-info{
  margin: 30rpx 30rpx 0 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #EDEDED;
}
.gift-img{
  width: 262.5rpx;
  height: 180rpx;
  margin-right: 30rpx;
  background: #EDEDED;
  border-radius: 10rpx;
  border: 1px solid #EDEDED;
  overflow: hidden;
}
.gift-img>image{
  width: 100%;
  height: 100%;
}
.gift-info{
  flex: 1;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.gift-price{
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #F2323A;
  margin-bottom: 10rpx;
}
.gift-price>text{
  height: 56rpx;
  font-size: 52rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #F2323A;
  line-height: 56rpx;
  margin-right: 10rpx;
}
.gift-models{
  height: 32rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 32rpx;
}

/* 规格列表 */
.models-list{
  max-height: 543rpx;
  margin: 0 0 0 30rpx;
  overflow: auto;
}
.models-item{
  margin-top: 30rpx;
}

.models-title{
  height: 42rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 42rpx;
  margin: 30rpx 0 19rpx 0;
}
.models-content{
  display: flex;
  flex-wrap: wrap;
  border-bottom: 1px solid #EDEDED;
}
.models-content:last-child{
  border: 0;
}
.content-item{
  min-width: 150rpx;
  max-width: 200rpx;
  height: 80rpx;
  background: #F5F6FA;
  border-radius: 10rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #333333;
  padding: 0 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 选中颜色 */
.selected-models{
  background:rgba(242, 50, 58, 0.1);
  color: #F2323A;
}
/* 按钮 */
.btn-footer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}
.gift-btn{
  margin: 30rpx;
  height: 96rpx;
  background: #F2323A;
  border-radius: 48rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #FFFFFF;
  line-height: 96rpx;
  text-align: center;
}
.btn-site{
  width: 100%;
  height: 156rpx;
}