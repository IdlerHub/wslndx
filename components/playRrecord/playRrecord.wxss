/* components/playRrecord/playRrecord.wxss */
.voiceBox {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin: 20rpx 30rpx;
}

.voiceBox .voiceBoxRight {
  width: 420rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(90deg, rgba(255, 126, 49, 1) 0%, rgba(255, 53, 53, 1) 100%);
  border-radius: 44rpx;
  padding: 0 35rpx 0 46rpx; 
  box-sizing: border-box;
}

.voiceBox .voiceBoxRight image:nth-child(1) {
  width: 27rpx;
  height: 35rpx;
}

.voiceBox .voiceBoxRight .centerImg {
  width: 192rpx;
  height: 28rpx;
  background: url('https://hwcdn.jinlingkeji.cn/images/dev/postVoiceImg.png') center;
  background-size: 563rpx 28rpx;
}

.voiceBox .voiceBoxRight .centerActive {
  animation: centerActive 60s infinite;
}

@keyframes centerActive {
  0% {
    background-position-x: 0;
  }
  100% {
    background-position-x: -600rpx;
  }
}

.voiceBox .voiceBoxRight .timer {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.voiceBox .delBtn {
  width: 178rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(237, 237, 237, 1);
  border-radius: 44rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(130, 130, 130, 1);
}

.voiceBox .delBtn image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}