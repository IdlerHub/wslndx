/* components/timeScore/timeScore.wxss */
.circleNum {
  opacity: 0;
  position: absolute;
}

.scoreBox {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.scoreBox .scoreBg{
  width: 163rpx;
  height: 110rpx;
  position: absolute;
  top: 62rpx;
}

.iconBox {
  /* width: 120rpx;
