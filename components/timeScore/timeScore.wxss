}

.iconBox .icon {
  width: 124rpx;
  height: 76rpx;
  position: relative;
  border-radius: 100% 100% 18rpx 18rpx;
  overflow: hidden;
}

.iconBox .icon::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 20px;
  height: 100%;
  background-image: -moz-linear-gradient(0deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0));
  background-image: -webkit-linear-gradient(0deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0));
  transform: skewx(-25deg);
  -o-transform: skewx(-25deg);
  -moz-transform: skewx(-25deg);
  -webkit-transform: skewx(-25deg);
  animation: active 2.5s infinite;
}

@keyframes active {
  from {
    left: -10rpx;
  }

  to {
    left: 120px;
  }
}

.scoreBox .slider {
  position: relative;
  z-index: 1;
  width: 162rpx;
  height: 10rpx;
  background: #E20D08;
  border-radius: 7rpx;
  overflow: hidden;
}

.scoreBox .slider text {
  display: block;
  width: 0;
  height: 100%;
  border-radius: 7rpx;
  background: #F6FF00;
}

.scoreBox .inro {
  margin-top: 6rpx;
  position: relative;
  z-index: 1;
  border-radius: 0px 0px 16rpx 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 35rpx;
  text-align: center;
}