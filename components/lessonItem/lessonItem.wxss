/* components/lessonItem/lessonItem.wxss */
.itemBox {
  padding: 0 20rpx;
}

.item {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #E9E9E9;
}

.item:last-child {
  border: none;
}

.item .coverBox {
  width: 260rpx;
  height: 160rpx;
  background: #D8D8D8;
  border-radius: 10rpx;
  border: 1rpx solid #EDEDED;
  overflow: hidden;
  position: relative;
  margin-right: 30rpx;
}

.item .coverBox image:nth-child(1) {
  width: 100%;
  height: 100%;
}

.item .coverBox image:nth-child(2) {
  width: 50rpx;
  height: 50rpx;
  opacity: 0.9;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

.item .contentBox {
  flex: 1;
  width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.item .contentBox .title {
  width: 380rpx;
  font-size: 38rpx;
  font-weight: 400;
  color: #3A3A3A;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-bottom: 7rpx;
}

.item .contentBox .tabLine text {
  display: inline-block;
  padding: 3rpx 6rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #808080;
  line-height: 33rpx;
  background: #EDEFF7;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.item .contentBox .bottom {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 18rpx;
}

.item .contentBox .bottom .left {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.item .contentBox .bottom .left text:nth-child(2) {
  font-size: 20rpx;
  margin: 0 20rpx;
}

.item .contentBox .bottom .right {
  width: 90rpx;
  height: 46rpx;
  background: #F52D3A;
  border-radius: 6rpx;
  text-align: center;
  line-height: 46rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  letter-spacing: 3rpx;
}

.item .contentBox .schoolBootem {
  margin-top: 20rpx;
}

.item .contentBox .schoolBootem .left {
  font-size: 28rpx;
  font-weight: 400;
  color: #7E7E7E;
}

.item .contentBox .schoolBootem .left:nth-child(3) {
  margin-left: 40rpx;
}

.item .contentBox .schoolBootem .right {
  font-size: 28rpx;
  font-weight: 400;
  color: #7E7E7E;
  margin-left: 10rpx;
  opacity: 0.5;
}

