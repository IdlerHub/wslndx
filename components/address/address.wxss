/* components/address/address.wxss */
.address{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
}
.address-bg{
    width: 100%;
    height: 100vh;
    background:rgba(0,0,0,0.6);
    display: flex;
    justify-content: center;
    align-items: center;
}
.address-card{
    width:680rpx;
    height:969rpx;
    background:rgba(255,255,255,1);
    border-radius:10rpx;
    position: relative;
}
.card-title{
    height: 138rpx;
    line-height: 138rpx;
    text-align: center;
    font-size:44rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(51,51,51,1);
    border-bottom: 1px solid #EDEDED;
}
.card-body .card-info{
    border-bottom: 1px solid #EDEDED;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin: 0 38rpx;
}
.card-body .card-info .info-title{
    height: 118rpx;
    line-height: 118rpx;
    min-width: 144rpx;
    font-size:36rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(58,58,58,1);
    margin-right: 56rpx;
}
.info-address{
    height: 118rpx;
    line-height: 59rpx;
    min-width: 144rpx;
    font-size:36rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(58,58,58,1);
    margin-right: 56rpx;
}
.card-body .card-info picker,
.card-body .card-info input{
    flex: 1;
    height: 118rpx;
    line-height: 118rpx;
    font-size:36rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.card-body .card-info picker .placeholder{
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    width: 402rpx;
}
.card-body .card-info picker .placeholder .picker{
    max-width: 290rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.change{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.change text{
    font-size:36rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
}
.change image{
    width: 18rpx;
    height: 33rpx;
    margin-left: 22rpx;
}
.card-body .card-info .info-area{
    height: 108rpx;
    font-size:36rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height:54rpx;
    margin: 31rpx 0 ;
    background: white;
}
.address-card .card-footer{
    margin: 21rpx 40rpx;
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
}
.address-card .crad-btn{
    position: absolute;
    bottom: 41rpx;
    left: 0;
    right: 0;
    height: 91rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin: 0 40rpx;
}
.address-card .crad-btn view{
    height: 100%;
    width: 280rpx;
    line-height: 91rpx;
    border-radius:10rpx;
    font-size:40rpx;
    font-weight:400;

    text-align: center;
}
.cancel-btn{
    margin-right: 40rpx;
    background:rgba(255,255,255,1);
    border:1px solid rgba(223,32,32,1);

    font-family:PingFangSC-Regular,PingFang SC;
    color:rgba(223,32,32,1);
}
.confirm-btn{
    background:#DF2020;
    font-family:PingFangSC-Medium,PingFang SC;
    color:rgba(255,255,255,1);
}
.input-placeholder{
    color: #CCC;
    font-size:36rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
}