<!--components/recruitShare/recruitShare.wxml-->
<view class="shareBox" style="{{!type ? 'padding-top:0' : ''}}"> 
  <view class="txt" wx:if="{{!type}}">赶紧去邀请新学员赚钱</view>
  <view class="shareBox-content">
    <button class="shareBtn" open-type="share" data-id="{{ $state.userInfo.id }}" hover-class="btn-hover">
      <image src="{{$state.imgHost}}/makeMoneywx.png"></image>
      <text>邀请好友</text>
    </button>
    <navigator class="shareBtn" hover-class="none" url="/pages/invitation/invitation" open-type="navigate">
      <image src="{{$state.imgHost}}/sharefriends.png"></image>
      <text>朋友圈</text>
    </navigator>
  </view>
</view>
