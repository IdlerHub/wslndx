/* components/loginBox/loginBox.wxss */
.loginContariner {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  z-index: 99999999;
}

.loginContariner .loginBox {
  background: #FFFFFF;
  border-radius: 20rpx;
  position:  fixed;
  top: 25%;
  left: 50%;
  transform: translateX(-50%);
  padding-top: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loginContariner .loginBox .close {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  bottom: -120rpx;
  left: 50%;
  margin-left: -35rpx;
}

.loginContariner .loginBox .loginTitle {
  font-size: 42rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 9rpx;
}

.loginContariner .loginBox .loginItem {
  width: 518rpx;
  height: 240rpx;
  background: #F5F6FA;
  border-radius: unset;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  line-height: normal;
  border-radius: 0 0 20rpx 20rpx;
}

.loginContariner .loginBox .loginItem image {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.loginContariner .loginBox .loginItem text {
  font-size: 40rpx;
  font-weight: 400;
  color: #333333;
}

.loginContariner .loginBox .issuse {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.loginContariner .loginBox .issuse .iconImg {
  width: 28rpx;
  height: 28rpx;
  padding-right: 10rpx;
  padding-top: 5rpx;
}

.loginContariner .loginBox .issuse .circle {
  width: 27rpx;
  height: 27rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
  border: 1rpx solid #9E7E6B;
  border-radius: 50%;
}
 
.loginContariner .loginBox .issuse .text {
  font-size: 28rpx;
  font-weight: 400;
  color: #9E7E6B;
}

