/* page/live/components/liveLesson/liveLesson.wxss */
.liveLesson {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  background-color: #fff;
  overflow: hidden;
}
.liveLesson {
  padding: 0 20rpx;
  background-color: #fff;
  overflow: hidden;
}
.liveLesson .item {
  padding-top: 31rpx;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
  align-items: center;
}
.liveLesson .itemDay {
  display: inline-block;
  font-size: 36rpx;
  margin-top: 20rpx;
}
.liveLesson .item:nth-last-child(1) {
  border: none;
}
.liveLesson .item .imgBox {
  position: relative;
  width: 260rpx;
  height: 160rpx;
}
.liveLesson .item .imgBox .img-week {
  position: absolute;
  left: 0;
  top: 0;
  width: 72rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  background: linear-gradient(to right, #ff6010, #ffa82e);
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 16rpx;
}
.liveLesson .item .img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  border: 1px solid #ededed;
}

.liveLesson .item .icon {
  width: 52rpx;
  height: 52rpx;
  opacity: 0.7;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -26rpx;
  margin-left: -26rpx;
}

.liveLesson .item .txtBox {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
  width: 0;
}
.liveLesson .item .txtBox .title {
  width: 100%;
  font-size: 40rpx;
  font-weight: 500;
  color: rgba(58, 58, 58, 1);
  line-height: 56rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.liveLesson .item .txtBox .time {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(126, 126, 126, 1);
  line-height: 40rpx;
  margin-top: 4rpx;
  margin-bottom: 15rpx;
}
.liveLesson .item .txtBox .textBottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.liveLesson .item .txtBox .textBottom .teacher {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 15rpx;
}
.liveLesson .item .txtBox .textBottom .teacher image {
  width: 24rpx;
  height: 26rpx;
  margin-right: 10rpx;
}
.liveLesson .item .txtBox .textBottom .teacher text {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(126, 126, 126, 1);
  flex:1;
}
.liveLesson .item .txtBox .textBottom .btn {
  width: 148rpx;
  height: 52rpx;
  line-height: 52rpx;
  box-sizing: border-box;
  padding: 0rpx 18rpx;
  background: linear-gradient(90deg, #FF572F 1%, #F2323A 100%);
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 400;
  font-family: PingFangSC-Regular, PingFang SC;
  text-align: center;
  color: #fff;
}
