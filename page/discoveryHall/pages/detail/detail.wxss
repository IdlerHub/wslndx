/* page/discoveryHall/pages/detail/detail.wxss */
.container {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.container .iconImg {
  position: absolute;
  left: 30rpx;
  z-index: 9999999;
}

.container video {
  width: 100%;
  height: 100%;
  position: relative;
}

.videoContetBox {
  width: 100vw;
  box-sizing: border-box;
  position: absolute;
  padding: 0 30rpx;
  bottom: 30rpx;
}

.videoContetBox .videoContent {
  display: inline-block;
  width: 524rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 56rpx;
}

.videoContetBox .btnBox {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.videoContetBox .btnBox .bth {
  width: 330rpx;
  height: 88rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.videoContetBox .btnBox .bth:nth-child(1) {
  background: linear-gradient(90deg, #FFB441 0%, #FE9B02 100%);
}

.videoContetBox .btnBox .bth:nth-child(2) {
  background: linear-gradient(90deg, #43DE80 0%, #1CCA61 100%);
}

.videoContetBox .btnBox .bth text {
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-left: 16rpx;
}

.circleNum {
  font-size: 32rpx !important;
  color: #fff !important;
} 

.vanCircle {
  position: absolute;
  right: 30rpx;
  bottom: 153rpx;
}



