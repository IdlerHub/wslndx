/* page/discoveryHall/pages/index/index.wxss */
page {
  background: #FEF5EE;
}

/* 规则 */
.ruleBtn {
  position: absolute;
  top: 223rpx;
  right: 0;
  background: rgba(0, 0, 0, 0.2);
  width: 92rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  font-size: 28rpx;
  color: rgba(244, 244, 244, 0.8);
  border-radius: 50rpx 0 0 50rpx;
}

.ruleBox {
  width: 640rpx;
  position: relative;
  background: #fff;
  border-radius: 20rpx;
  margin: auto;
  top: 129rpx;
}

.ruleBox .title {
  height: 128rpx;
  line-height: 128rpx;
  font-size: 36rpx;
  font-size: 42rpx;
  font-weight: 600;
  color: #FFFFFF;
  background: linear-gradient(90deg, #FD7352 0%, #F2323A 100%);
  border-radius: 20rpx 20rpx 0 0;
  text-align: center;
}

.ruleBox .txtList {
  padding: 40rpx 30rpx;
  padding-bottom: 10rpx;
}

.ruleBox .txtList .line {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 24rpx;
}

.ruleBox .txtList .line text:nth-child(1) {
  width: 12rpx;
  height: 12rpx;
  background: #F2323A;
  border-radius: 50%;
  margin-right: 22rpx;
  margin-top: 22rpx;
}

.ruleBox .txtList .line text:nth-child(2) {
  flex: 1;
  display: inline;
  font-size: 34rpx;
  font-weight: 400;
  color: #666666;
  white-space: normal;
  line-height: 52rpx;
}

.ruleBox .specalTxt {
  height: 288rpx;
  background: #FFF8F8;
  border-radius: 0px 0px 20rpx 20rpx;
  padding: 25rpx 38rpx;
  box-sizing: border-box;
}

.ruleBox .specalTxt text {
  display: block;
  font-size: 34rpx;
  font-weight: 400;
  color: #999999;
  line-height: 52rpx;
  margin-bottom: 24rpx;
}

.ruleBox .ruleClose {
  position: absolute;
  bottom: -130rpx;
  left: 50%;
  transform: translateX(-50%);
}