/* page/discoveryHall/pages/works/works.wxss */
page {
  background: #EDEDED;
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}

.listItem {
  width: 360rpx;
  height: 480rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
  margin-bottom: 10rpx;
  position: relative;
}

.listItem .cover {
  width: 100%;
  height: 360rpx;
}

.listItem .playIcon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 140rpx;
  left: 140rpx;
  border-radius: 50%;
}

.listItem .title {
  padding: 10rpx 16rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  line-height: 44rpx;
}

.back {
  width: 120rpx;
  height: 120rpx;
  background: rgba(0, 0, 0, 0.7);
  box-shadow: 0px 4rpx 10rpx 0rpx rgba(166, 166, 166, 0.2);
  position: fixed;
  right: 10rpx;
  bottom: 220rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(244, 244, 244, 0.8);
  line-height: 38rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}