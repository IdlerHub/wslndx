.vote-item{
  width: 330rpx;
  height: 448rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  border-radius:10rpx;
} 

.item-up{
  /* height: 220rpx; */
  height: 240rpx;
  /* background: #0071B3; */
  position: relative;
  overflow: hidden;
  border-bottom:  2rpx solid #EDEDED;
}
.item-up .item-id{
  height: 44rpx;
  line-height: 44rpx;
  display: inline-block;
  background: rgba(0,0,0,0.4);
  border-radius:10rpx 0rpx 20rpx 0rpx;
  padding: 2rpx 8rpx;
  color: #fff;
  font-size:28rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight: 400;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.8;
}
.item-img,
.item-up .item-img image{
  width: 100%;
  height: 100%;
}
.item-rank{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  text-align: center;
  min-width: 100rpx;
  display: flex;
  align-items: center;
  background:linear-gradient(90deg,rgba(255,75,0,1) 0%,rgba(255,136,0,1) 100%);
  border-radius:10rpx 100rpx 100rpx 0px;

  font-size:34rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.item-rank .rank-text{
  width:45rpx;
  height: 40rpx;
  font-size:18rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  display: flex;
  align-items: center;
  flex-flow: column;
  justify-content: center;
  /* margin-right: 12rpx; */
  /* padding: 11rpx; */
  padding-left: 11rpx;
}
.item-rank .rank-text>view{
  width:45rpx;
  height:40rpx;
  line-height: 20rpx;
}
.item-rank .num{
  font-size:44rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-right: 12rpx;
}
.serial{
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background:rgba(0,0,0,0.6);
  padding: 2rpx 15rpx;
  border-radius:24rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.item-classify{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
}
.item-down{
  height: 228rpx;
  background: #fff;
}
.item-name{
  padding-top: 12rpx;
  margin: 0 20rpx;
  margin-bottom: 4rpx;
  font-size:36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:#333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  min-height: 50rpx;
}
.item-subname{
  margin: 0 20rpx;
  margin-bottom: 22rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.item-footer{
  margin: 20rpx;
  margin-top: 0rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item-zan{
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  /* max-width: 132rpx; */
}
.zan-btn{
  width: 150rpx;
  height:56rpx;
  line-height: 56rpx;
  background:#FF2900;
  border-radius:28rpx;

  text-align: center;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}