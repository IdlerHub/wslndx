/* page/vote/pages/voteInfo/voteInfo.wxss */
.vote-info-page{
    height: 100%;
    min-height: 100vh;
    background: #F7F7F7;
    padding-bottom: 42rpx;
}
.info-header{
    height: 284rpx;
    width: 100%;
    background: #FA3C01;
    display: flex;
    box-sizing: border-box;
    padding: 40rpx 30rpx;
}
.info-header .user-img{
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    overflow: hidden;
}
.info-header .user-info{
    height: 128rpx;
    margin-left: 24rpx;
    font-size:40rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    color:#fff;
}
.user-info .user-name{
    height: 56rpx;
    line-height: 56rpx;
    font-weight:500;
    margin-bottom: 6rpx;
    margin-top: 11rpx;
}
.user-info .user-subname{
    height: 40rpx;
    line-height: 40rpx;
    margin-left: 6rpx;
    font-size:28rpx;
    font-weight:400;
}
.vote-info{
    margin: -75rpx 20rpx 20rpx 20rpx;
    display: flex;
    align-items: center;
}
.vote-info>view{
    width: 345rpx;
    height: 160rpx;
    border-radius: 10rpx;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.vote-info .voteinfo-left{
    margin-right: 20rpx;
}
.right-flowers,
.left-flowers{
    width: 92rpx;
    height: 92rpx;
    background: #FFEEEF;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20rpx;
}
.right-flowers{
    background: #FFF4DE;
}
.left-flowers>image{
    width: 48rpx;
    height: 52rpx;
}
.right-flowers>image{
    width: 48rpx;
    height: 47rpx;
}
.left-text .text-first,
.right-text .text-first{
    width:88rpx;
    height:56rpx;
    font-size:40rpx;
    font-family:PingFang-SC-Bold,PingFang-SC;
    font-weight: blod;
    color:#333;
    line-height:56rpx;
}
.left-text .text-second,
.right-text .text-second{
    height:40rpx;
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#666;
    line-height:40rpx;
}
.right-text .text-first{
    width:120rpx;
}

/* 任务列表 */
.task-card{
    margin: 0 20rpx;
    background: #fff;
    border-radius: 10rpx;
}
.task-card .task-title{
    height: 108rpx;
    width: 100%;
    font-size:44rpx;
    font-family:PingFang-SC-Bold,PingFang-SC;
    font-weight:bold;
    color:#3A3A3A;
    padding: 25rpx 30rpx 20rpx 30rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #EDEDED;
}
.task-list{
    padding: 0 20rpx;
    margin-bottom: 20rpx;
}
.task-item{
    width: 100%;
    height: 187rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #EDEDED;
}
.task-item:last-child{
    border-bottom: 0;
}
.item-left .item-title{
    height:56rpx;
    font-size:40rpx;
    font-family:PingFang-SC-Bold,PingFang-SC;
    font-weight:bold;
    color:rgba(51,51,51,1);
    line-height:56rpx;
    margin: 30rpx 30rpx 7rpx 0;
}
.item-left .item-content{
    font-size:40rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#999999;
    margin-bottom: 30rpx;
}
.item-left .item-content>text{
    font-size:44rpx;
    font-family:PingFang-SC-Bold,PingFang-SC;
    font-weight:bold;
    color:#F2323A;
}
.task-item .item-right{
    width:172rpx;
    height:80rpx;
    background:rgba(204,204,204,1);
    border-radius:40rpx;
    line-height: 80rpx;
    text-align: center;
    font-size:40rpx;
    font-family:PingFang-SC-Medium,PingFang-SC;
    font-weight:500;
    color:#fff;
}
.task-item .item-right-red{
    background: #F2323A;
}
/* 我的投票 */
.vote-mine{
    margin: 0 20rpx;
    background: #fff;
    border-radius: 10rpx;
}
.vote-mine .mine-title{
    height: 108rpx;
    padding: 25rpx 30rpx 20rpx 30rpx;
    border-bottom: 1px solid #EDEDED;
    font-size:44rpx;
    font-family:PingFang-SC-Bold,PingFang-SC;
    font-weight:bold;
    box-sizing: border-box;
    color:#3A3A3A;
}
.mine-list .mine-item{
    display: flex;
    align-items: center;
    padding: 30rpx;
    height: 160rpx;
    position: relative;
}
.mine-list .mine-item::after{
    content: "";
    height: 2rpx;
    position: absolute;
    background: #E9E9E9;
    bottom: 0;
    left: 30rpx;
    right: 30rpx;
    box-sizing: border-box;
}
.mine-list .mine-item:last-child::after{
    position: relative;
}
.mine-item .mine-img{
    width: 260rpx;
    height: 160rpx;
    border-radius: 10rpx;
    overflow: hidden;
    margin-right: 30rpx;
}
.mine-item .mine-img>image{
    width: 100%;
    height: 100%;
}
.mine-info{
    flex: 1;
    height: 100%;
}
.mine-info .mine-info-name{
    max-width: 240rpx;
    height:56rpx;
    font-size:40rpx;
    font-family:PingFang-SC-Bold,PingFang-SC;
    font-weight:bold;
    color:#3A3A3A;
    line-height:56rpx;
    margin-bottom: 2rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.mine-info .mine-info-subname{
    max-width: 350rpx;
    height:40rpx;
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#666666;
    line-height:40rpx;
    margin-bottom: 23rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.mine-info .mine-info-number{
    height:32rpx;
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#F2323A;
    line-height:32rpx;
}
.mine-info-id{
    width:101rpx;
    height:40rpx;
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#999999;
    line-height:40rpx;
    position: absolute;
    top: 38rpx;
    right: 30rpx;
}