.show-img{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0 60rpx;
    background: rgba(0,0,0,0.8);
}
.show-con{
    width: 630rpx;
    height: 940rpx;
    margin-bottom: 30rpx;
    position: relative;
}

.canvas-img{
    width: 570rpx;
    height: 100%;
    border-radius: 20rpx;
    padding: 0 30rpx;
    position: relative;
    overflow: hidden;
}
.share-bg{
    width: 100%;
    height: 100%;
    z-index: -1;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.share-del{
    width: 72rpx;
    height: 72rpx;
    position: absolute;
    right: -30rpx;
    top: -30rpx;
}
.canvas-user{
    margin-top: 30rpx;
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
}
.user-img{
    width: 90rpx;
    height: 90rpx;
    border-radius: 100%;
    margin-right: 24rpx;
    background: lightblue;
}
.user-name{
    max-width: 570rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    height:50rpx;
    font-size:40rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    line-height:50rpx;
}
.tip{
    height:40rpx;
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    line-height:40rpx;
}
.canvas-works{
    width: 570rpx;
    height:380rpx;
    background:#FF670E;
    border-radius:14rpx;
    margin-bottom: 22rpx;
    overflow: hidden;
}
.canvas-works image{
    width: 100%;
    height: 100%;
}
.canvas-info{
    color:#fff;
}
.canvas-info .canvas-name{
    max-width: 570rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    height:56rpx;
    font-size:40rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    line-height:56rpx;
    margin-bottom: 11rpx;
}
.canvas-info .canvas-content{
    max-width:570rpx;
    font-size: 40rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;

}
.canvas-footer{
    background: white;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 153rpx;
    padding: 21rpx 30rpx;
    display: flex;
    border-radius: 0 0 20rpx 20rpx;
    align-items: center;
}
.canvas-code{
    width: 153rpx;
    height: 153rpx;
    margin-right: 23rpx;
}
.code-tip{
    max-width:396rpx;
    font-size: 40rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
    line-height:54rpx;
}
.poster-footer{
    width:630rpx;
    height:98rpx;
    line-height: 98rpx;
