/* page/vote/pages/voteArticle/voteArticle.wxss */
.vote-article-page{
    position: relative;
    background: #fff;
}
.article-img{
    width: 100%;
    height: 421rpx;
}
.aritcle-info{
    width: 100%;
    border-bottom: 20rpx solid #F8F8F8;
    padding: 30rpx;
    box-sizing: border-box;
}
.aritcle-info .info-title{
    height:62rpx;
    font-size:44rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(58,58,58,1);
    line-height:62rpx;
    margin-bottom: 8rpx;
}
.aritcle-info .info-subtitle{
    font-size:40rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
    line-height:58rpx;
}
.article-comment .comment-nav{
    width: 100%;
    height: 108rpx;
    border-bottom: 1px solid #EDEDED;
    padding: 30rpx 0 17rpx 30rpx;
    font-size:44rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:#3A3A3A;
    box-sizing: border-box;
    position: relative;
}
.article-comment .comment-nav::after{
    content: "";
    width: 80rpx;
    height: 4rpx;
    position: absolute;
    bottom: 0;
    left: 34rpx;
    background: #E52525;
}
.article-comment .comment-list{
    width: 100%;
    padding: 30rpx;
}
.article-comment .comment-list .none-comment{
    width: 470rpx;
    height: 434rpx;
    margin: 55rpx 140rpx 69rpx 140rpx;
}
.send-comment{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    height: 140rpx;
    border-top: 1px solid #E9E9E9;
}
.comment-footer{
    height: 140rpx;
    width: 100%;
}
.comment-left{
    width: 354rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #999999;
    font-size:40rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    background: #F5F6FA;
    border-radius:45rpx;
    padding: 0 40rpx;
    margin-right: 16rpx;
    margin-left: 30rpx;
    box-sizing: border-box;
}
.comment-right {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.comment-right .right-send,
.comment-right .right-share{
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    border-radius: 45rpx;
    width: 152rpx;
    height: 80rpx;
    font-size:30rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:#fff;
    position: relative;
}
.comment-right .right-send{
    margin-right: 16rpx;
}
.comment-right .img{
    width: 35rpx;
    height: 39rpx;
    margin-right: 8rpx;
}
.bottom-bg{
    width: 152rpx;
    height: 80rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
}