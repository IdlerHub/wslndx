/* page/vote/pages/voteArticle/voteArticle.wxss */
.vote-article-page{
    position: relative;
    background: #fff;
}
.article-img{
    width: 100%;
    height: 421rpx;
}
.aritcle-info{
    width: 100%;
    border-bottom: 20rpx solid #F8F8F8;
    padding: 30rpx;
    box-sizing: border-box;
}
.aritcle-info .info-title{
    height:62rpx;
    font-size:44rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(58,58,58,1);
    line-height:62rpx;
    margin-bottom: 8rpx;
}
.aritcle-info .info-subtitle{
    font-size:40rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
    line-height:58rpx;
}
.article-comment .comment-nav{
    width: 100%;
    height: 108rpx;
    border-bottom: 1px solid #EDEDED;
    padding: 30rpx 0 17rpx 30rpx;
    font-size:44rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:#3A3A3A;
    box-sizing: border-box;
    position: relative;
}
.article-comment .comment-nav::after{
    content: "";
    width: 80rpx;
    height: 4rpx;
    position: absolute;
    bottom: 0;
    left: 34rpx;
    background: #E52525;
}
.article-comment .comment-list{
    width: 100%;
    padding: 30rpx;
}
.article-comment .comment-list .none-comment{
    width: 470rpx;
    height: 434rpx;
    margin: 55rpx 140rpx 69rpx 140rpx;
}
.send-comment{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    height: 140rpx;
    background: #fff;
    border-top: 1px solid #E9E9E9;
}
.comment-footer{
    height: 140rpx;
    width: 100%;
}
.comment-left{
    width: 354rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #999999;
    font-size:40rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    background: #F5F6FA;
    border-radius:45rpx;
    padding: 0 40rpx;
    margin-right: 16rpx;
    margin-left: 30rpx;
    box-sizing: border-box;
}
.comment-right {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.comment-right .right-send,
.comment-right .right-share{
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    border-radius: 45rpx;
    width: 152rpx;
    height: 80rpx;
    font-size:30rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:#fff;
    position: relative;
}
.comment-right .right-send{
    margin-right: 16rpx;
}
.comment-right .img{
    width: 35rpx;
    height: 39rpx;
    margin-right: 8rpx;
}
.bottom-bg{
    width: 152rpx;
    height: 80rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
}

/* 评论 */
.issueBoxTow {
  width: 100%;
  padding: 46rpx 30rpx;
  background: rgba(255, 255, 255, 1);
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  z-index: 2;
  height: 316rpx;
  box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
}
.issueBoxTow .replayplaceholder {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  position: relative;
  top: -15rpx;
}
.issueBoxTow textarea {
  width: 100%;
  height: 160rpx;
  font-size: 36rpx;
  line-height: 48rpx;
}
.issueBoxTow .issueBoxTow-txt {
  margin-top: 22rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.issueBoxTow .issueBoxTow-txt .issueBoxTow-btn {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.issueBoxTow .issueBoxTow-txt .number {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}
.issueBoxTow .issueBoxTow-txt .submit {
  width: 152rpx;
  height: 68rpx;
  background: rgba(223, 32, 32, 1);
  border-radius: 34rpx;
  font-size: 38rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 68rpx;
  margin-left: 30rpx;
}
.issueBoxTow .issueBoxTow-txt .voicebtn {
  width: 168rpx;
  height: 68rpx;
  background: rgba(237, 237, 237, 1);
  border-radius: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  position: relative;
}
.issueBoxTow .issueBoxTow-txt .voicebtn image {
  width: 25rpx;
  height: 36rpx;
  margin-right: 13rpx;
}

