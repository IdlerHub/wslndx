/* pages/timetableList/timetableList.wxss */
page,.timetableList,.contariner {
  height: 100%;
}
.contariner {
  padding: 0 20rpx;
  background-color: #fff;
}
.contariner .item {
  padding-top: 31rpx;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #E9E9E9;
  display: flex;
  align-items: center;
}
.contariner .itemDay {
  display: inline-block;
  font-size: 36rpx;
  margin-top: 20rpx;
}
.contariner .item:nth-last-child(1) {
  border: none;
}
.contariner .item .imgBox {
  position: relative;
  width: 260rpx;
  height: 160rpx;
}
.contariner .item .imgBox .img-week{
  position: absolute;
  left: 0;
  top: 0;
  width: 72rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  background: linear-gradient(to right,#FF6010,#FFA82E);
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 16rpx;
}
.contariner .item .img {
  width: 100%;
  height: 100%;
  border-radius:10rpx;
}

.contariner .item .icon {
  width: 52rpx;
  height: 52rpx;
  opacity: 0.7;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -26rpx;
  margin-left: -26rpx;
} 

.contariner .item .txtBox {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
  width: 0;
}
.contariner .item .txtBox .title {
  width: 100%;
  font-size:40rpx;
  font-weight:400;
  color:rgba(58,58,58,1);
  line-height:56rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.contariner .item .txtBox .time {
  font-size:28rpx;
  font-weight:400;
  color:rgba(126,126,126,1);
  line-height:40rpx;
  margin-top: 4rpx;
  margin-bottom: 15rpx;
}
.contariner .item .txtBox .textBottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contariner .item .txtBox .textBottom .teacher {
  display: flex;
  align-items: center;
}
.contariner .item .txtBox .textBottom  .teacher image {
  width: 24rpx;
  height: 26rpx;
  margin-right: 10rpx;
}
.contariner .item .txtBox .textBottom  .teacher view {
  font-size:28rpx;
  font-weight:400;
  color:rgba(126,126,126,1);
} 
.contariner .item .txtBox .textBottom .btn {
  width: 148rpx;
  height: 48rpx;
  line-height: 48rpx;
  box-sizing: border-box;
  padding: 0rpx 18rpx;
  background:#DF2020;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight:400;
  font-family:PingFangSC-Regular,PingFang SC;
  text-align: center;
  color:#fff;
}
.contariner .item .txtBox .textBottom .end{
  background: #FE9B02;
}
.qstBox {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180rpx;
  box-sizing: border-box;
}
.qstBox image {
  width: 490rpx;
  height: 310rpx;
}
.qstBox text {
  text-align: center;
  font-size:34rpx;
  font-weight:400;
  color:rgba(126,126,126,1);
  line-height:48rpx;
}
.qstBox .choose {
  margin-top: 40rpx;
  width:330rpx;
  height:90rpx;
  background:rgba(223,32,32,1);
  border-radius:6rpx;
  font-size:38rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
}