/* pages/timetableList/timetableList.wxss */
page,
.timetableList,
.contariner {
  height: 100%;
}

.top {
  height: 224rpx;
  background: #FFFFFF;
  padding: 20rpx;
  padding-top: 22rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  z-index: 99;
  width: 100%;
  border-bottom: 1px solid #EDEDED;
}

.top .topOne {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.top .topOne .month {
  font-size: 40rpx;
  font-weight: 500;
  color: #333333;
}

.top .topOne .topRight {
  display: flex;
  align-items: center;
}

.top .topOne .topRight text {
  font-size: 36rpx;
  color: #666666;
}

.top .topOne .topRight image {
  width: 28rpx;
  height: 28rpx;
  margin-left: 12rpx;
}

.top .dateBox {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.top .dateBox .dateItem {
  width: 88rpx;
  height: 106rpx;
  background: #F7F7F7;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.top .dateBox .dateItem .now {
  width: 0;
  height: 0;
  border-top: 25rpx solid #FF3E46;
  border-right: 25rpx solid transparent;
  position: absolute;
  top: 0;
  left: 0;
}

.top .dateBox .dateItem text:nth-child(1) {
  font-size: 28rpx;
  color: #999999;
}

.top .dateBox .dateItem text:nth-child(2) {
  font-size: 38rpx;
  font-weight: 500;
  color: #333333;
}

.top .dateBox .active {
  background-color: #FF3E46;
}

.top .dateBox .active text:nth-child(1) {
  color: #fff;
}

.top .dateBox .active text:nth-child(2) {
  color: #fff;
}

.contariner {
  padding: 0 20rpx;
  background-color: #fff;
}

.contariner .item {
  height: 221rpx;
  padding-top: 30rpx;
  padding-bottom: 31rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #E9E9E9;
  display: flex;
  align-items: center;
}

.contariner .itemDay {
  display: inline-block;
  font-size: 36rpx;
  margin-top: 20rpx;
}

.contariner .item:nth-last-child(1) {
  border: none;
}

.contariner .item .imgBox {
  position: relative;
  width: 260rpx;
  height: 160rpx;
}

.contariner .item .img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.contariner .item .icon {
  width: 50rpx;
  height: 50rpx;
  opacity: 0.9;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

.contariner .item .txtBox {
  height: 100%;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  flex: 1;
  width: 0;
}

.contariner .item .txtBox .title {
  width: 100%;
  font-size: 36rpx;
  font-weight: 400;
  color: #3A3A3A;
  line-height: 50rpx;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
}


.contariner .item .txtBox .textBottom {
  width: 100%;
}

.contariner .item .txtBox .textBottomsp {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contariner .item .txtBox .textBottomsp .toStudy {
  width: 138rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
  background-color: #F2323A;
  border-radius: 10rpx;
}

.contariner .item .txtBox .textBottomsp .over {
  background-color: #FEEBEC;
  color: #F2323A;
}

.contariner .item .txtBox .textBottom text {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.contariner .item .txtBox .textBottom .progress {
  width: 100%;
  height: 8rpx;
  background: rgba(233, 233, 233, 0.6);
  border-radius: 4rpx;
  margin-top: 6rpx;
}

.contariner .item .txtBox .textBottom .progress .inro {
  background-color: #F2323A;
  height: 100%;
  border-radius: 4rpx;
}

.qstBox {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180rpx;
  box-sizing: border-box;
}

.qstBox image {
  width: 452rpx;
  height: 288rpx;
  margin-left: -13rpx;
}

.qstBox text {
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
  color: #999999;
  margin-top: -62rpx;
}

.qstBox .choose {
  margin-top: 40rpx;
  width: 200rpx;
  height: 80rpx;
  background: linear-gradient(90deg, #FF572F 1%, #F2323A 100%);
  border-radius: 40rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}