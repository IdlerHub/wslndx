/* page/live/pages/liveVideo/liveVideo.wxss */
.player {
  width: 100vw;
  height: 100vh;
}

.testBag {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
}

/* 顶部栏 */
.topBox {
  display: flex;
  align-items: center;
  position: absolute;
  left: 30rpx;
}

.topBox .liveBack {
  width: 20rpx;
  height: 35rpx;
}

.tearchBox {
  height: 82rpx;
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 70rpx;
}

.tearchBox image {
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
}

.tearchBox .txtCenter {
  display: flex;
  width: 140rpx;
  height: 100%;
  align-items: flex-start;
  flex-wrap: wrap;
  margin: 0 20rpx 0 10rpx;
  overflow: hidden;
}

.tearchBox .txtCenter text:nth-child(1) {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-top: 10rpx;
}

.tearchBox .txtCenter text:nth-child(2) {
  font-size: 26rpx;
  font-weight: 400;
  color: #FFFFFF;
  display: flex;
  align-items: center;
}

.tearchBox .attention {
  width: 118rpx;
  height: 62rpx;
  background: linear-gradient(360deg, #FF5E2B 0%, #F2323A 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 70rpx;
  margin-right: 10rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.tearchBox .attention image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 7rpx;
}

.downloadeApp {
  width: 102rpx;
  height: 100.81rpx;
  position: fixed;
  bottom: 199rpx;
  right: 20rpx;
}

/* 下载app */
.downloadeApp image {
  width: 100%;
  height: 100%;
}

/* 底部按钮 */
.bottomBox {
  width: 100vw;
  padding: 0 20rpx 43rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.bottomBox .itemBox {
  width: 80rpx;
  height: 90rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}


.bottomBox .close {
  position: relative;
  overflow: hidden;
}

.bottomBox .captionBox {
  background: rgba(0, 0, 0, 0.3);
  border: 1rpx solid #FFFFFF;
}

.bottomBox .close::before {
  width: 100%;
  height: 1px;
  background: #fff;
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotateZ(45deg) scale(2);
}

.bottomBox .backBox {
  background: linear-gradient(92deg, #FFB441 0%, #FE7A02 100%);
}

.bottomBox .shareBox {
  margin: 0 10rpx;
  background: linear-gradient(90deg, #43DE80 0%, #1CCA61 100%);
  line-height: normal;
}

.bottomBox .praiseBox {
  position: relative;
  justify-content: flex-end;
}


.bottomBox .captionBox image {
  width: 38rpx;
  height: 34.83rpx;
}

.bottomBox .backBox image {
  width: 36rpx;
  height: 36rpx;
}

.bottomBox .shareBox image {
  width: 44rpx;
  height: 36.28rpx;
}

.bottomBox .praiseBox image {
  width: 80rpx;
  height: 80rpx;
}

.bottomBox .itemBox text {
  height: 35rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.bottomBox .itemBox .praiseNum {
  display: block;
  height: auto;
  padding: 1rpx 5rpx 3rpx 6rpx;
  background-color: #fff;
  font-size: 22rpx;
  font-weight: 400;
  border-radius: 13rpx;
  line-height: 22rpx;
  color: #F2323A;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%);
}

.bottomBox .clickBox {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #C2C3C2;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 10rpx;
  border: 1rpx solid #FFFFFF;
}