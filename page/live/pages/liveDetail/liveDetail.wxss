/* pages/liveDetail/liveDetail.wxss */
page {
  background: #eee;
}
/* 视频播放块 */
#myVideo {
  display: block;
  position: relative;
  width: 750rpx;
  height: 422rpx;
}
.vistor-head {
  position: fixed;
  z-index: 3;
  display: flex;
  align-items: center;
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  top: 0;
  left: 0;
  background: rgba(223, 32, 32, 0.9);
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #ffffff;
  padding: 0 30rpx;
}
.vistor-head .iconfont {
  width: 60rpx;
  height: 60rpx;
}
.vistor-head .iconfont:nth-child(4) {
  position: absolute;
  top: 25rpx;
}
.poster {
  position: absolute;
  top: 0;
  width: 100%;
  height: 422rpx;
  filter: brightness(0.8);
  background: white;
}
.play {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  z-index: 1;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  opacity: 0.7;
}
.videomask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background: rgba(0, 0, 0, 0.65);
  z-index: 5;
}

/* 课程信息块 */
.liveInfo{
  width: 100%;
  height: 285rpx;
  padding: 30rpx;
  background: #fff;
}
.liveInfo .liveName{
  width:440rpx;
  height:56rpx;
  font-size:40rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:#3A3A3A;
  line-height:56rpx;
  margin-bottom: 10rpx;
}
.liveInfo .liveSubtitle{
  width:462rpx;
  height:42rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(126,126,126,1);
  line-height:42rpx;
  margin-bottom: 34rpx;
}