/* page/live/pages/liveVideo/liveVideo.wxss */
page {
  width: 100vw;
  height: 100vh;
  background-color: #000;
}

.v-player {
  width: 100vw;
  height: 100vh;
}

.h-player {
  width: 100vw;
  height: 422rpx;
  position: fixed;
  top: 220rpx;
}

.h-player image {
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  right: 0;
  bottom: 13rpx;
  padding: 30rpx;
  z-index: 99999;
} 

.testBag {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
}

.downloadeApp {
  width: calc(102vmin / 7.5);
  height: calc(100.81vmin / 7.5);
  position: fixed;
  bottom: calc(199vmin / 7.5);
  right: calc(20vmin / 7.5);
  z-index: 9999999999999999999;
}

/* 下载app */
.downloadeApp image {
  width: 100%;
  height: 100%;
}

.statusBox {
  width: 100vw;
  position: fixed;
  top: 400rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 99999;
}

.statusBox text:nth-child(1) {
  font-size: 36rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.statusBox text:nth-child(2) {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  margin: 10rpx 0 40rpx 0;
}

.statusBox button {
  width: 200rpx;
  height: 80rpx;
}

.statusBox button image{
  width: 100%;
  height: 100%;
}