/* pages/timetable/timetable.wxss */
/* @import '/pages/timetable/timetable.skeleton.wxss'; */
page {
  background-color: #F8F8F8;
  position: relative;
}
.pageTop {
  position: sticky;
  top: 0;
  z-index: 999;
}
.search-box {
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: cneter;
}
.search-box .search-left {
  width:548rpx;
  height:84rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background:rgba(243,243,243,1);
  border-radius:10rpx;
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}
.search-box .search-left image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}
.search-box .search-left text{
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.search-box .search-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.search-box .search-right .iconfont{
  width: 46rpx;
  height: 46rpx;
  margin-bottom: 8rpx;
}
.search-box .search-right text {
  font-size:28rpx;
  font-weight:500;
  color:rgba(126,126,126,1);
}
.nav {
  box-sizing: border-box;
  border-bottom: 2rpx solid #e9e9e9;
  background: #fff;
  height: 100rpx;
  justify-content: space-around;
}

.nav .item {
  line-height: 100rpx;
  display: inline-block;
  width: 118rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #7e7e7e;
  letter-spacing: 0;
}

.nav .item.active {
  position: relative;
  color: #df2020;
  font-size: 44rpx;
  font-weight: 800;
}

.nav .item.active::after {
  content: "";
  position: absolute;
  bottom: 2rpx;
  left: 28%;
  width: 50%;
  height: 4rpx;
  background: #df2020;
}

.itemBox {
  padding-top: 30rpx;
}
.contariner {
  padding: 0 30rpx;
  background-color: #fff;
  overflow: hidden;
}
.contariner .item {
  padding-top: 31rpx;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #E9E9E9;
  display: flex;
  align-items: center;
}
.contariner .itemDay {
  display: inline-block;
  font-size: 36rpx;
  margin-top: 20rpx;
}
.contariner .item:nth-last-child(1) {
  border: none;
}
.contariner .item .imgBox {
  position: relative;
  width: 260rpx;
  height: 160rpx;
}
.contariner .item .imgBox .img-week{
  position: absolute;
  left: 0;
  top: 0;
  width: 72rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  background: linear-gradient(to right,#FF6010,#FFA82E);
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 16rpx;
}
.contariner .item .img {
  width: 100%;
  height: 100%;
  border-radius:10rpx;
}

.contariner .item .icon {
  width: 52rpx;
  height: 52rpx;
  opacity: 0.7;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -26rpx;
  margin-left: -26rpx;
} 

.contariner .item .txtBox {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
  width: 0;
}
.contariner .item .txtBox .title {
  width: 100%;
  font-size:40rpx;
  font-weight:400;
  color:rgba(58,58,58,1);
  line-height:56rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.contariner .item .txtBox .time {
  font-size:28rpx;
  font-weight:400;
  color:rgba(126,126,126,1);
  line-height:40rpx;
  margin-top: 12rpx;
  margin-bottom: 10rpx;
}
.contariner .item .txtBox .textBottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contariner .item .txtBox .textBottom .teacher {
  display: flex;
  align-items: center;
}
.contariner .item .txtBox .textBottom  .teacher image {
  width: 24rpx;
  height: 26rpx;
  margin-right: 10rpx;
}
.contariner .item .txtBox .textBottom  .teacher text {
  font-size:28rpx;
  font-weight:400;
  color:rgba(126,126,126,1);
} 
.contariner .item .txtBox .textBottom .btn {
  width: 148rpx;
  height: 48rpx;
  line-height: 48rpx;
  box-sizing: border-box;
  padding: 0rpx 18rpx;
  background:#DF2020;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight:400;
  font-family:PingFangSC-Regular,PingFang SC;
  text-align: center;
  color:#fff;
}
/* 缺省 */
.none-lesson{
  width: 100%;
  height: calc(100vh - 249rpx);
  font-size:  34rpx;
  color: #7E7E7E;
  line-height: 48rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  background-color: #fff;
  text-align:center;
}
.none-lesson image{
  width: 490rpx;
  height: 314rpx;
  margin-top: 88rpx;
  margin-bottom: 20rpx;
}