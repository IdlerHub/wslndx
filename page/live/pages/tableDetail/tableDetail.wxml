<!-- pages/tableDetail/tableDetail.wxml -->
<view class="contariner">
  <view class="imgBox">
    <image src="{{lessonDetail.cover}}"></image>
    <view class="timeBox">
      <text class="txt">开课倒计时</text>
      <view class="timer">
        <text>{{days}}</text>
        <text>天</text>
        <text>{{hours}}</text>
        <text>时</text>
        <text>{{minutes}}</text>
        <text>分</text>
        <text>{{seconds}}</text>
        <text>秒</text>
      </view>
    </view>
  </view>
  <view class="titleBox">
    <view>{{lessonDetail.name}}</view>
    <view>
      {{lessonDetail.start_day}}-{{lessonDetail.end_day}} · {{weekList[lessonDetail.week-1]}} · {{lessonDetail.start_time}}-{{lessonDetail.end_time}}
    </view>
  </view>
  <view class="inviteBox" wx:if="{{ lessonDetail.conditions != 0 }}">
    <view class="inviteShow" bindtap="showAllAvatar">
      <view>
        可以邀请<text class="num">{{lessonDetail.conditions}}</text>位好友一起上课
      </view>
      <view class="avatarBox {{showMoreAvatar ? 'avatarShow': ''}}">
        <image src="{{item.avatar}}" wx:for="{{avatarList}}" wx:key="index"></image>
        <image src="../../images/addUser.png" wx:for="{{lessonDetail.conditions -  lessonDetail.invite_num}}" wx:key="index"></image>
      </view>
    </view>
    <button bindtap="rightNow" wx:if="{{lessonDetail.conditions == lessonDetail.invite_num}}">立即学习</button>
    <button open-type="share" wx:else>去邀请</button>
  </view>
  <view class="tabList">
    <view class="tab">
      <text>总课时数</text>
      <text>{{lessonDetail.chapter_num}}次课</text>
    </view>
    <view class="tab">
      <text>授课老师</text>
      <text>{{lessonDetail.teacher}}</text>
    </view>
  </view>
  <view class="content">
    <view class="title">课程简介</view>
    <rich-text nodes="{{lessonDetail.introduction}}"></rich-text>
  </view>
</view>
<view class="bottomBox">
  <button open-type="share" class="left">
    <view class="leftBox">
      <image src="../../images/share-wx.png"></image>
      <text>邀请好友</text>
    </view>
    <!-- <view class="leftBox" bindtap="collect">
      <view class="center"></view>
      <image src="{{colleted ? $state.imgHost + '/heart-red.png': '../../images/heart-ash.png'}}"></image>
      <text>{{colleted ? '已收藏' : '收藏'}}</text>
    </view> -->
  </button>
  <view class="right" bindtap="rightNow">立即学习</view>
</view>