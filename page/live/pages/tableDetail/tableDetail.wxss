/* pages/tableDetail/tableDetail.wxss */
page {
  background: rgba(248, 248, 248, 1);
  padding-bottom: 150rpx;
}

.bottomBox {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 130rpx;
  background: #fff;
  border-top: 1px solid #e9e9e9;
  display: flex;
  justify-content: space-between;
}
.bottomBox .left {
  position: relative;
  width: 50%;
  height: 130rpx;
  line-height: 130rpx;
}
.bottomBox .left .leftBox {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
  position: relative;
  z-index: 1;
}
.bottomBox .left .leftBox image {
  width: 58rpx;
  height: 58rpx;
  margin-right: 20rpx;
}
.bottomBox .left .leftBox text {
  font-size: 36rpx;
  font-weight: 400;
  color: #333333;
}
.bottomBox .left .leftBox:nth-child(2) image {
  width: 48rpx;
  height: 50rpx;
}
.bottomBox .left .center {
  width: 1rpx;
  height: 50rpx;
  background: rgba(189, 189, 189, 1);
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -25rpx;
  z-index: 99;
}
.bottomBox .right {
  width: 50%;
  height: 130rpx;
  background: rgba(223, 32, 32, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 38rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.imgBox {
  width: 750rpx;
  height: 422rpx;
  position: relative;
}
.imgBox image {
  width: 100%;
  height: 100%;
}
.imgBox .timeBox {
  width: 100%;
  height: 90rpx;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.imgBox .timeBox .txt {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
.imgBox .timeBox .timer {
  display: flex;
  align-items: center;
}
.imgBox .timeBox .timer text {
  color: rgba(255, 255, 255, 1);
  font-size: 30rpx;
}
.imgBox .timeBox .timer text:nth-child(odd) {
  width: 50rpx;
  height: 50rpx;
  border-radius: 5rpx;
  border: 1rpx solid rgba(255, 255, 255, 1);
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 10rpx;
}
.titleBox {
  padding: 30rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
}
.titleBox view:nth-child(1) {
  height: 62rpx;
  font-size: 44rpx;
  font-weight: 500;
  color: rgba(58, 58, 58, 1);
  margin-bottom: 10rpx;
}
.titleBox view:nth-child(2) {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(126, 126, 126, 1);
  line-height: 50rpx;
}

.inviteBox {
  margin-top: 20rpx;
  padding-top: 50rpx;
  padding-bottom: 60rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.inviteBox .inviteShow {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.inviteBox .inviteShow .num {
  color: #df2020;
}
.inviteBox .inviteShow .avatarBox {
  width: calc(100vw - 220rpx);
  height: 90rpx;
  box-sizing: border-box;
  overflow: hidden;
  margin-top: 50rpx;
  margin-bottom: 60rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}
.inviteBox .inviteShow .avatarShow {
  height: auto;
  margin-bottom: 40rpx;
  justify-content: flex-start;
}
.inviteBox .inviteShow .avatarBox image:nth-child(5n) {
  margin-right: 0;
}
.inviteBox .inviteShow .avatarBox image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.inviteBox .inviteShow .avatarShow image {
  margin-bottom: 20rpx;
}
.inviteBox button {
  width: 530rpx;
  height: 90rpx;
  background: rgba(223, 32, 32, 1);
  border-radius: 6rpx;
  color: #fff;
  font-size: 38rpx;
  font-weight: 500;
}

.tabList {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 30rpx;
}
.tabList .tab {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e9e9e9;
}
.tabList .tab:nth-child(2) {
  border: none;
}
.tabList .tab text:nth-child(1) {
  font-size: 40rpx;
  font-weight: 400;
  color: rgba(58, 58, 58, 1);
  margin-right: 30rpx;
}
.tabList .tab text:nth-child(2) {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(126, 126, 126, 1);
}

.content {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 30rpx;
}
.content .title {
  margin-bottom: 20rpx;
  font-size: 40rpx;
  font-weight: 400;
  color: rgba(58, 58, 58, 1);
  line-height: 56rpx;
}
.content .classInfo {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(126, 126, 126, 1);
}
