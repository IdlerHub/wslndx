/* page/live/pages/liveSearch/liveSearch.wxss */
page {
  height: 100%;
}
.container {
  height: 100%;
}

.container .search-top {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container .search-top .search-box {
  width: 584rpx;
  height: 88rpx;
  padding: 0 30rpx;
  background: rgba(247, 247, 247, 1);
  border-radius: 8rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.container .search-top .search-box image:nth-child(1) {
  width: 44rpx;
  height: 44rpx;
  margin-right:23rpx;
}

/* .container .search-top .search-box image:nth-child(3) {
  width: 36rpx;
  height: 36rpx;
  margin-left: 15rpx;
} */
.container .search-top .search-box  form{
  display: flex;
  flex: 1;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  position: relative;
}
.container .search-top .search-box button {
  width: 86rpx;
  height: 88rpx;
  background: url('https://hwcdn.jinlingkeji.cn/images/pro/searchcancle.png') no-repeat center;
  background-size: 36rpx 36rpx;
  position: absolute;
  right: -30rpx;
  top: 50%;
  margin-top: -44rpx;
  z-index: 5;
}
.container .search-top .search-txt {
  flex: 1;
  font-size: 36rpx;
  color: rgba(46, 46, 46, 1);
  padding-top: 5rpx;
  padding-right: 8rpx;
}

.container .search-top .cancle {
  font-size: 38rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

/* 搜索列表 */
.contariner {
  padding: 0 30rpx;
  background-color: #fff;
  overflow: hidden;
}
.contariner .item {
  padding-top: 31rpx;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #E9E9E9;
  display: flex;
  align-items: center;
}
.contariner .itemDay {
  display: inline-block;
  font-size: 36rpx;
  margin-top: 20rpx;
}
.contariner .item:nth-last-child(1) {
  border: none;
}
.contariner .item .imgBox {
  position: relative;
  width: 260rpx;
  height: 160rpx;
}
.contariner .item .imgBox .img-week{
  position: absolute;
  left: 0;
  top: 0;
  width: 72rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  background: linear-gradient(to right,#FF6010,#FFA82E);
  border-top-left-radius: 10rpx;
  border-bottom-right-radius: 16rpx;
}
.contariner .item .img {
  width: 100%;
  height: 100%;
  border-radius:10rpx;
}

.contariner .item .icon {
  width: 52rpx;
  height: 52rpx;
  opacity: 0.7;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -26rpx;
  margin-left: -26rpx;
} 

.contariner .item .txtBox {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
  width: 0;
}
.contariner .item .txtBox .title {
  width: 100%;
  font-size:40rpx;
  font-weight:400;
  color:rgba(58,58,58,1);
  line-height:56rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.contariner .item .txtBox .time {
  font-size:28rpx;
  font-weight:400;
  color:rgba(126,126,126,1);
  line-height:40rpx;
  margin-top: 12rpx;
  margin-bottom: 10rpx;
}
.contariner .item .txtBox .textBottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contariner .item .txtBox .textBottom .teacher {
  display: flex;
  align-items: center;
}
.contariner .item .txtBox .textBottom  .teacher image {
  width: 24rpx;
  height: 26rpx;
  margin-right: 10rpx;
}
.contariner .item .txtBox .textBottom  .teacher rich-text {
  font-size:28rpx;
  font-weight:400;
  color:rgba(126,126,126,1);
} 
.contariner .item .txtBox .textBottom .btn {
  width: 148rpx;
  height: 48rpx;
  line-height: 48rpx;
  box-sizing: border-box;
  padding: 0rpx 18rpx;
  background:#DF2020;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight:400;
  font-family:PingFangSC-Regular,PingFang SC;
  text-align: center;
  color:#fff;
}

/* 缺省 */
.qst {
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 130rpx;
}
.qst .qst-img{
  width: 510rpx;
  height: 334rpx;
}