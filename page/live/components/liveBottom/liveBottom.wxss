/* page/live/components/liveBottom/liveBottom.wxss */
/* 底部按钮 */
.bottomBox {
  width: 100vw;
  padding: 0 20rpx 43rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.bottomBox .itemBox {
  width: 80rpx;
  height: 90rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}


.bottomBox .close {
  position: relative;
  overflow: hidden;
}

.bottomBox .captionBox {
  background: rgba(0, 0, 0, 0.3);
  border: 1rpx solid #FFFFFF;
}

.bottomBox .close::before {
  width: 100%;
  height: 1px;
  background: #fff;
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotateZ(45deg) scale(2);
}

.bottomBox .backBox {
  background: linear-gradient(92deg, #FFB441 0%, #FE7A02 100%);
}

.bottomBox .shareBox {
  margin: 0 10rpx;
  background: linear-gradient(90deg, #43DE80 0%, #1CCA61 100%);
  line-height: normal;
}

.bottomBox .praiseBox {
  position: relative;
  justify-content: flex-end;
}


.bottomBox .captionBox image {
  width: 38rpx;
  height: 34.83rpx;
}

.bottomBox .backBox image {
  width: 36rpx;
  height: 36rpx;
}

.bottomBox .shareBox image {
  width: 44rpx;
  height: 36.28rpx;
}

.bottomBox .praiseBox image {
  width: 80rpx;
  height: 80rpx;
}

.bottomBox .itemBox text {
  height: 35rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.bottomBox .itemBox .praiseNum {
  display: block;
  height: auto;
  padding: 1rpx 5rpx 3rpx 6rpx;
  background-color: #fff;
  font-size: 22rpx;
  font-weight: 400;
  border-radius: 13rpx;
  line-height: 22rpx;
  color: #F2323A;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%);
}

.bottomBox .clickBox {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #C2C3C2;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 10rpx;
  border: 1rpx solid #FFFFFF;
}

.inputBox {
  width: 100vw;
  background: #161823;
  position: fixed;
  z-index: 999;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.inputBox .textarea {
  flex: 1;
  min-height: 80rpx;
  border-radius: 10rpx;
  background: rgba(244, 244, 244, 0.1);
  padding-left: 30rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 50rpx;
}

.inputBox .send {
  width: 136rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background: rgba(244, 244, 244, 0.3);
  margin-left: 20rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #FFFFFF;
}