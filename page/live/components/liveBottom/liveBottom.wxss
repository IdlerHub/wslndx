/* page/live/components/liveBottom/liveBottom.wxss */
/* 底部按钮 */
.bottomBox {
  width: 100vw;
  padding: 0 calc(20vmin / 7.5) calc(42vmin / 7.5) calc(30vmin / 7.5);
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.bottomBox .itemBox {
  width: calc(80vmin / 7.5);
  height: calc(80vmin / 7.5);
  margin-right: calc(16vmin / 7.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.bottomBox .itemBox:last-child {
  margin: 0;
}

.bottomBox .itemBox image {
  width: calc(80vmin / 7.5);
  height: calc(80vmin / 7.5);
}

.bottomBox .close {
  position: relative;
  overflow: hidden;
}

.bottomBox .captionBox {
  background: rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.hoverClass {
  transform: scale(0.9);
}

.bottomBox .close::before {
  width: 100%;
  height: 1px;
  background: #fff;
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotateZ(45deg) scale(2);
  border-radius: calc(2vmin / 7.5);
}

.bottomBox .itemBox text {
  height: calc(35vmin / 7.5);
  line-height: calc(40vmin / 7.5);
  font-size: calc(28vmin / 7.5);
  font-weight: 400;
  color: #FFFFFF;
}

.bottomBox .itemBox .praiseNum {
  display: block;
  height: auto;
  padding: 1rpx calc(5vmin / 7.5) calc(3vmin / 7.5) calc(6vmin / 7.5);
  background-color: #fff;
  font-size: calc(22vmin / 7.5);
  font-weight: 400;
  border-radius: calc(13vmin / 7.5);
  line-height: calc(22vmin / 7.5);
  color: #F2323A;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%);
}

.bottomBox .clickBox {
  flex: 1;
  height: calc(80vmin / 7.5);
  line-height: calc(80vmin / 7.5);
  padding: 0 calc(20vmin / 7.5);
  margin-right: calc(16vmin / 7.5);
  font-size: calc(28vmin / 7.5);
  font-weight: 400;
  color: #C2C3C2;
  background: rgba(0, 0, 0, 0.3);
  border-radius: calc(48vmin / 7.5);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.inputBox {
  width: 100vw;
  background: #161823;
  position: fixed;
  z-index: 99999999999;
  padding: calc(20vmin / 7.5);
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.inputBox .textarea {
  flex: 1;
  min-height: calc(80vmin / 7.5);
  border-radius: calc(10vmin / 7.5);
  background: rgba(244, 244, 244, 0.1);
  padding-left: calc(30vmin / 7.5);
  box-sizing: border-box;
  font-size: calc(36vmin / 7.5);
  font-weight: 400;
  color: #FFFFFF;
  line-height: calc(50vmin / 7.5);
}

.inputBox .send {
  width: calc(136vmin / 7.5);
  height: calc(80vmin / 7.5);
  border-radius: calc(10vmin / 7.5);
  background: rgba(244, 244, 244, 0.3);
  margin-left: calc(20vmin / 7.5);
  text-align: center;
  line-height: calc(80vmin / 7.5);
  font-size: calc(32vmin / 7.5);
  font-weight: 400;
  color: #FFFFFF;
}

.popTitle {
  height: calc(108vmin / 7.5);
  border-bottom: 1rpx solid #40434C;
  text-align: center;
  line-height: calc(99vmin / 7.5);
  font-size: calc(40vmin / 7.5);
  font-weight: 500;
  color: #FFFFFF;
  position: relative;
}

.popTitle image {
  width: calc(26vmin / 7.5);
  height: calc(26vmin / 7.5);
  background: #999999;
  position: absolute;
  padding: calc(35vmin / 7.5) calc(31vmin / 7.5);
  top: 0;
  right: 0;
  background: rgba(0, 0, 0, 0);
}

.giftList {
  padding: calc(30vmin / 7.5);
  display: flex;
  flex-wrap: wrap;
  border-bottom: 1px solid #40434C;
}

.giftList .giftItem {
  width: calc(230vmin / 7.5);
  height: calc(230vmin / 7.5);
  border-radius: calc(12vmin / 7.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.giftList .hGitfitem {
  width: calc(200vmin / 7.5);
  margin: 0;
}

.giftList .giftItemActive {
  animation: giftAnimation 1s infinite;
}


.giftList .giftItem image {
  width: calc(100vmin / 7.5);
  height: calc(100vmin / 7.5);
}

.giftList .giftItem text:nth-child(2) {
  font-size: calc(36vmin / 7.5);
  font-weight: 400;
  color: #FFFFFF;
  line-height: calc(36vmin / 7.5);
  margin: calc(16vmin / 7.5) 0 calc(12vmin / 7.5);
}

.giftList .giftItem text:nth-child(3) {
  font-size: calc(26vmin / 7.5);
  font-weight: 400;
  color: #999999;
}

.payGift {
  margin: calc(30vmin / 7.5);
  margin-bottom: 0;
  height: calc(98vmin / 7.5);
  line-height: calc(98vmin / 7.5);
  background: #F2323A;
  border-radius: calc(49vmin / 7.5);
  text-align: center;
  font-size: calc(40vmin / 7.5);
  font-weight: 500;
  color: #FFFFFF;
}

@keyframes giftAnimation {
  0% {
    transform: scale(0.8);
  }
  50% {
    transform: scale(1);
  }
  100% {
    transform: scale(0.8);
  }
}
