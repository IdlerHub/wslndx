/* page/live/components/liveTop/liveTop.wxss */
/* 顶部栏 */
.topBox {
  display: flex;
  align-items: center;
  position: absolute;
  left: calc(18vmin / 7.5);
}

.topBox .liveBack {
  width: calc(20vmin / 7.5);
  height: calc(35vmin / 7.5);
  padding: calc(12vmin / 7.5);
}

.tearchBox {
  height: calc(82vmin / 7.5);
  display: flex;
  align-items: center;
  margin-left: calc(12vmin / 7.5);
  background: rgba(0, 0, 0, 0.3);
  border-radius: calc(70vmin / 7.5);
}

.tearchBox image {
  width: calc(82vmin / 7.5);
  height: calc(82vmin / 7.5);
  border-radius: 50%;
}

.tearchBox .txtCenter {
  display: flex;
  width: calc(140vmin / 7.5);
  height: 100%;
  align-items: flex-start;
  flex-wrap: wrap;
  margin: 0 calc(20vmin / 7.5) 0 calc(10vmin / 7.5);
  overflow: hidden;
}

.tearchBox .txtCenter text:nth-child(1) {
  width: 100%;
  height: calc(30vmin / 7.5);
  line-height: calc(30vmin / 7.5);
  font-size: calc(28vmin / 7.5);
  font-weight: 500;
  color: #FFFFFF;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-top: calc(10vmin / 7.5);
}

.tearchBox .txtCenter text:nth-child(2) {
  font-size: calc(26vmin / 7.5);
  font-weight: 400;
  color: #FFFFFF;
  display: flex;
  align-items: center;
}

.tearchBox .attention {
  width: calc(118vmin / 7.5);
  height: calc(62vmin / 7.5);
  background: linear-gradient(360deg, #FF5E2B 0%, #F2323A 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: calc(70vmin / 7.5);
  margin-right: calc(10vmin / 7.5);
  font-size: calc(30vmin / 7.5);
  font-weight: 500;
  color: #FFFFFF;
}

.tearchBox .attention image {
  width: calc(22vmin / 7.5);
  height: calc(22vmin / 7.5);
  margin-right: calc(7vmin / 7.5);
}

.teacherBox {
  width: 749rpx;
  height: 446rpx;
  background: #FFFFFF;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
  position: fixed;
  bottom: 0;
  z-index: 9999;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  animation: 0.5s show;
}

.teacherMove {
  bottom: -500rpx;
  animation: 0.5s showMove;
}

.teacherBox .icondel {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.teacherBox .avatar {
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid #EEE;
  border-radius: 50%;
}

.teacherBox text:nth-child(3) {
  font-size: 40rpx;
  font-weight: 500;
  color: #333333;
  margin: 16rpx 0;
  line-height: 40rpx;
}

.teacherBox text:nth-child(4) {
  font-size: 36rpx;
  font-weight: 400;
  color: #666666;
  line-height: 36rpx;
}

.teacherBox .addBtn {
  width: 480rpx;
  height: 88rpx;
  background: #F2323A;
  border-radius: 55rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 42rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-top: 30rpx;
}

@keyframes show {
  from {
    bottom: -500rpx;
  }
  to {
    bottom: 0;
  }
}

@keyframes showMove {
  from {
    bottom: 0;
  }
  to {
    bottom: -500rpx;
  }
}