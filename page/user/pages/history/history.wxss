.cur {
  width: 100%;
  background: #fff; }
  .cur .left {
    width: 420rpx; }
    .cur .left .dName {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      font-size: 36rpx;
      color: #404040;
      line-height: 50rpx;
      margin-bottom: 10rpx; }
    .cur .left .name {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      font-size: 30rpx;
      color: #a8a8a8;
      line-height: 42rpx; }
  .cur .right {
    text-align: center;
    padding-left: 30rpx;
    border-left: 1rpx solid #e9e9e9; }
    .cur .right .icon {
      width: 60rpx;
      height: 60rpx; }
