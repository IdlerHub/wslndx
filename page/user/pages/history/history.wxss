.cur-wrap {
  width: 670rpx;
  height: 200rpx;
  margin: 40rpx auto;
  padding: 0 40rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0rpx 0rpx 10rpx #eee;
  justify-content: space-between;
  border-radius: 10rpx;
  z-index: 1; }

.history {
  background: #fff;
  padding: 0 40rpx;
  box-sizing: border-box; }
  .history .item {
    position: relative;
    padding-left: 50rpx;
    padding-bottom: 50rpx;
    box-sizing: border-box; }
    .history .item::after {
      position: absolute;
      left: 0rpx;
      top: 5rpx;
      content: "";
      width: 24rpx;
      height: 24rpx;
      border: 4rpx solid #df2020;
      border-radius: 50%;
      background: #fff; }
    .history .item::before {
      position: absolute;
      left: 15rpx;
      top: 5rpx;
      content: "";
      background: #e9e9e9;
      width: 3rpx;
      height: 100%; }
    .history .item .date {
      line-height: 42rpx;
      font-size: 30rpx;
      color: #a8a8a8; }
    .history .item .time {
      line-height: 40rpx;
      font-size: 28rpx;
      color: #a8a8a8;
      margin: 20rpx 0 10rpx; }
    .history .item .title {
      display: block;
      line-height: 50rpx;
      font-size: 36rpx;
      color: #323232; }
    .history .item .name {
      color: #8b8b8b;
      margin-left: 40rpx;
      position: relative; }
      .history .item .name::after {
        position: absolute;
        content: "";
        width: 3rpx;
        height: 28rpx;
        background: #323232;
        left: -20rpx;
        top: 10rpx; }

.nhis {
  width: 100%;
  height: 100%;
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; }
  .nhis text {
    margin-top: -100rpx;
    font-size: 32rpx;
    color: #949494;
    width: 100%;
    text-align: center; }
