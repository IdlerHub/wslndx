  width:90rpx;
  height:90rpx;
  border-radius: 50%;
  border: 1rpx solid #d8d8d8;
  background: #e9e9e9;
  margin-right: 20rpx;
}
.item .titlecon {
  flex: 1;
  margin-top: -8rpx;
}
.item .title-name {
  display: flex;
  align-items: center;
}
.item .title-name .name {
  font-size:40rpx;
  font-weight:500;
  color:rgba(58,58,58,1);
  margin-right: 8rpx;
}
.item .title-name .label {
  width:35rpx;
  height:38rpx;
  margin-bottom: -12rpx;

}
.item .univers {
  height:30rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-top: 6rpx;
