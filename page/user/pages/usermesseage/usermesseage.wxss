  min-height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
}
.item {
  width: 100%;
  padding: 41rpx 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(237,237,237,1) ;
}
