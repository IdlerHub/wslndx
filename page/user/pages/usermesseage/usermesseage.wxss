/* pages/usermesseage/usermesseage.wxss */
page {
  background: rgba(242, 242, 242, 1);
}

.pageTop {
  height: 116rpx;
  background: #F5F6FA;
  display: flex;
  border-bottom: 1rpx solid #E9E9E9;
}

.pageTop .tabItem {
  width: 50%;
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
  color: #999999;
  position: relative;
  line-height: 116rpx;
}

.pageTop .active {
  font-size: 42rpx;
  font-weight: 500;
  color: #F2323A;
}

.pageTop .tabItem text {
  width: 36rpx;
  height: 6rpx;
  background: #F2323A;
  border-radius: 6rpx;
  position: absolute;
  bottom: -1rpx;
  left: 50%;
  transform: translateX(-50%);
}

.swiper {
  height: calc(100vh - 117rpx);
}

.scrollView {
  height: 100%;
}

.newscroll {
  padding: 0 30rpx;
  box-sizing: border-box;
}

::-webkit-scrollbar {
  display: none;
}

page img {
  display: none;
}

.contrain {
  width: 100%;
  padding: 30rpx 30rpx 80rpx 30rpx;
  box-sizing: border-box;
}

.newitem {
  margin-bottom: 34rpx;
}

.newitem:nth-child(1) {
  margin-top: 30rpx;
}

.newitem .news-time {
  text-align: center;
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  margin-bottom: 12rpx;
}

.newsBox {
  width: 100%;
  padding: 31rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  overflow: hidden;
  border-radius: 8rpx;
}

.newsBox .news-title {
  width: 100%;
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.newsBox .tichtext {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(58, 58, 58, 1);
  line-height: 54rpx;
  white-space: pre-line;
  text-indent: 0;
}

.newsBox .tonews {
  width: 100%;
  margin-top: 18rpx;
  padding-top: 31rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid rgba(237, 237, 237, 1);
}

.newsBox .tonews text {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.newsBox .tonews .iconImg {
  margin-top: 5rpx;
}

.readed {
  color: rgba(153, 153, 153, 1) !important;
}

.qstBox {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 120rpx;
}

.qstBox image {
  width: 598rpx;
}

.qstBox .txt {
  font-size: 32rpx;
  color: #949494;
  width: 100%;
  text-align: center;
  position: absolute;
}

.qstBox .txt:nth-child(2) {
  top: 39%;
}

.qstBox .txt:nth-child(3) {
  top: 59%;
  left: 50%;
  margin-left: -358rpx;
}

