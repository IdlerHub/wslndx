.item .btn {
  width:160rpx;
  height:68rpx;
  background:rgba(237,237,237,1);
  border-radius:4rpx;
  font-size:32rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:68rpx;
  text-align: center;
}
.item .joinbtn {
  width:160rpx;
  height:68rpx;
  background:rgba(223,32,32,1);
  border-radius:4rpx;
  font-size:32rpx;
  font-weight:400;
  color:#fff;
  line-height:68rpx;
  text-align: center;
