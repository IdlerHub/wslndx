/* page/post/pages/search/search.wxss */
.search-top {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-top .search-box {
  width: 584rpx;
  height: 88rpx;
  padding: 0 30rpx;
  background: #F3F3F3;
  border-radius: 8rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.search-top .search-box image:nth-child(1) {
  width: 44rpx;
  height: 44rpx;
  margin-right: 23rpx;
}

.search-top .search-box form {
  display: flex;
  flex: 1;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  position: relative;
}

.search-top .search-box button {
  width: 86rpx;
  height: 88rpx;
  background: url('https://hwcdn.jinlingkeji.cn/images/pro/searchcancle.png') no-repeat center;
  background-size: 36rpx 36rpx;
  position: absolute;
  right: -30rpx;
  top: 50%;
  margin-top: -44rpx;
  z-index: 5;
}

.search-top .search-txt {
  flex: 1;
  font-size: 36rpx;
  color: rgba(46, 46, 46, 1);
  padding-top: 5rpx;
  padding-right: 8rpx;
}

.search-top .cancle {
  font-size: 38rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.historyTop {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.historyTop text:nth-child(1) {
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #3A3A3A;
}

.historyTop .historyTop-right {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
}

.historyTop .historyTop-right image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 12rpx;
}

.historyBox .itemBox {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 30rpx;
}

.historyBox .itemBox .item {
  width: 216rpx;
  height: 80rpx;
  background: #F7F7F7;
  border-radius: 6rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #3A3A3A;
  margin-bottom: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 18rpx;
  box-sizing: border-box;
}

.qst {
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 130rpx;
}

.tabBox {
  display: flex;
  align-items: center;
  margin-top: 15rpx;
  border-bottom: 1rpx solid #EDEDED;
}

.tabBox .tab {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #7E7E7E;
}

.tabBox .active {
  font-size: 40rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #333333;
  margin-top: 16rpx;
}

.tabBox .tab text {
  width: 60rpx;
  height: 4rpx;
  background: #DF2020;
  border-radius: 2rpx;
  margin-top: 16rpx;
}

.qst .qst-img {
  width: 510rpx;
  height: 334rpx;
}
