@charset "UTF-8";
@import "../../../../template/template.wxss";

/* 环境变量 */
page {
  background: #eee;
}

page .Pagetop {
  height: 240rpx;
  overflow: hidden;
  position: relative;
  z-index: 5;
}

page .container>.top .bg {
  position: absolute;
  left: -25rpx;
  bottom: 0;
  top: 0;
  margin: auto;
  width: 800rpx;
  filter: blur(20rpx) brightness(0.65);
  transform: scale(1.2);
}

page .container>.top .box {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 300rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

page .container>.top .box .left {
  display: flex;
  align-items: center;
  margin-top: -70rpx;
}

page .container>.top .box .left .img {
  width: 154rpx;
  height: 154rpx !important;
  border-radius: 50%;
  border: 2rpx solid #b1adac;
}

page .container>.top .box .left .info {
  margin: 0 20rpx;
}

page .container>.top .box .left .info .line {
  text-align: left;
  line-height: 62rpx;
}

page .container>.top .box .left .info .name {
  width: 350rpx;
  font-family: PingFangSC-Medium;
  font-size: 44rpx;
  line-height: 62rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #ffffff;
}

page .container>.top .box .left .info .city {
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #ffffff;
  line-height: 40rpx;
  border-radius: 4rpx;
  background: #999594;
  padding: 0 15rpx;
}

page .container>.top .box .left .info .school {
  margin-left: 20rpx;
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #ffffff;
  line-height: 40rpx;
  border-radius: 4rpx;
  background: #999594;
  padding: 0 15rpx;
}

page .container>.top .box .iconfont {
  color: white;
  margin-top: -70rpx;
}

page .container>.top .box .attention {
  position: absolute;
  top: 51rpx;
  right: 30rpx;
  width: 136rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(223, 32, 32, 1);
  text-align: center;
  line-height: 56rpx;
}

page .container>.top .box .attentionold {
  background: rgba(153, 149, 148, 1);
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

page .scoreBg {
  display: block;
  width: 730rpx;
  height: 220rpx;
  position: absolute;
  z-index: -1;
  left: 12rpx;
}

.ncir {
  margin-top: 200rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.ncir text {
  margin-top: -100rpx;
  font-size: 32rpx;
  color: #949494;
  width: 100%;
  text-align: center;
}

.ncir navigator {
  width: 250rpx;
  line-height: 80rpx;
  text-align: center;
  background: #df2020;
  color: #fff;
  font-size: 36rpx;
  border-radius: 4rpx;
  margin: 40rpx auto 0;
}

.voiceBox {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin: 20rpx 30rpx;
}

.voiceBox .voiceBoxRight {
  width: 420rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(90deg, rgba(255, 126, 49, 1) 0%, rgba(255, 53, 53, 1) 100%);
  border-radius: 44rpx;
  padding: 0 35rpx 0 46rpx;
  box-sizing: border-box;
}

.voiceBox .voiceBoxRight image:nth-child(1) {
  width: 27rpx;
  height: 35rpx;
}

.voiceBox .voiceBoxRight .centerImg {
  width: 192rpx;
  height: 28rpx;
  background: url('https://hwcdn.jinlingkeji.cn/images/dev/postVoiceImg.png') center;
  background-size: 563rpx 28rpx;
}

.voiceBox .voiceBoxRight .centerActive {
  animation: centerActive 60s infinite;
}

@keyframes centerActive {
  0% {
    background-position-x: 0;
  }

  100% {
    background-position-x: -600rpx;
  }
}

.voiceBox .voiceBoxRight .timer {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.voiceBox .delBtn {
  width: 178rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(237, 237, 237, 1);
  border-radius: 44rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(130, 130, 130, 1);
}

.voiceBox .delBtn image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}

.upbottom {
  width: 100%;
  padding: 20rpx 0 30rpx 0;
  text-align: center;
  font-size: 28rpx;
}