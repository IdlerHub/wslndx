}

.wrap>.item .lastComment .more text {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(179, 179, 179, 1);
}

.wrap>.item .lastComment .more image {
  width: 14rpx;
  height: 25rpx;
  margin-left: 10rpx;
  margin-top: 4rpx;
}

.btn>.item {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: center;
  padding: 0;
}

.btn .division {
  width: 2rpx;
  height: 40rpx;
  background: #dbdbdb;
}

.btn>.item:nth-child(1) {
  padding-left: 0;
  justify-content: center;
}

.btn>.item:nth-child(2) {
  padding-left: 30px;
  justify-content: center;
}

.btn>.item:nth-child(3) {
  justify-content: center;
}

.btn>.item .iconfont {
  font-size: 58rpx;
  color: #bdbdbd;
  text-align: center;
}

.btn>.item .container-sub {
  display: flex;
  align-items: center;
}

.btn>.item .praise {
  width: 125rpx;
  height: 125rpx;
  background-size: cover;
