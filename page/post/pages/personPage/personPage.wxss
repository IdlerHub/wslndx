@charset "UTF-8";
@import "../../../../template/template.wxss";

/* 环境变量 */
page {
  background: #EDEDED;
}

.navigationBar {
  position: sticky;
  top: 0;
}

page .Pagetop {
  height: 250rpx;
  overflow: hidden;
  position: relative;
  z-index: 5;
}

page .container>.top .banckTop {
  width: 40rpx;
  height: 40rpx;
  padding: 10px 30rpx;
  position: absolute;
  z-index: 6;
}

page .container>.top .bg {
  position: absolute;
  left: -25rpx;
  bottom: 0;
  top: 0;
  margin: auto;
  width: 800rpx;
  filter: blur(20rpx) brightness(0.65);
  transform: scale(1.2);
}

page .container>.top .box {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 300rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

page .container>.top .box .left {
  display: flex;
  align-items: center;
}

page .container>.top .box .left .img {
  width: 130rpx;
  height: 130rpx !important;
  border-radius: 50%;
  border: 2rpx solid #b1adac;
}

page .container>.top .box .left .info {
  margin: 0 20rpx;
}

page .container>.top .box .left .info .line {
  text-align: left;
}

page .container>.top .box .left .info .name {
  width: 350rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #ffffff;
}

page .container>.top .box .left .info .school {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 40rpx;
  border-radius: 4rpx;
  margin-top: 8rpx;
  opacity: 0.8;
}

page .container>.top .box .iconfont {
  color: white;
  margin-top: -70rpx;
}

page .container>.top .box .attention {
  position: absolute;
  top: 51rpx;
  right: 30rpx;
  width: 128rpx;
  height: 56rpx;
  background: #F2323A;
  border-radius: 28rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 56rpx;
}

page .container>.top .box .attentionold {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.8);
}

page .container>.top .box .tabBox {
  margin-top: 30rpx;
  display: flex;
}

page .container>.top .box .tabBox text {
  padding: 8rpx 9rpx;
  background: rgba(255, 255, 255, 0.1);
  font-size: 28rpx;
  font-weight: 400;
  color: #FEFFFE;
  border-radius: 6rpx;
  margin-right: 10rpx;
}

page .centerBox {
  background: #fff;
  padding: 0 30rpx;
  padding-bottom: 30rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

page .centerBox .showBox {
  height: 107rpx;
  background: #F5F6FA;
  border-radius: 8rpx;
  margin: 20rpx 0;
  display: flex;
  position: relative;
}

page .centerBox .showBox .box {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
}

page .centerBox .showBox .box text:nth-child(2) {
  font-size: 38rpx;
  font-weight: 500;
  color: #333333;
  margin-left: 20rpx;
}

page .centerBox .showBox::after {
  content: '';
  width: 1px;
  height: 40rpx;
  background: #CCCCCC;
  border-radius: 1rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

page .centerBox .text {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 42rpx;
}

page .scoreBg {
  display: block;
  width: 730rpx;
  height: 220rpx;
  position: absolute;
  z-index: -1;
  left: 12rpx;
}

.studyList {
  height: 400rpx;
  margin-bottom: 20rpx;
  background: #fff;
  padding: 1rpx;
}

.studyList .studyTitle {
  font-size: 42rpx;
  font-weight: 500;
  color: #333333;
  margin: 30rpx;
}

.studyList .listBox {
  overflow: hidden;
  overflow-x: auto;
}

.studyList .listBox .listItem {
  width: 324rpx;
  margin-right: 20rpx;
}

.wrap .wrapTitle {
  height: 118rpx;
  line-height: 118rpx;
  padding-left: 30rpx;
  border-bottom: 1rpx solid #EDEDED;
  background: #fff;
  font-size: 42rpx;
  font-weight: 500;
  color: #333333;
}

.ncir {
  margin-top: 200rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.ncir text {
  margin-top: -100rpx;
  font-size: 32rpx;
  color: #949494;
  width: 100%;
  text-align: center;
}

.ncir navigator {
  width: 250rpx;
  line-height: 80rpx;
  text-align: center;
  background: #df2020;
  color: #fff;
  font-size: 36rpx;
  border-radius: 4rpx;
  margin: 40rpx auto 0;
}

.voiceBox {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin: 20rpx 30rpx;
}

.voiceBox .voiceBoxRight {
  width: 420rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(90deg, rgba(255, 126, 49, 1) 0%, rgba(255, 53, 53, 1) 100%);
  border-radius: 44rpx;
  padding: 0 35rpx 0 46rpx;
  box-sizing: border-box;
}

.voiceBox .voiceBoxRight image:nth-child(1) {
  width: 27rpx;
  height: 35rpx;
}

.voiceBox .voiceBoxRight .centerImg {
  width: 192rpx;
  height: 28rpx;
  background: url('https://hwcdn.jinlingkeji.cn/images/dev/postVoiceImg.png') center;
  background-size: 563rpx 28rpx;
}

.voiceBox .voiceBoxRight .centerActive {
  animation: centerActive 60s infinite;
}

@keyframes centerActive {
  0% {
    background-position-x: 0;
  }

  100% {
    background-position-x: -600rpx;
  }
}

.voiceBox .voiceBoxRight .timer {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.voiceBox .delBtn {
  width: 178rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(237, 237, 237, 1);
  border-radius: 44rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(130, 130, 130, 1);
}

.voiceBox .delBtn image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}