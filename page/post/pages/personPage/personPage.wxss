@charset "UTF-8";

/* 环境变量 */
page {
  background: #eee;
}

page .Pagetop {
  height: 240rpx;
  overflow: hidden;
  position: relative;
  z-index: 5;
}

page .container>.top .bg {
  position: absolute;
  left: -25rpx;
  bottom: 0;
  top: 0;
  margin: auto;
  width: 800rpx;
  filter: blur(20rpx) brightness(0.65);
  transform: scale(1.2);
}

page .container>.top .box {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 300rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

page .container>.top .box .left {
  display: flex;
  align-items: center;
  margin-top: -70rpx;
}

page .container>.top .box .left .img {
  width: 154rpx;
  height: 154rpx !important;
  border-radius: 50%;
  border: 2rpx solid #b1adac;
}

page .container>.top .box .left .info {
  margin: 0 20rpx;
}

page .container>.top .box .left .info .line {
  text-align: left;
  line-height: 62rpx;
}

page .container>.top .box .left .info .name {
  width: 350rpx;
  font-family: PingFangSC-Medium;
  font-size: 44rpx;
  line-height: 62rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #ffffff;
}

page .container>.top .box .left .info .city {
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #ffffff;
  line-height: 40rpx;
  border-radius: 4rpx;
  background: #999594;
  padding: 0 15rpx;
}

page .container>.top .box .left .info .school {
  margin-left: 20rpx;
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #ffffff;
  line-height: 40rpx;
  border-radius: 4rpx;
  background: #999594;
  padding: 0 15rpx;
}

page .container>.top .box .iconfont {
  color: white;
  margin-top: -70rpx;
}

page .container>.top .box .attention {
  position: absolute;
  top: 51rpx;
  right: 30rpx;
  width: 136rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(223, 32, 32, 1);
  text-align: center;
  line-height: 56rpx;
}

page .container>.top .box .attentionold {
  background: rgba(153, 149, 148, 1);
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

page .scoreBg {
  display: block;
  width: 730rpx;
  height: 220rpx;
  position: absolute;
  z-index: -1;
  left: 12rpx;
}

.wrap {
  box-sizing: border-box;
  padding-bottom: 120rpx;
}

.wrap>.item {
  background: #fff;
  margin-bottom: 20rpx;
}

.wrap>.item:last-of-type {
  border-bottom: none;
}

.wrap>.item .top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 30rpx 20rpx 30rpx;
}

.wrap>.item .top .date {
  font-size: 26rpx;
  color: #bdbdbd;
}

.wrap>.item .top .left {
  display: flex;
  align-items: center;
}

.wrap>.item .top .avatarUrl {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 1rpx solid #d8d8d8;
  background: #e9e9e9;
  position: relative;
}

.wrap>.item .top .avatarUrl image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.wrap>.item .top .avatarUrl .fs {
  width: 22rpx;
  height: 24rpx;
  position: absolute;
  bottom: 0rpx;
  right: -6rpx;
}

.wrap>.item .top .text {
  margin-left: 20rpx;
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.wrap>.item .top .nickName {
