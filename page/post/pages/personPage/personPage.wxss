.wrap>.item .content video {
  margin-top: 20rpx;
  width: 100%;
  height: 350rpx;
}

.wrap>.item .content .poster {
  position: absolute;
  width: 100%;
  height: 100%;
  filter: brightness(0.8);
  background: #e9e9e9;
}

.wrap>.item .content .bg {
  position: relative;
