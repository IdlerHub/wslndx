/* pages/search/search.wxss */
.container {
  height: 100vh;
}

.container .search-top {
  width: 100%;
  height: 80rpx;
  padding: 0 30rpx;
  margin: 30rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container .search-top .search-box {
  flex: 1;
  height: 100%;
  padding: 0 30rpx;
  background: rgba(247, 247, 247, 1);
  border-radius: 10rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.container .search-top .search-box image:nth-child(1) {
  width: 40rpx;
  height: 40rpx;
  margin-left: 12rpx;
  margin-right:20rpx;
}

/* .container .search-top .search-box image:nth-child(3) {
  width: 36rpx;
  height: 36rpx;
  margin-left: 15rpx;
} */
.container .search-top .search-box  form{
  display: flex;
  flex: 1;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  position: relative;
}
.container .search-top .search-box button {
  width: 86rpx;
  height: 88rpx;
  position: absolute;
  right: -30rpx;
  top: 50%;
  margin-top: -36rpx;
  z-index: 5;
}
.container .search-top .search-box button image {
  width: 40rpx;
  height: 40rpx;
}

.container .search-top .search-txt {
  flex: 1;
  font-size: 36rpx;
  color: rgba(46, 46, 46, 1);
  padding-top: 5rpx;
  padding-right: 8rpx;
}

.container .search-top .cancle {
  width: 136rpx;
  height: 100%;
  line-height: 80rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: #FFFFFF;
  text-align: center;
  background: #F2323A;
  border-radius: 0px 10rpx 10rpx 0px;
}

.container .voice-box {
  position: absolute;
  bottom: -500rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .voice-box .voice-image {
  width: 152rpx;
  height: 152rpx;
}

.container .voice-box .voice-txt {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 24rpx;
}

.container .voice-box .voice-water1{
  width: 152rpx;
  height: 152rpx;
  position: absolute;
  top: -2rpx;
  border: 1px solid pink;
  box-shadow: 0 0 120px 30px pink inset;
  border-radius: 100%;
  z-index: -4;
  opacity: 0;
}
.container .voice-box .voice-water1 {
  animation: wateranimate 2s 1s ease-out infinite;
}
.container .voice-box .voice-water2 {
  animation: wateranimate 2s 0s ease-out infinite;
}
@keyframes wateranimate {
  0% {
    transform: scale(0.9);
    opacity: 0.8;
  }

  100% {
    transform: scale(2);
    opacity: 0;
  }
}
.qst {
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 130rpx;
}
.qst .qst-img{
  width: 510rpx;
  height: 334rpx;
}
.container .wrap {
  padding: 0 30rpx;
  box-sizing: border-box;
}
.wrap .item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e9e9e9;
}
.wrap .item:last-of-type {
  border-bottom: none;
}
.wrap .item .left {
  position: relative;
  width: 260rpx;
  height: 160rpx;
}
.wrap .item .left .status {
  position: absolute;
  width: 90rpx;
  height: 52rpx;
  top: 0;
  left: 0;
}
.wrap .left .poster {
  width: 260rpx;
  height: 160rpx;
  border-radius: 12rpx;
}
.wrap .left .icon {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 10rpx;
  bottom: 10rpx;
}
.wrap .right {
  flex: 1;
  width: 410rpx;
  margin-left: 20rpx;
}
.wrap .right .name {
  line-height: 53rpx;
  font-size: 38rpx;
  color:rgba(46,46,46,1);
  letter-spacing: 0;
  font-weight: 500;
}
.wrap .right .actor {
  line-height: 37rpx;
  font-size: 26rpx;
  color: #999;
  letter-spacing: 0;
  margin: 10rpx 0;
}
.wrap .right .info {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #bfbfbf;
  letter-spacing: 0;
}
.wrap .right .info .key {
  color: #999;
  margin-right: 12rpx;
}
.playNum {
  margin-left: 40rpx;
}


