/* page/index/pages/schoolLesson/schoolLesson.wxss */
page {
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #F5F6FA;
  min-height: 100vh;
  box-sizing: border-box;
}

.item {
  width: 330rpx;
  height: 284rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  color: #333333;
  text-align: center;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.item text {
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  line-height: 42rpx;
}