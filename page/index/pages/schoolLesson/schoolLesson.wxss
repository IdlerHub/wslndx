/* page/index/pages/schoolLesson/schoolLesson.wxss */
page {
  background-color: #EDEDED;
}

.myScholl {
  height: 384rpx;
  background: linear-gradient(180deg, #FFFFFF 0%, #EDEDED 100%);
  border-top: 1rpx solid #EDEDED;
  padding: 40rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  line-height: 50rpx;
}

.myScholl .box {
  position: relative;
  height: 244rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.myScholl .box .top {
  height: 161rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  border-bottom: 1rpx solid rgba(244, 244, 244, 0.5);
  position: relative;
  z-index: 1;
}

.myScholl .box .top .logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.myScholl .box .top .schollName {
  font-size: 36rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 50rpx;
  margin: 0 20rpx;
  flex: 1;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.myScholl .box .bottom {
  height: 82rpx;
  position: relative;
  z-index: 1;
  display: flex;
}

.myScholl .box .bottom::after {
  content: '';
  width: 2rpx;
  height: 30rpx;
  background: #FFFFFF;
  opacity: 0.5;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 1;
}

.myScholl .box .bottom view {
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 82rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.myScholl .box .top .btn {
  width: 144rpx;
  height: 60rpx;
  background: #F5F5F5;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FF4C30;
  text-align: center;
  line-height: 60rpx;
}

.myScholl .box .schoolBg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: 0;
}


.contrainer {
  padding: 30rpx;
  padding-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  min-height: 100vh;
  box-sizing: border-box;
}

.item {
  width: 330rpx;
  height: 284rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  color: #333333;
  text-align: center;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.item text {
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  line-height: 42rpx;
}