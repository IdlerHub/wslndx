/* page/index/pages/allSchoollesson/allSchoollesson.wxss */
.recommend .item {
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #fff;
}

.item .right .title {
  line-height: 50rpx;
  font-size: 38rpx;
  color: #3a3a3a;
  letter-spacing: 0;
  display: -webkit-box;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.item .right .createtime {
  display: block;
  margin-top: 14rpx;
}

.recommend .item .content {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e9e9e9;
}

.recommend .item .content.big {
  flex-direction: column;
  align-items: flex-start;
}

.recommend .item .content.big .left {
  width: 100%;
  height: 364rpx;
}

.recommend .item .content.big .left .poster {
  width: 100%;
  height: 364rpx;
}

.recommend .item .content.big .left .icon {
  width: 100rpx;
  height: 100rpx;
}

.recommend .item .content.big .right {
  width: 100%;
  margin-left: 0;
  margin-top: 20rpx;
}

.recommend .item .content.big .right .actor {
  margin-bottom: 0;
}

.recommend .item .content.big .right .info {
  display: none;
}

.recommend .item:last-of-type .content {
  border-bottom: none;
}

.recommend .item .left {
  position: relative;
  width: 260rpx;
  height: 160rpx;
}

.recommend .item .left .status {
  width: 90rpx !important;
  height: 52rpx !important;
  position: absolute;
  top: 0;
  left: 0;
}

.recommend .left .poster {
  width: 260rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #f5f6f8;
  border: 1px solid #ededed;
}

.recommend .left .icon {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 10rpx;
  bottom: 10rpx;
}

.recommend .right {
  flex: 1;
  width: 410rpx;
  margin-left: 30rpx;
}

.recommend .right .name {
  line-height: 56rpx;
  font-size: 38rpx;
  color: #3a3a3a;
  letter-spacing: 0;
}

.recommend .right .actor {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #8a8a8a;
  letter-spacing: 0;
  margin: 8rpx 0;
}

.recommend .right .info {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #bfbfbf;
  letter-spacing: 0;
}

.recommend .right .info .key {
  color: #8a8a8a;
  margin-right: 12rpx;
}

.playNum {
  margin-left: 40rpx;
}

.nav {
  box-sizing: border-box;
  border-bottom: 2rpx solid #e9e9e9;
  background: #fff;
  height: 100rpx;
}

.nav .item {
  line-height: 100rpx;
  display: inline-block;
  width: 115rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #999999;
  letter-spacing: 0;
}

.nav .itemone {
  margin-left: 14rpx;
}

.nav .item.active {
  position: relative;
  color: #df2020;
  font-size: 44rpx;
  font-weight: 800;
}

.nav .item.active::after {
  content: "";
  position: absolute;
  bottom: 2rpx;
  left: 50%;
  width: 36rpx;
  height: 5rpx;
  margin-left: -18rpx;
  background: #df2020;
  border-radius: 3rpx;
}

.nav .tabclassify {
  height: 100%;
  width: 74rpx;
  float: right;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background: linear-gradient(270deg, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0.9) 100%);
  margin-top: -99rpx;
  position: relative;
}

.nav .tabclassify image {
  width: 32rpx;
  height: 26rpx;
}

.nav .integral {
  height: 100%;
  float: right;
  padding: 10rpx 0 0 30rpx;
  box-sizing: border-box;
}