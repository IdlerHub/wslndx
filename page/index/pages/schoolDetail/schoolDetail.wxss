/* page/index/pages/schoolDetail/schoolDetail.wxss */
page {
  background: #EDEDED;
}

.liveBox {
  background: #fff;
  margin-bottom: 20rpx;
}

.topTtile {
  height: 118rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #E9E9E9;
}

.topTtile text {
  font-size: 42rpx;
  font-weight: 500;
  color: #333333;
}

.topTtile .topTtile-right {
  display: flex;
  align-items: center;
}

.topTtile .topTtile-right text {
  font-size: 32rpx;
  font-weight: 400;
  color: #999999;
}

.topTtile .topTtile-right image {
  width: 22rpx;
  height: 22rpx;
  margin-left: 10rpx;
  margin-top: 2rpx;
}

.liveBox .comment {
  display: flex;
  flex-wrap: wrap;
  padding: 0 18rpx;
  justify-content: space-between;
}

.liveBox .comment .liveItem {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  /* margin-right: 18rpx; */
  padding: 30rpx 0;
  border-bottom: 1px solid #EDEDED;
}

.liveBox .comment .liveItem .liveImgBox {
  width: 348rpx;
  height: 196rpx;
  border-radius: 10rpx;
  background: #EDEDED;
  overflow: hidden;
  position: relative;
  border: 1px solid #EEEEEE;
}

.liveBox .comment .liveItem .liveImgBox image:nth-child(1) {
  width: 100%;
  height: 100%;
}

.liveBox .comment .liveItem .liveImgBox .play {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 70rpx;
  left: 50%;
  transform: translateX(-50%);
} 

.liveBox .comment .liveItem .liveImgBox .liveStatus {
  /* width: 100rpx; */
  height: 44rpx;
  padding: 0 9rpx;
  background: linear-gradient(270deg, #FF565D 0%, #F2323A 100%);
  border-radius: 10rpx 0rpx 0rpx 0px;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.liveBox .comment .liveItem .liveImgBox .liveStatus .statusLeft {
  display: flex;
  align-items: flex-end;
  height: 24rpx;
}

.liveItem .liveImgBox .liveStatus .statusLeft .statusWite {
  display: block;
  width: 5rpx;
  height: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  margin-right: 5rpx;
  position: relative;
}

.liveItem .liveImgBox .liveStatus .statusLeft .naoling {
  width: 23rpx;
  height: 23rpx;
  margin-right: 8rpx;
}

.liveItem .liveImgBox .liveStatus .statusLeft .endIcon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.liveItem .liveImgBox .liveStatus .statusLeft .statusTxt {
  font-size: 26rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 22rpx;
  margin-left: 5rpx;
}

.liveItem .liveImgBox .liveStatus .statusLeft .viewNum {
  position: absolute;
  top: 0;
  right: -100rpx;
  width: 100rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 0 6rpx 6rpx 0;
  text-align: center;
  line-height: 44rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #FFFFFF;
}

.liveItem .liveImgBox .liveStatus .statusLeft .statusWite:nth-child(1) {
  animation: liveStatus 0.4s 0s ease-out infinite;
}

.liveItem .liveImgBox .liveStatus .statusLeft .statusWite:nth-child(2) {
  animation: liveStatus 0.6s 0s ease-out infinite;
}

.liveItem .liveImgBox .liveStatus .statusLeft .statusWite:nth-child(3) {
  animation: liveStatus 0.8s 0s ease-out infinite;
}

@keyframes liveStatus {
  0% {
    height: 100%;
  }

  50% {
    height: 20%;
  }

  100% {
    height: 100%;
  }
}

.liveBox .comment .liveItem .img {
  width: 348rpx;
  height: 196rpx;
  border-radius: 24rpx;
  background: #EDEDED;
}

.liveBox .comment .liveItem text:nth-child(2) {
  width: 310rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 38rpx;
  color: #3A3A3A;
  margin-top: 16rpx;
  margin-left: 12rpx;
  min-width: 212rpx;
  height: 53rpx;
}

.liveBox .comment .liveItem .tagsLine {
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  margin-top: 4rpx;
}

.liveBox .comment .liveItem .tagsLine view {
  padding: 3rpx 6rpx;
  max-width: 144rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  font-weight: 400;
  color: #808080;
  background: #EBEDF5;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.liveBox .comment .liveItem text:nth-child(4) {
  width: 310rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  color: #999999;
  margin-left: 12rpx;
  min-width: 217rpx;
  height: 40rpx;
  margin-top: 8rpx;
}

.liveBox .allBox {
  height: 108rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 400;
  color: #96A8BB;
  border-top: 1rpx solid #E9E9E9;
}

.liveBox .allBox .iconImg {
  margin-left: 16rpx;
}

.topBox {
  height: 360rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.topBox .mask {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 1;
  top: 0;
  background: linear-gradient(180deg, #757D8C 0%, #626A7D 100%);
  opacity: 0.9;
}

.topBox .bg {
  width: 800rpx;
  height: 800rpx;
  position: absolute;
  left: -25rpx;
  bottom: 0;
  top: 0;
  margin: auto;
  transform: scale(1.2);
  z-index: 0;
  filter: blur(10rpx) brightness(0.75);
}

.topBox .logo {
  width: 119rpx;
  height: 119rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(244, 244, 244, 0.3);
  position: relative;
  z-index: 2;
}

.topBox text {
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 50rpx;
  margin-top: 20rpx;
  position: relative;
  z-index: 2;
}

.inroBox {
  background: #FFFFFF;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  font-weight: 400;
  color: #666666;
  line-height: 46rpx;
  text-align: justify;
}

.inroBox text {
  color: #96A8BB;
  float: right;
}

.contentBox {
  background: #fff;
  margin-bottom: 20rpx;
}

.listBox {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 30rpx 21rpx;
}

.listBox .teachItem {
  width: 344rpx;
  height: 160rpx;
  background: #F2F3F7;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.listBox .teachItem image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
  border-radius: 50%;
}

.listBox .teachItem text {
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.bigIntro {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9;
}

.bigIntro .content {
  width: 100%;
  height: 860rpx;
  background: #fff;
  border-radius: 30rpx 30rpx 0px 0px;
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 0;
  animation: active 0.5s;
}

.bigIntro .content .top {
  width: 100%;
  border-bottom: 1rpx solid #E9E9E9;
  position: relative;
  height: 119rpx;
  text-align: center;
  line-height: 119rpx;
  font-size: 42rpx;
  font-weight: 500;
  color: #333333;
}

.bigIntro .content .top image {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 0;
  right: 0;
  padding: 34rpx 30rpx;
}

.bigIntro .content .intro {
  width: 100%;
  flex: 1;
  overflow: hidden;
  overflow-y: auto;
  padding: 30rpx 40rpx;
  padding-bottom: 60rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  font-weight: 400;
  color: #666666;
  line-height: 52rpx;
}

@keyframes active {
  from {
    bottom: -760rpx;
  }
  to {
    bottom: 0;
  }
}

.qstBox {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qstBox image {
  width: 452rpx;
  height: 288rpx;
}

.qstBox text {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  margin-top: 42rpx;
}