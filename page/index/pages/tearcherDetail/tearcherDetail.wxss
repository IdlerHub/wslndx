/* page/index/pages/tearcherDetail/tearcherDetail.wxss */
.scrollView {
  height: 100vh;
  position: relative;
}

.topBox {
  min-height: 100rpx;
  background: linear-gradient(180deg, #757D8C 0%, #626A7D 100%);
  padding-bottom: 30rpx;
}

.topBox .back {
  width: 40rpx;
  height: 35rpx;
  padding: 0 30rpx;
}

.topBox .msgBox {
  display: flex;
  padding: 40rpx 30rpx;
  align-items: center;
}

.topBox .msgBox image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
}

.topBox .msgBox .nickBox {
  width: 356rpx;
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.topBox .msgBox .nickBox text {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.topBox .msgBox .nickBox text:nth-child(1) {
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.topBox .msgBox .nickBox text:nth-child(2) {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  margin-top: 10rpx;
}

.topBox .msgBox .btn {
  width: 134rpx;
  height: 64rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
  text-align: center;
  line-height: 64rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  margin-left: 40rpx;
}

.topBox .inro {
  padding: 0 20rpx 0 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  text-justify: newspaper;
  word-wrap: break-word;
}

.topBox .bottom {
  width: 690rpx;
  height: 90rpx;
  background: rgba(244, 244, 244, 0.1);
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  position: relative;
  display: flex;
}

.topBox .bottom .center {
  display: block;
  width: 2rpx;
  height: 30rpx;
  background: #CCCCCC;
  border-radius: 2rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.topBox .bottom .numBox {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.topBox .bottom .numBox text:nth-child(1) {
  font-size: 30rpx;
  font-weight: 400;
  color: #FFFFFF;
  margin-right: 6rpx;
}

.topBox .bottom .numBox text:nth-child(2) {
  font-size: 38rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-top: -4rpx;
}

.tabBox {
  width: 100%;
  height: 94rpx;
  border-bottom: 1rpx solid #E9E9E9;
  background: #fff;
  z-index: 99;
}

.tabBox .tab {
  position: relative;
  font-size: 42rpx;
  font-weight: 500;
  color: #F2323A;
  width: 166rpx;
  line-height: 94rpx;
  text-align: center;
  margin-left: 50rpx;
}

.tabBox .tab text:nth-child(2) {
  width: 50rpx;
  height: 6rpx;
  background: #F2323A;
  border-radius: 3rpx;
  position: absolute;
  bottom: -1rpx;
  left: 50%;
  margin-left: -25rpx;
}

.item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  margin: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e9e9e9;
}

.item:last-of-type {
  border-bottom: none;
}

.item .left {
  position: relative;
  width: 260rpx;
  height: 160rpx;
  border: 2rpx solid #EDEDED;
  background: #EDEDED;
  border-radius: 10rpx;
  overflow: hidden;
}

.item .left .status {
  position: absolute;
  width: 90rpx;
  height: 52rpx;
  top: 0;
  left: 0;
}

.left .poster {
  width: 260rpx;
  height: 160rpx;
  border-radius: 12rpx;
}

.left .chargeBox {
  width: 68rpx;
  height: 44rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: linear-gradient(270deg, #FF8242 0%, #FF6010 100%);
  text-align: center;
  line-height: 44rpx;
  font-size: 26rpx;
  color: #fff;
}

.left .charge {
  background: linear-gradient(270deg, #FF565D 0%, #F2323A 100%);
}

.right {
  flex: 1;
  width: 410rpx;
  height: 160rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.right .tags {
  display: flex;
  margin-top: 12rpx;
}

.right .tags text {
  padding: 3rpx 6rpx 2rpx 6rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #808080;
  background: #EDEFF7;
  border-radius: 4rpx;
}

.right .name {
  line-height: 53rpx;
  font-size: 38rpx;
  color: rgba(46, 46, 46, 1);
  letter-spacing: 0;
  font-weight: 500;
}

.right .actor {
  line-height: 37rpx;
  font-size: 26rpx;
  color: #999;
  letter-spacing: 0;
  margin: 10rpx 0;
}

.right .info {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #bfbfbf;
  letter-spacing: 0;
  display: flex;
  margin-top: 22rpx;
}

.right .info .key {
  color: #999;
  margin-right: 12rpx;
}

.info text:nth-child(2) {
  font-size: 24rpx;
  margin: 0 20rpx;
}
