/* page/index/pages/chageLesson/chageLesson.wxss */
page {
  background: #EDEDED;
}

.cover {
  width: 100vw;
  height: 422rpx;
  display: block;
}

.inro {
  height: 162rpx;
  padding: 0rpx 22rpx 0 30rpx;
  background: #FFF;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

.inro .name {
  font-size: 40rpx;
  font-weight: 500;
  color: #3A3A3A;
  line-height: 40rpx;
}

.inro .subTitlt {
  display: block;
  width: 462rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #7E7E7E;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 24rpx;
}

.inro .price {
  position: absolute;
  right: 22rpx;
  bottom: 24rpx;
}

.inro .price {
  font-size: 40rpx;
  font-weight: 400;
  color: #F2323A;
}

.inro .price text:nth-child(1) {
  font-size: 28rpx;
}

.content {
  background: #fff;
  margin-top: 20rpx;
}

.content .tabBox {
  height: 100rpx;
  border-bottom: 1rpx solid #E9E9E9;
  padding-left: 26rpx;
  display: flex;
  position: relative;
}

.content .tabBox .sort {
  display: flex;
  align-items: center;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
}

.content .tabBox .sort image {
  width: 30rpx;
  height: 30rpx;
}

.content .tabBox .sort text {
  font-size: 36rpx;
  font-weight: 400;
  color: #7E7E7E;
  margin-left: 10rpx;
}

.content .tabBox .tab {
  width: 80rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-right: 60rpx;
  position: relative;
  font-size: 36rpx;
  font-weight: 400;
  color: #7E7E7E;
}

.content .tabBox .tab text:nth-child(2) {
  width: 60rpx;
  height: 4rpx;
  background: #DF2020;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-60%);
}

.content .swiper {
  height: calc(100vh - 704rpx);
  background: #fff;
}

.item {
  margin: 0 30rpx;
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #E9E9E9;
}

.item .itemName {
  flex: 1;
  font-size: 36rpx;
  font-weight: 400;
  color: #3A3A3A;
  margin-right: 20rpx;
}

.item .itemRight {
  display: flex;
  align-items: center;
}

.item .itemRight image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}

.item .itemRight text {
  font-size: 30rpx;
  font-weight: 400;
  color: #7E7E7E;
}

.richText {
  margin: 30rpx;
}

.fixeBox {
  width: 100vw;
  height: 140rpx;
  background: #EDEDED;
  text-align: center;
  line-height: 140rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: #666666;
  position: fixed;
  bottom: 0;
}