/* page/index/pages/chageLesson/chageLesson.wxss */
page {
  background: #EDEDED;
}

.cover {
  width: 100vw;
  height: 422rpx;
  display: block;
}

.inro {
  height: 162rpx;
  padding: 0rpx 22rpx 0 30rpx;
  background: #FFF;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

.inro .name {
  font-size: 40rpx;
  font-weight: 500;
  color: #3A3A3A;
  line-height: 40rpx;
}

.inro .subTitlt {
  display: block;
  width: 462rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #7E7E7E;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 24rpx;
}

.inro .price {
  position: absolute;
  right: 22rpx;
  bottom: 24rpx;
}

.inro .price {
  font-size: 40rpx;
  font-weight: 400;
  color: #F2323A;
}

.inro .price text:nth-child(1) {
  font-size: 28rpx;
}

.content {
  background: #fff;
  margin-top: 20rpx;
}

.content .tabBox {
  height: 100rpx;
  border-bottom: 1rpx solid #E9E9E9;
  padding-left: 26rpx;
  display: flex;
}

.content .tabBox .tab {
  width: 80rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-right: 60rpx;
  position: relative;
  font-size: 36rpx;
  font-weight: 400;
  color: #7E7E7E;
}

.content .tabBox .tab text:nth-child(2) {
  width: 60rpx;
  height: 4rpx;
  background: #DF2020;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-60%);
}