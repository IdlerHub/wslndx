/* page/index/pages/interested/interested.wxss */
page {
  /* padding: 30rpx; */
  padding-bottom: 200rpx;
  /* min-height: 100vh; */
  box-sizing: border-box;
}

.navigationBar {
  position: sticky;
  top: 0;
}

.pageTop {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pageTop text:nth-child(1) {
  font-size: 40rpx;
  font-weight: 500;
  color: #333333;
  line-height: 56rpx;
}

.pageTop text:nth-child(2) {
  font-size: 30rpx;
  font-weight: 400;
  color: #999999;
  line-height: 42rpx;
  margin-top: 8rpx;
}

.interestedBox {
  margin: 0 30rpx;
  padding: 30rpx 0 20rpx 0;
  border-bottom: 1rpx solid #E9E9E9;
}

.interestedBox .iterestTitle {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}

.interestedBox .itemBox {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.interestedBox .itemBox .interestItem {
  width: 216rpx;
  height: 80rpx;
  background: #F5F6FA;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  margin-right: 19rpx;
  margin-bottom: 20rpx;
}

.interestedBox .itemBox .selectItem {
  background: rgba(242, 50, 58, 0.1);
  color: #F2323A;

}

.interestedBox .itemBox .interestItem:nth-child(3n) {
  margin-right: 0;
}

.btn {
  width: 440rpx;
  height: 96rpx;
  background: #F2323A;
  border-radius: 48rpx;
  text-align: center;
  line-height: 96rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: #FFFFFF;
  position: fixed;
  left: 50%;
  bottom: 83rpx;
  transform: translateX(-50%);
}

.vannavbar {
  background: #F5F6FA !important;
}

.vannavbarTitle {
  font-size: 36rpx !important;
  font-weight: 500 !important;
  text-align: center;
  color: #333333;
}

.scrollView {
  height: 100vh;
}

