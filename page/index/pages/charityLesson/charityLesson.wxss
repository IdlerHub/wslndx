/* page/index/pages/hotActivity/hotActivity.wxss */
page {
    background-color: #EDEDED;
  }
  
  .contariner {
    min-height: 100vh;
    background: #ffffff;
    padding-bottom: 60rpx;
    position: relative;
  }
  .swiperBox {
    height: 400rpx;
    position: fixed;
    height: 400rpx;
    width: 100vw;
  }
  .swiperBox  .img {
    width: 100%;
    height: 100%;
  }
  .swiperBox .leftIcon {
    position: absolute;
    left: 34rpx;
    width: 100rpx;
    height: 100rpx;
  }
  .swiperBox .leftIcon .icon{
    height: 40rpx;
    width: 40rpx;
  }

  .moreBox {
    padding: 30rpx 30rpx 140rpx 30rpx;
    padding-top: 40rpx;
    position: absolute;
    top: 340rpx;
    background: #fff;
    border-radius: 20rpx 20rpx 0 0;
    width: 100%;
    box-sizing: border-box;
  }
  .moreBox .scrollView {
    height: 100vh;
  }
  .moreBox .moreTitle {
    display: flex;
    align-items: center;
    padding-bottom: 30rpx;
  }
  .moreBox .moreTitle .left {
    flex: 1;
    font-size: 40rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #333333;
  }
  .moreBox .moreTitle .right {
    width: 128rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #999999;
  }
  .moreBox .moreTitle .icon {
    height: 30rpx;
    width: 30rpx;
    margin: 7rpx 0 0 5rpx;
  }
  
  .moreBox .listItem {
    padding: 30rpx 0;
    display: flex;
    align-items: center;
    border-top: 1px solid #E9E9E9;
    text-align: left;
    line-height: normal;
  }
  
  .moreBox .listItem .imgMask {
    width: 260rpx;
    height: 160rpx;
    border-radius: 10rpx;
    background: #D8D8D8;
    overflow: hidden;
    position: relative;
  }
  
  .moreBox .listItem .imgMask .cover {
    width: 100%;
    height: 100%;
  }

  .moreBox .listItem .imgMask .img {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
  }
  
  .moreBox .listItem .centerBox {
    display: flex;
    flex-direction: column;
    margin: 0 20rpx;
    height: 160rpx;
  }
  .moreBox .listItem .centerBox .name {
    width: 380rpx;
    height: 33.3%;
    font-size: 38rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #3A3A3A;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  .moreBox .listItem .centerBox .tags {
    height: 33.3%;
  }
  .moreBox .listItem .centerBox .tags text {
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #808080;
    padding: 5rpx 10rpx;
    background-color: #EDEFF7;
    border-radius: 8rpx;
    margin-right: 8rpx;
  }
  .moreBox .listItem .centerBox .desc {
    height: 33.3%;
    display: flex;
    align-items: center;
    color: #999999;
    font-size: 28rpx;
  }
  .moreBox .listItem .centerBox .desc text:nth-child(1) {
    width: 60rpx;
  }
  .moreBox .listItem .centerBox .desc view {
    width: 2rpx;
    height: 24rpx;
    background-color: #ccc;
    margin: 0 10rpx;
  }
  .moreBox .listItem .centerBox .desc text:nth-child(2) {
    flex: 1;
  }
  
  .moreBottom {
    position: fixed;
    bottom: 0;
    width: 100vw;
    height: 140rpx;
    background: #fff;
    border-top: 1px solid #E9E9E9;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .moreBottom .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    width: 686rpx;
    height: 90rpx;
    background: #F2323A;
    border-radius: 48rpx;
  }
