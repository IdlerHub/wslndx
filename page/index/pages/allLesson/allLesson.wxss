/* page/index/pages/allLesson/allLesson.wxss */
.pageTop {
  width: calc(100vw - 60rpx);
  height: 80rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  margin: 20rpx auto;
  background: #F5F6FA;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
}

.pageTop .iconImg {
  margin-right: 20rpx;
}

.pageTop text {
  font-size: 36rpx;
  font-weight: 400;
  color: #CCCCCC;
}

.contrainer {
  height: calc(100vh - 120rpx);
  border-top: 1rpx solid #EDEDED;
  display: flex;
}



.contrainer .scrollLeft {
  width: 220rpx;
  height: 100%;
  background: #F7F7F7;
}

.contrainer .scrollRight {
  flex: 1;
  min-height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.contrainer .scrollRight .scrollView {
  height: 100%;
  padding-bottom: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.contrainer .scrollLeft .navItem {
  width: 100%;
  text-align: center;
  line-height: 108rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: #666666;
}

.contrainer .scrollLeft .active {
  background: #fff;
  position: relative;
  color: #F2323A;
  font-weight: 500;
}

.contrainer .scrollLeft .active text {
  width: 9rpx;
  height: 50rpx;
  background: #F2323A;
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -25rpx;
}

.scrollRight .swiperItem {
  overflow-y: scroll;
}

.scrollRight .lessonBox {
  width: 100%;
  padding: 20rpx 0;
}

.scrollRight .lessonBox .activity {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  display: block;
}

.scrollRight .lessonBox .lessonItem {
  display: flex;
  flex-wrap: wrap;
}

.scrollRight .lessonBox .lessonItem image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  margin: 20rpx 20rpx 0 0;
}

.scrollRight .lessonBox .lessonItem image:nth-child(3n) {
  margin-right: 0;
}

.scrollRight .down {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  margin-top: 20rpx;
  display: block;
  height: 100rpx;
  flex-shrink: 0;
}

::-webkit-scrollbar {
  display: none;
}

.lessonListBox {
  height: calc(100vh - 120rpx);
}

.lessonListBox .lessonListTop {
  width: 100%;
  height: 100rpx;
  background: #EEEEEE;
  display: flex;
}

.lessonListBox .lessonListTop .left {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 172rpx;
  height: 100%;
  border-right: 1rpx solid rgba(254, 155, 2, 0.3);
}

.lessonListBox .lessonListTop .left image {
  width: 18.72rpx;
  height: 28.01rpx;
}

.lessonListBox .lessonListTop .left text {
  width: 56rpx;
  height: 64rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 35rpx;
  margin-left: 22rpx;
}

.lessonListBox .lessonListTop .right {
  flex: 1;
  padding: 0 43rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.lessonListBox .lessonListTop .right text:nth-child(1) {
  font-size: 36rpx;
  font-weight: 400;
  color: #999999;
}

.lessonListBox .lessonListTop .right image {
  width: 18.72rpx;
  height: 28.01rpx;
  margin: 0 51rpx 0 37rpx;
}

.lessonListBox .lessonListTop .right text:nth-child(3) {
  font-size: 36rpx;
  font-weight: 400;
  color: #F2323A;
}

.lessonListBox .lessonScroll {
  flex: 1;
  height: calc(100% - 100rpx);
}

.lessonListBox .qst {
  width: 100%;
  height: 100%;
  padding-top: 117rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.lessonListBox .qst image {
  width: 452rpx;
  height: 288rpx;
}

.lessonListBox .qst text:nth-child(2) {
  font-size: 36rpx;
  font-weight: 400;
  color: #999999;
  margin-top: -30rpx;
}

.lessonListBox .qst text:nth-child(3) {
  width: 300rpx;
  height: 80rpx;
  background: #F2323A;
  border-radius: 46rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: #FFFFFF;
  margin-top: 48rpx;
}

.classRoomBox {
  width: 710rpx;
  height: 128rpx;
  background: #FFFFFF;
  box-shadow: 0px 5rpx 20rpx 0rpx rgba(119, 63, 34, 0.15);
  border-radius: 10rpx;
  border: 1rpx solid #ED5708;
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.classRoomBox text:nth-child(1) {
  font-size: 36rpx;
  font-weight: 500;
  color: #ED5708;
  line-height: 36rpx;
}

.classRoomBox text:nth-child(2) {
  font-size: 30rpx;
  font-weight: 400;
  color: #ED5708;
  line-height: 30rpx;
  margin-top: 14rpx;
}

.classRoomBox .joinBtn {
  width: 118rpx;
  height: 64rpx;
  background: linear-gradient(90deg, #FF5053 0%, #FF1E41 100%);
  border-radius: 6rpx;
  text-align: center;
  line-height: 64rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: #FFFFFF;
  position: absolute;
  top: 50%;
  right: 42rpx;
  transform: translateY(-50%);
}

.noneBox {
  width: 100%;
  height: 220rpx;
}