/* page/index/pages/allLesson/allLesson.wxss */
.pageTop {
  width: calc(100vw - 60rpx);
  height: 80rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
  margin: 20rpx auto;
  background: #F5F6FA;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
}

.pageTop image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.pageTop text {
  font-size: 36rpx;
  font-weight: 400;
  color: #CCCCCC;
}

.contrainer {
  height: calc(100vh - 120rpx);
  border-top: 1rpx solid #EDEDED;
  display: flex;
}

.contrainer .scrollLeft {
  width: 220rpx;
  height: 100%;
  background: #F7F7F7;
}

.contrainer .scrollRight {
  flex: 1;
  min-height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.contrainer .scrollRight .scrollView {
  height: 100%;
  padding-bottom: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.contrainer .scrollLeft .navItem {
  width: 100%;
  text-align: center;
  line-height: 108rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: #666666;
}

.contrainer .scrollLeft .active {
  background: #fff;
  position: relative;
  color: #F2323A;
  font-weight: 500;
}

.contrainer .scrollLeft .active text {
  width: 9rpx;
  height: 50rpx;
  background: #F2323A;
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -25rpx;
}

.scrollRight .swiperItem {
  overflow-y: scroll;
}

.scrollRight .lessonBox {
  width: 100%;
  padding: 20rpx 0;
}

.scrollRight .lessonBox .activity {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  display: block;
}

.scrollRight .lessonBox .lessonItem {
  display: flex;
  flex-wrap: wrap;
}

.scrollRight .lessonBox .lessonItem image {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx 20rpx 0 0;
}

.scrollRight .lessonBox .lessonItem image:nth-child(3n) {
  margin-right: 0;
}

.scrollRight .down {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  margin-top: 20rpx;
  margin-bottom: 80rpx;

}

::-webkit-scrollbar {
  display: none;
}