/* page/live/pages/liveCertificate/liveCertificate.wxss */
page {
  background: #EDEDED;
  padding-bottom: 140rpx;
}

.canvansBox {
  width: 690rpx;
  height: 1012rpx;
  position: relative;
  margin: 32rpx auto;
}

.canvansBox .certificate {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}

.canvansBox .nick {
  width: 204rpx;
  font-size: 40rpx;
  font-weight: 400;
  color: #3A3A3A;
  position: absolute;
  top: 278rpx;
  left: 90rpx;
  text-align: center;
}

.canvansBox .name {
  width: 306rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: #3A3A3A;
  position: absolute;
  left: 173rpx;
  top: 369rpx;
  text-align: center;
}

.canvansBox .date {
  font-size: 30rpx;
  font-weight: 400;
  color: #666666;
  line-height: 46rpx;
  position: absolute;
  left: 84rpx;
  bottom: 252rpx;
  display: flex;
  flex-direction: column;
}

.canvansBox .qrBox {
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  bottom: 208rpx;
  right: 83rpx;
}

.canvansBox .qrBox image:nth-child(1) {
  width: 100%;
  height: 100%;
}

.canvansBox .qrBox image:nth-child(2) {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.btnBox {
  width: 100vw;
  position: fixed;
  bottom: 0;
  background: #FFFFFF;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.btnBox .btn {
  width: 330rpx;
  height: 100rpx;
  background: linear-gradient(90deg, #FFB441 0%, #FE9B02 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btnBox .btn text {
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-left: 10rpx;
}

.btnBox .btn:nth-child(1) image {
  width: 44rpx;
  height: 40.86rpx;
}

.btnBox .btn:nth-child(2) {
  background: linear-gradient(90deg, #43DE80 0%, #1CCA61 100%);
}

.btnBox .btn:nth-child(2) image {
  width: 50rpx;
  height: 40rpx;
}