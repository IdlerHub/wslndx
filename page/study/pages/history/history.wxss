/* page/study/pages/history/history.wxss */
page {
  height: 100%;
}

.pageTop {
  height: 116rpx;
  background: #F5F6FA;
  display: flex;
  border-bottom: 1rpx solid #E9E9E9;
}

.pageTop .tabItem {
  width: 50%;
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
  color: #999999;
  position: relative;
  line-height: 116rpx;
}

.pageTop .active {
  font-size: 42rpx;
  font-weight: 500;
  color: #F2323A;
}

.pageTop .tabItem text {
  width: 36rpx;
  height: 6rpx;
  background: #F2323A;
  border-radius: 6rpx;
  position: absolute;
  bottom: -1rpx;
  left: 50%;
  transform: translateX(-50%);
}

.qstBox {
  height: calc(100% - 116rpx);
  padding-top: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qstBox image {
  width: 452rpx;
  height: 288rpx;
}

.qstBox text:nth-child(2) {
  font-size: 36rpx;
  font-weight: 400;
  color: #999999;
  line-height: 50rpx;
}

.qstBox .navigator {
  width: 264rpx;
  height: 80rpx;
  background: #F2323A;
  border-radius: 46rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: #FFFFFF;
  margin-top: 40rpx;
}

.swiper {
  height: calc(100% - 116rpx);
}

.scrollView {
  height: 100%;
}

.liveItem {
  padding: 30rpx 0;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #E9E9E9;
}

.liveItem image {
  width: 260rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.liveItem .liveRight {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 0;
}

.liveItem .liveRight text:nth-child(1) {
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 36rpx;
  font-weight: 400;
  color: #3A3A3A;
  line-height: 50rpx;
}

.liveItem .liveRight text:nth-child(2) {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  margin-top: 10rpx;
}

.lessonBox {
  padding: 30rpx 20rpx 0 20rpx;
}

.lessonBox .title {
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
}

.lessonBox .lessonItem {
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #E9E9E9;
  display: flex;
}

.lessonBox .lessonItem .lessonLeft {
  position: relative;
  width: 260rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
  overflow: hidden;
}

.lessonBox .lessonItem .lessonLeft .cover {
  width: 100%;
  height: 100%;
}

.lessonBox .lessonItem .lessonLeft .mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background: rgba(75, 51, 51, 0.6);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.lessonBox .lessonItem .lessonLeft .mask image {
  width: 50rpx;
  height: 50rpx;
}

.lessonBox .lessonItem .lessonLeft .mask text {
  font-size: 30rpx;
  font-weight: 400;
  color: #FFFFFF;
  margin-top: 10rpx;
}

.lessonBox .lessonItem .lessonRight {
  flex: 1;
  width: 0;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.lessonBox .lessonItem .lessonRight .title {
  font-size: 36rpx;
  font-weight: 400;
  color: #3A3A3A;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0;
}

.lessonBox .lessonItem .lessonRight .bottom .studyNum {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.lessonBox .lessonItem .lessonRight .bottom .studyLine {
  height: 8rpx;
  background: rgba(233, 233, 233, 0.6);
  border-radius: 4rpx;
  margin-top: 10rpx;
}

.lessonBox .lessonItem .lessonRight .bottom .studyLine text {
  display: block;
  height: 100%;
  background: #F2323A;
  border-radius: 4rpx;
}