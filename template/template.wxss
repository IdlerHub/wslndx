.wrap>.item {
  background: #fff;
  margin-bottom: 20rpx;
}

.wrap>.item:last-of-type {
  border-bottom: none;
}

.wrap>.item .top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 30rpx 20rpx;
}

.wrap>.item .top .date {
  font-size: 26rpx;
  color: #bdbdbd;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  display: inline-block;
}

.wrap>.item .top .left {
  display: flex;
  align-items: center;
}

.wrap>.item .top .avatarUrl {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 1rpx solid #d8d8d8;
  background: #e9e9e9;
  position: relative;
}

.wrap>.item .top .avatarUrl image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.wrap>.item .top .avatarUrl .fs {
  width: 22rpx;
  height: 24rpx;
  position: absolute;
  bottom: 0rpx;
  right: -6rpx;
}

.wrap>.item .top .text {
  margin-left: 20rpx;
  width: 400rpx;
  /* overflow: hidden;
  text-overflow: ellipsis; */
  white-space: nowrap;
}

.wrap>.item .top .nickName {
  font-size: 40rpx;
  color: #343434;
  display: flex;
  align-items: center;
}

.wrap>.item .top .school {
  margin-top: 5rpx;
  margin-left: 21rpx;
  font-size: 26rpx;
  color: #bdbdbd;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width: 280rpx;
  display: inline-block;
}

.wrap>.item .top .right {
  display: flex;
  align-items: center;
}

.wrap>.item .top .right .attension {
  width: 100rpx;
  height: 48rpx;
  border-radius: 28rpx;
  border: 1px solid rgba(223, 32, 32, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(223, 32, 32, 1);
  text-align: center;
  line-height: 48rpx;
  margin-right: 25rpx;
}

.wrap>.item .top .right .collect {
  padding-bottom: 39rpx;
  color: #B3B3B3;
  font-size: 54rpx;
}

.wrap>.item .name {
  text-justify: newspaper;
  word-break: break-all;
  width: 100%;
  line-height: 60rpx;
  font-size: 40rpx;
  color: #3a3a3a;
  word-wrap: break-word;
  white-space: pre-line;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
  overflow: hidden;
  padding: 0 30rpx;
  box-sizing: border-box;
  /* text-align: justify; */
}

.wrap>.item .content {
  padding: 0 30rpx;
}

.wrap>.item .content .img {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
}

.wrap>.item .content .img image {
  margin-top: 20rpx;
}

.wrap>.item .content .img.one {
  max-height: 100vh;
  overflow: hidden;
}

.wrap>.item .content .img.one image {
  /* width: 400rpx; */
  background: #e9e9e9;
  border-radius: 12rpx;
}

.wrap>.item .content .img.three image {
  width: 216rpx;
  height: 216rpx;
  margin-right: 20rpx;
  background: #e9e9e9;
  border-radius: 6rpx;
}

.wrap>.item .content .img.three image:nth-of-type(3n) {
  margin-right: 0;
}

.wrap>.item .content video {
  margin-top: 20rpx;
  width: 100%;
  height: 350rpx;
}

.wrap>.item .content .poster {
  width: 100%;
  filter: brightness(0.8);
  background: #e9e9e9;
  border-radius: 6rpx;
}

.wrap>.item .content .bg {
  position: relative;
  margin-top: 20rpx;
  width: 400rpx;
}

.wrap>.item .content .play {
  position: absolute;
  z-index: 2;
  width: 74rpx;
  height: 74rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.wrap>.item .label {
  display: inline-block;
  background: #FFF6E6;
  margin: 0 30rpx 20rpx 30rpx;
  padding: 0 20rpx;
  line-height: 44rpx;
  border-radius: 6rpx;
  color: #DB9200;
  font-size: 28rpx;
  text-align: center;
}

.wrap .btn {
  height: 125rpx;
  margin-top: 10rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 60rpx 0 40rpx;
  border-top: 1rpx solid #E9E9E9;
}

.wrap .btn .division {
  width: 2rpx;
  height: 40rpx;
  background: #dbdbdb;
}

.wrap>.item .top .left .loadingTxt {
  width: 240rpx;
  height: 42rpx;
  background: #f5f6f8;
  border-radius: 8rpx;
}

.wrap>.item .top .left .loadingTxt:nth-child(2) {
  width: 230rpx;
  height: 32rpx;
  background: #f5f6f8;
  border-radius: 8rpx;
}

.wrap>.item .top .loadingDate {
  width: 121rpx;
  height: 43rpx;
  background: #f5f6f8;
  border-radius: 8rpx;
}

.wrap>.item .contentTxt {
  width: 690rpx;
  height: 33rpx;
  background: #f5f6f8;
  border-radius: 8rpx;
}

.wrap>.item .likeComment {
  background: #FBFBFB;
  border-radius: 8rpx;
  padding-left: 19rpx;
  overflow: hidden;
  margin: 20rpx 30rpx 20rpx 30rpx;
}

.wrap>.item .likesavatar {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.wrap>.item .likesavatar .likesLeft {
  display: flex;
  align-items: center;
}

.wrap>.item .likesavatar .likesLeft image {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  border: 2rpx solid #fff;
}

.wrap>.item .likesavatar .likesLeft .likeTxt {
  margin-left: 5rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(126, 126, 126, 1);
}

.wrap>.item .lastComment {
  padding: 10rpx 0 20rpx 0;
}

.wrap>.item .lastComment .lastContet {
  display: flex;
  align-items: center;
}

.wrap>.item .lastComment .lastContet text {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(126, 126, 126, 1);
}

.wrap>.item .lastComment .lastContet rich-text {
  flex: 1;
  width: 0;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(126, 126, 126, 1);
  margin-left: 20rpx;
}

.wrap>.item .lastComment .more {
  display: flex;
  align-items: center;
  overflow: hidden;
}

.wrap>.item .lastComment .more text {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(179, 179, 179, 1);
}

.wrap>.item .lastComment .more image {
  width: 14rpx;
  height: 25rpx;
  margin-left: 10rpx;
  margin-top: 4rpx;
}

.btn>.item {
  /* flex: 1; */
  display: flex;
  align-items: center;
  /* padding-left: 20px; */
  box-sizing: border-box;
}

.btn>.item:nth-child(1) {
  padding-left: 0;
  justify-content: center;
}

.btn>.item:nth-child(2) {
  padding-left: 30px;
  justify-content: center;
}

.btn>.item:nth-child(3) {
  justify-content: center;
}

.btn>.item .iconfont {
  font-size: 58rpx;
  color: #bdbdbd;
  text-align: center;
}

.btn>.item .container-sub {
  display: flex;
  align-items: center;
}

.btn>.item .praise {
  width: 125rpx;
  height: 125rpx;
  background-size: cover;
  background-image: url("https://jinling-xcx-dev.obs.cn-north-1.myhuaweicloud.com/images/pro/heart-ani.png");
  animation-fill-mode: forwards;
}

.btn>.item .praise.end {
  background-position: 100% 0;
}

.btn>.item .praise.ani {
  animation: ani steps(20) 1s both;
}

.btn>.item .praise+.text {
  margin-left: -20rpx;
}

.btn>.item .text {
  margin-left: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #3a3a3a;
  letter-spacing: 0;
  line-height: 40rpx;
}