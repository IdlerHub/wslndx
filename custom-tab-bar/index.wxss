/* components/navBar/navBar.wxss */
.tabbar {
  position: fixed;
  height: 128rpx;
  width: 100%;
  bottom: 0;
  background: rgba(248, 248, 248, 0.99);
  display: flex;
  justify-content: space-around;
  z-index: 1;
  border-top: 2rpx solid #e9e9e9; }

.tabbar .item {
  width: 126rpx;
  text-align: center;
  line-height: 24rpx;
  position: relative;
  overflow: visible; }
  .tabbar .item button {
    overflow: visible; }

.tabbar .item .badge {
  position: absolute;
  background: #df2020;
  top: 8px;
  right: -21px;
  min-width: 15px;
  height: 20px;
  padding: 0 5rpx;
  line-height: 20px;
  border-radius: 20rpx;
  font-size: 14px;
  color: white;
  letter-spacing: 1px; }

.tabbar .item .tab-container {
  display: flex;
  flex-direction: column;
  align-items: center; }

.tabbar .icon {
  width: 80rpx;
  height: 80rpx; }

.tabbar .name {
  display: block;
  font-size: 42rpx;
  color:rgba(151,151,151,1);
  padding-top: 30rpx;
  line-height: 45rpx; }
.tabbar .active {
  color: rgba(223,32,32,1);
  font-weight: 550;
}
.tabbar .resRow {
  width:40rpx;
  height:6rpx;
  background:rgba(223,32,32,1);
  border-radius:3px;
  margin: 15rpx 43rpx;
}

